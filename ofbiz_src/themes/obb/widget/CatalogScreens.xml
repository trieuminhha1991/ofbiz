	<screen name="product">
		<section>
			<actions>
				<set field="configproductdetailScreen"
					value="component://obb/widget/CatalogScreens.xml#configproductdetail" />
				<script
					location="component://order/webapp/ordermgr/WEB-INF/actions/entry/catalog/Product.groovy" />
			</actions>
			<widgets>
				<section>
					<condition>
						<not>
							<if-empty field="product" />
						</not>
					</condition>
					<widgets>
						<include-screen name="${detailScreen}" />
					</widgets>
					<fail-widgets>
						<label style="head2">${uiLabelMap.ProductProductNotFound}
							${productId}!
						</label>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>

	<screen name="productdetail">
		<section>
			<actions>
				<property-map resource="BaseEcommerceUiLabels" map-name="uiLabelMap"
					global="true" />
				<property-map resource="ObbUiLabels" map-name="uiLabelMap"
					global="true" />
				<script
					location="component://baseecommerce/webapp/baseecommerce/WEB-INF/actions/catalog/ProductSummaryCache.groovy" />
				<script
					location="component://baseecommerce/webapp/baseecommerce/WEB-INF/actions/facebook/facebookSettings.groovy" />
				<set field="prefixOlbiusLink" value="/baseecommerce/control/"
					global="true" />
			</actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template
							location="component://obb/webapp/obb/includes/facebook/fbinit.ftl" />
					</html>
				</platform-specific>
				<platform-specific>
					<html>
						<html-template
							location="component://obb/webapp/obb/includes/catalog/productdetail.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>

	<screen name="productmaindetail">
		<section>
			<actions>
				<script
					location="component://baseecommerce/webapp/baseecommerce/WEB-INF/actions/catalog/ProductSummaryCache.groovy" />
				<script
					location="component://baseecommerce/webapp/baseecommerce/WEB-INF/actions/catalog/Breadcrumbs.groovy" />
				<set field="layoutSettings.styleSheets[+0]" value="/obbresources/ImageZoom/demo/css/demo.css" />
				<set field="layoutSettings.styleSheets[+0]" value="/obbresources/ImageZoom/demo/css/imagezoom/imagezoom.css" />
				<set field="layoutSettings.styleSheets[+0]" value="/obbresources/ImageZoom/demo/css/elastislide/es-cus.css" />
			</actions>
			<widgets>
				<decorator-screen name="main-detail"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<container id="jm-container" style="jm-col1-layout wrap  clearfix">
							<container style="main clearfix">
								<container id="jm-mainbody" style="clearfix">
										<container id="jm-current-content" style="clearfix">
											<platform-specific>
												<html>
													<html-template
														location="component://obb/webapp/obb/includes/breadcrum.ftl" />
												</html>
											</platform-specific>
											<container style='container content-container'>
												<container style='row'>
													<container style='col-lg-9 col-md-9'>
														<platform-specific><html>
																<html-template location="component://obb/webapp/obb/includes/catalog/productdetailmain.ftl" />
														</html></platform-specific>
														<include-screen name="facebookcomment" location="${parameters.mainDecoratorLocation}"/>
													</container>
													<container style='col-lg-3 col-md-3 product-related'>
														<include-screen name="RelatedProduct"/>
													</container>
												</container>
											</container>
											
										</container>
								</container>
							</container>
						</container>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
