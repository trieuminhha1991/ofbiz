<?xml version="1.0" encoding="UTF-8"?>
<ofbiz-component name="obb"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">
    <!-- define resource loaders; most common is to use the component resource loader -->
    <resource-loader name="main" type="component"/>
	<classpath type="dir" location="config"/>
    <!-- entity resources: model(s), eca(s), group, and data definitions -->
    <entity-resource type="data" reader-name="seed" loader="main" location="data/obbThemeData.xml"/>

    <!-- web applications; will be mounted when using the embedded Jetty container -->
    <webapp name="obb"
        title="The Obb Shop"
        menu-name="secondary"
        server="default-server"
        location="webapp/obb"
        mount-point="/obb"
        app-bar-display="false"/>
    <webapp name="obbresources"
        title="The Obb Shop"
        menu-name="secondary"
        server="default-server"
        location="webapp/obb/resources"
        mount-point="/obbresources"
        app-bar-display="false"/>
</ofbiz-component>
