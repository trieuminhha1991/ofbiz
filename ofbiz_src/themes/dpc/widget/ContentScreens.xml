<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

	<screen name="content-decorator">
        <section>
            <actions>
            </actions>
            <widgets>
		<decorator-screen name="root-decorator" location="${parameters.mainDecoratorLocation}">
			<decorator-section name="body">
				<container style="wnews">
					<decorator-section-include name="before"/>
					<decorator-section-include name="body"/>
					<decorator-section-include name="after"/>
				</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <!-- Column Included Screens -->
	<screen name="newcontent">
        <section>
            <actions>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/category.groovy"/>

				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getContentByCategory.groovy"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getNewComment.groovy"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getTopRightContent.groovy"/>
				<set field="type" value="newest"/>
            </actions>
            <widgets>
                <decorator-screen name="content-decorator" location="component://dpc/widget/ContentScreens.xml">
                    <decorator-section name="body">
						<container style='container'>
							<platform-specific>
	                            <html><html-template location="component://dpc/webapp/dpc/includes/content/newcategory.ftl"/></html>
	                        </platform-specific>
							<include-screen name="hotnews"/>
	                        <include-screen name="listcontent"/>
						</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="hotnews">
	<section>
		<actions>
			<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getTopContent.groovy"/>
		</actions>
		<widgets>
			<platform-specific>
                    <html><html-template location="component://dpc/webapp/dpc/includes/content/topnew.ftl"/></html>
                </platform-specific>
		</widgets>
	</section>
    </screen>
    <screen name="latestnews">
	<section>
		<actions>
			<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getLatestNews.groovy"/>
		</actions>
		<widgets>
			<platform-specific>
                    <html><html-template location="component://dpc/webapp/dpc/includes/content/latestnews.ftl"/></html>
                </platform-specific>
		</widgets>
	</section>
    </screen>
    <screen name="categorycontent">
        <section>
            <actions>
				<set field="type" value="category"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/category.groovy"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getContentByCategory.groovy"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getNewComment.groovy"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getTopRightContent.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="content-decorator" location="component://dpc/widget/ContentScreens.xml">
                    <decorator-section name="body">
						<container style='container'>
							<platform-specific>
	                            <html><html-template location="component://dpc/webapp/dpc/includes/content/newcategory.ftl"/></html>
	                        </platform-specific>
							<include-screen name="listcontent"/>
						</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="listcontent">
		<section>
			<actions>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getTopContent.groovy"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getContentByCategory.groovy"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getNewComment.groovy"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getTopRightContent.groovy"/>
			</actions>
			<widgets>
				<container style="wrap_cate">
			<platform-specific>
                      <html><html-template location="component://dpc/webapp/dpc/includes/content/newcontent.ftl"/></html>
                  </platform-specific>
                  <include-screen name="pagination" location="${parameters.mainDecoratorLocation}"/>
                 </container>
                 <include-screen name="posttopcomment"/>
                 <container style="colrelate">
					<platform-specific>
                      <html><html-template location="component://dpc/webapp/dpc/includes/content/listNewComment.ftl"/></html>
                  </platform-specific>
                  <platform-specific>
                      <html><html-template location="component://dpc/webapp/dpc/includes/content/usageTips.ftl"/></html>
                  </platform-specific>
                 </container>
			</widgets>
		</section>
	</screen>
	<screen name="posttopcomment">
		<section>
			<actions>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getPostTopComment.groovy"/>
				<script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/Banners.groovy"/>
			</actions>
			<widgets>
				<platform-specific>
                      <html><html-template location="component://dpc/webapp/dpc/includes/content/topcomment.ftl"/></html>
                  </platform-specific>
			</widgets>
		</section>
	</screen>
	<screen name="viewcontent">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleViewContent"/>
                <set field="headerItem" value="Content"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/category.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/content.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getRelatedPost.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getContentByCategory.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="content-decorator" location="component://dpc/widget/ContentScreens.xml">
                    <decorator-section name="body">
						<container style='container'>
							<platform-specific>
						<html><html-template location="component://dpc/webapp/dpc/includes/content/newcategory.ftl"/></html>
		                    </platform-specific>
							<container style='row'>
								<container style='col-lg-8'>
									<platform-specific>
										<html><html-template location="component://dpc/webapp/dpc/includes/content/viewcontent.ftl"/></html>
									</platform-specific>
									<platform-specific>
										<html><html-template location="component://dpc/webapp/dpc/includes/catalog/productRelatePost.ftl"/></html>
									</platform-specific>
									<platform-specific>
										<html><html-template location="component://dpc/webapp/dpc/includes/content/comment.ftl"/></html>
									</platform-specific>
								</container>
								<container style='col-lg-4'>
									<platform-specific>
										<html><html-template location="component://dpc/webapp/dpc/includes/content/rightbar.ftl"/></html>
									</platform-specific>
									<platform-specific>
										<html><html-template location="component://dpc/webapp/dpc/includes/content/newestContent.ftl"/></html>
									</platform-specific>
								</container>
							</container>
						</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="recentlyviewed">
        <section>
            <actions>
                <script location="component://storeBase/webapp/storeBase/WEB-INF/actions/content/Mrv.groovy"/>
            </actions>
            <widgets>
                <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/content/recentlyviewed.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <!-- =========== Top-Level and Stand-Alone Screens =========== -->

    <screen name="defaultcontent">
        <section>
            <actions>
                <set field="leftbarScreenName" value="leftbar"/>
                <set field="MainColumnStyle" value="leftonly"/>

                <set field="titleProperty" value="PageTitleContentPage"/>
                <set field="headerItem" value="main"/>
                <script location="component://storeBase/webapp/storeBase/WEB-INF/actions/Main.groovy"/>
                <script location="component://storeBase/webapp/storeBase/WEB-INF/actions/content/ContentPrep.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/content/defaultcontent.ftl"/></html></platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="showcontenttree">
        <section>
            <actions>
                <set field="leftbarScreenName" value="leftbar"/>
                <set field="rightbarScreenName" value="rightbar"/>
                <set field="MainColumnStyle" value="center"/>

                <set field="titleProperty" value="PageTitleViewBlog"/>
                <set field="headerItem" value="Blog"/>
                <set field="formDefFile" value="/BlogForms.xml"/>
                <set field="entityName" value="Content"/>
                <set field="permissionType" value="none"/>
                <script location="component://storeBase/webapp/storeBase/WEB-INF/actions/forum/NodeTrailPrep.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/content/showcontenttree.ftl"/></html></platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="searchContent">
        <section>
            <actions>
                <set field="leftbarScreenName" value="leftbar"/>
                <set field="rightbarScreenName" value="rightbar"/>
                <set field="MainColumnStyle" value="center"/>

                <set field="titleProperty" value="PageTitleShoppingCart"/>
                <set field="headerItem" value="ContentMenu"/>
                <set field="formDefFile" value="component://dpc/widget/ContentForms.xml"/>
                <set field="entityName" value=""/>
                <set field="permission" value="CONTENTMGR"/>
                <set field="permissionType" value="simple"/>
                <set field="queryFormName" value="searchQuery"/>
                <set field="listFormName" value="searchList"/>
                <set field="defaultSiteId" value="WebStoreCONTENT"/>
                <script location="component://storeBase/webapp/storeBase/WEB-INF/actions/content/AdvancedSearchPrep.groovy"/>
                <script location="component://storeBase/webapp/storeBase/WEB-INF/actions/content/Search.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/content/searchContent.ftl"/></html></platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="ListFAQ">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleViewContent"/>
                <set field="headerItem" value="Content"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/category.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/content.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getRelatedPost.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getContentByCategory.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="content-decorator" location="component://dpc/widget/ContentScreens.xml">
                    <decorator-section name="body">
						<container style='container'>
							<container style='row'>
								<container style='col-lg-8'>
									<platform-specific>
										<html><html-template location="component://dpc/webapp/dpc/includes/content/listFAQ.ftl"/></html>
									</platform-specific>
								</container>
								<container style='col-lg-4'>
									<platform-specific>
										<html><html-template location="component://dpc/webapp/dpc/includes/content/FAQCategory.ftl"/></html>
									</platform-specific>
								</container>
							</container>
						</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="ViewFAQ">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleViewContent"/>
                <set field="headerItem" value="Content"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/category.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/content.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getRelatedPost.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/content/getContentByCategory.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="content-decorator" location="component://dpc/widget/ContentScreens.xml">
                    <decorator-section name="body">
						<container style='container'>
							<container style='row'>
								<container style='col-lg-8'>
									<platform-specific>
										<html><html-template location="component://dpc/webapp/dpc/includes/content/viewFAQ.ftl"/></html>
									</platform-specific>
								</container>
								<container style='col-lg-4'>
									<platform-specific>
										<html><html-template location="component://dpc/webapp/dpc/includes/content/FAQCategory.ftl"/></html>
									</platform-specific>
								</container>
							</container>
						</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>
