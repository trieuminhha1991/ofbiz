<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <screen name="root-decorator">
        <section>
            <actions>
                <!-- base/top/specific map first, then more common map added for shared labels -->
                <property-map resource="DpcEcommerceUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="EcommerceUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="ContentUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="ProductUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="AccountingUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="PartyUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="OrderUiLabels" map-name="uiLabelMap" global="true"/>

                <!-- The default (global) shortcut icon -->
                <set field="layoutSettings.shortcutIcon" value="/dpc/images/favicon.ico" global="true"/>

                <!-- The default (main) java scripts -->
                <!-- NOTE: this should be included on each screen that uses it to avoid including it in all screens: -->
                <set field="initialLocaleComplete" type="String" value="${groovy:parameters?.userLogin?.lastLocale}" default-value="${groovy:locale.toString()}"/>

                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/EcommerceSetup.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/customer/ViewProfile.groovy"/>
                <!-- Get the store VisualTheme -->
                <set field="visualThemeId" from-field="productStore.visualThemeId" default-value="EC_DEFAULT"/>
                <service service-name="getVisualThemeResources">
                    <field-map field-name="visualThemeId"/>
                    <field-map field-name="themeResources" from-field="layoutSettings"/>
                </service>
                <set field="layoutSettings" from-field="themeResources" default-value="${layoutSettings}" global="true"/>
                <set field="layoutSettings.javaScripts[+0]" value="/dpc/js/jquery-1.11.2.js" global="true"/>
                <set field="layoutSettings.javaScripts[+1]" value="/dpc/js/bootstrap.js" global="true"/>
                <set field="layoutSettings.javaScripts[+2]" value="/images/jquery/plugins/validate/jquery.validate.min.js" global="true"/>
                <set field="layoutSettings.javaScripts[+2]" value="/dpc/js/utils.js" global="true"/>
                <entity-and list="webAnalyticsConfigs" entity-name="WebAnalyticsConfig">
                    <field-map field-name="webSiteId"/>
                </entity-and>
                <set field="profile" from-field="basicInfo" global="true"/>
            </actions>
            <widgets>
               <section>
                  <condition>
                     <not><if-empty field="globalContext.productStore"/></not>
                  </condition>
                  <widgets>
                     <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/headerHead.ftl"/></html></platform-specific>
                     <platform-specific><html><html-template location="component://common/webcommon/includes/openhtmlbody.ftl"/></html></platform-specific>
                     <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/headerNav.ftl"/></html></platform-specific>
					 <container style='wrapper'>
						<decorator-section-include name="body"/>
					 </container>
                    <!-- render footer -->
	                <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/footer.ftl"/></html></platform-specific>
	                <platform-specific><html><html-template location="component://common/webcommon/includes/closehtmlbody.ftl"/></html></platform-specific>
                  </widgets>
                  <fail-widgets>
                     <label text="A Product Store has not been defined for this ecommerce site.  A Product Store can be created using the ofbizsetup wizard."/>
                  </fail-widgets>
               </section>
            </widgets>
        </section>
    </screen>
    <screen name="main-decorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="root-decorator" location="${parameters.mainDecoratorLocation}">
			<decorator-section name="body">
				<container style="whome">
					<decorator-section-include name="before"/>
					<decorator-section-include name="body"/>
					<decorator-section-include name="after"/>
				</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="common-decorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="root-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<container style="common-wrapper">
							<decorator-section-include name="before"/>
							<decorator-section-include name="body"/>
							<decorator-section-include name="after"/>
						</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="filter-decorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="root-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<container style="common-wrapper">
							<decorator-section-include name="before"/>
							<decorator-section-include name="body"/>
							<decorator-section-include name="after"/>
						</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

   <screen name="main">
        <section>
            <actions>
                <set field="leftbarScreenName" value="leftbar"/>
                <set field="MainColumnStyle" value="center"/>

                <set field="titleProperty" value="PageTitleMain"/>
                <set field="headerItem" value="main"/>
<!-- 				<set field="parameters.productCategoryId" value="HTGC_BESTSELLING"/> -->

                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/Main.groovy"/>
                <script location="component://order/webapp/ordermgr/WEB-INF/actions/entry/catalog/Category.groovy"/>

            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
						<container style='container'>
							<platform-specific>
	                            <html><html-template location="component://dpc/webapp/dpc/main.ftl"/></html>
	                        </platform-specific>
						</container>
                    </decorator-section>
                    <decorator-section name="after">
						<platform-specific>
                            <html><html-template location="component://dpc/webapp/dpc/includes/home/keyword.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
	<screen name="login">
        <section>
            <actions>
				<set field="leftbarScreenName" value="leftbar"/>
                <set field="titleProperty" value="PageTitleLogin"/>
                <set field="headerItem" value="login"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/Login.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="root-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="leftside">
						<platform-specific>
                            <html><html-template location="component://dpc/webapp/dpc/includes/leftLoginSide.ftl"/></html>
                        </platform-specific>
                        <include-screen name="productCategoriesSpecial" location="component://dpc/widget/CatalogScreens.xml"/>
                    </decorator-section>
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://dpc/webapp/dpc/login.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="account-decorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="root-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="leftside">
						<platform-specific>
                            <html><html-template location="component://dpc/webapp/dpc/includes/leftLoginSide.ftl"/></html>
                        </platform-specific>
                        <include-screen name="productCategoriesSpecial" location="component://dpc/widget/CatalogScreens.xml"/>
                    </decorator-section>
                    <decorator-section name="body">
						<decorator-section-include name="body"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="pagination">
        <section>
            <actions>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/catalog/Pagination.groovy"/>
            </actions>
		    <widgets>
				<container style='container'>
					<platform-specific>
						<html><html-template location="component://dpc/webapp/dpc/includes/common/pagination.ftl"/></html>
					</platform-specific>
				</container>
		</widgets>
        </section>
    </screen>
</screens>
