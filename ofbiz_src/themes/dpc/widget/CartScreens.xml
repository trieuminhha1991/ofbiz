<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="cart-decorator">
        <section>
            <actions>
            </actions>
            <widgets>
				<decorator-screen name="root-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<container style="wrapper_checkout">
							<decorator-section-include name="before"/>
							<decorator-section-include name="body"/>
							<decorator-section-include name="after"/>
						</container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <!-- Column Included Screens -->
    <screen name="microcart">
        <section>
            <widgets>
                <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/cart/microcart.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>
    <screen name="minicart">
        <section>
          <actions>
              <set field="hidetoplinks" value="Y"/>
              <set field="hidebottomlinks" value="N"/>
          </actions>
            <widgets>
                <platform-specific><html><html-template location="component://order/webapp/ordermgr/entry/cart/minicart.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>
    <screen name="minipromotext">
        <section>
            <actions>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/cart/ShowPromoText.groovy"/>
            </actions>
            <widgets>
                <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/cart/minipromotext.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <screen name="promoUseDetailsInline">
        <section>
            <widgets>
                <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/cart/promoUseDetailsInline.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <!-- =========== Top-Level and Stand-Alone Screens =========== -->

    <screen name="showcart">
        <section>
            <actions>
                <set field="leftbarScreenName" value="leftbar"/>
                <set field="MainColumnStyle" value="center"/>
                <set field="titleProperty" value="PageTitleShoppingCart"/>
                <set field="headerItem" value="Shopping Cart"/>
                <property-to-field resource="order" property="orderPreference.giftEnable" field="giftEnable" default="Y"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/cart/ShowCart.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/cart/ShowPromoText.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/common/geo.groovy"/>
				<set field="layoutSettings.javaScripts[+0]" value="/dpc/asset/jqwidgets/jqxcore.js" global="true"/>
				<set field="layoutSettings.javaScripts[+1]" value="/dpc/asset/jqwidgets/jqxexpander.js" global="true"/>
				<set field="layoutSettings.javaScripts[+2]" value="/dpc/asset/jqwidgets/jqxvalidator.js" global="true"/>
				<set field="layoutSettings.javaScripts[+2]" value="/dpc/asset/jqwidgets/jqxtooltip.js" global="true"/>
                <set field="layoutSettings.javaScripts[+3]" value="/dpc/js/cart/showcart.js" global="true"/>
                <set field="layoutSettings.styleSheets[+0]" value="/dpc/asset/jqwidgets/styles/jqx.base.css" global="true"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/cart/inittime.groovy"/>

            </actions>
            <widgets>
                <decorator-screen name="cart-decorator" location="component://dpc/widget/CartScreens.xml">
                    <decorator-section name="body">
						<platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/cart/showcart.ftl"/></html></platform-specific>
<!-- 						<platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/cart/checkoutstep2.ftl"/></html></platform-specific> -->
<!-- 						<platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/cart/checkoutfinalstep.ftl"/></html></platform-specific> -->
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="showAllPromotions">
        <section>
            <actions>
                <set field="leftbarScreenName" value="leftbar"/>
                <set field="MainColumnStyle" value="leftonly"/>

                <set field="promoUseDetailsInlineScreen" value="component://dpc/widget/CartScreens.xml#promoUseDetailsInline"/>

                <set field="titleProperty" value="PageTitleShowAllPromotions"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/cart/ShowCart.groovy"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/cart/ShowPromoText.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="common-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific><html><html-template location="component://order/webapp/ordermgr/entry/cart/showAllPromotions.ftl"/></html></platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="showPromotionDetails">
        <section>
            <actions>
                <set field="leftbarScreenName" value="leftbar"/>
                <set field="rightbarScreenName" value="rightbar"/>
                <set field="MainColumnStyle" value="center"/>
                <set field="productsummaryScreen" value="component://dpc/widget/CatalogScreens.xml#productsummary"/>
                <set field="titleProperty" value="PageTitleShowPromotionDetails"/>
                <script location="component://order/webapp/ordermgr/WEB-INF/actions/entry/cart/ShowPromotionDetails.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="common-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <include-screen name="promotion" location="component://dpc/widget/OrderEntryCartScreens.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="UpdateCart">
        <section>
            <actions>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="OrderUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="ContentUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="EcommerceUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="ProductUiLabels" map-name="uiLabelMap" global="true"/>
                <script location="component://dpcecommerce/webapp/dpcecommerce/WEB-INF/actions/cart/ShowCart.groovy"/>
            </actions>
            <widgets>
                <platform-specific><html><html-template location="component://dpc/webapp/dpc/includes/cart/UpdateCart.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>
</screens>
