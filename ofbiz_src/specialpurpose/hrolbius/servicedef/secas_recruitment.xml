<?xml version="1.0" encoding="UTF-8"?>
<service-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/service-eca.xsd">
	<eca service="updateWorkEffortPartyAssignment" event="commit">
		<condition operator="equals" field-name="assignmentStatusId" value="APPL_PROPOSED"/>
		<action mode="sync" service="createOfferProbation"/>
	</eca>
	<eca service="createRecruitmentPlanHeader" event="commit">
		<action mode="sync" service="createRecruitmentPlanDTHeader"/>
	</eca>
	<eca service="createOrUpdateRecruitmentPlan" event="commit">
		<action mode="sync" service="createOrUpdateRecruitmentPlanDT"/>
	</eca>
	<eca service="updateRecruitmentPlanHeader" event="commit">
		<action mode="sync" service="updateRecruitmentPlanDTHeader"/>
	</eca>
	<eca service="updateSaleRecruitmentPlanHeader" event="commit">
		<action mode="sync" service="updateSaleRecruitmentPlanDTHeader" result-to-context="false"/>
	</eca>
</service-eca>	