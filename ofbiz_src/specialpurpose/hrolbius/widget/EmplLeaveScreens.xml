                <!-- <set field="selectedMenuItem" value="profile"/> -->
				<!-- <set field="selectedselectedMenuItemItem" value="profile"/> --> 
                 <set field="partyId" from-field="userLogin.partyId"/>
                <!--<set field="leaveTypeId" from-field="parameters.leaveTypeId"/>
