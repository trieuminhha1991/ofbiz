                <!-- <entity-one entity-name="EmplLeave" value-field="leaveApp">
                    
                </entity-one> -->
            </actions>
            <widgets>
                 <decorator-screen name="EmplTimeMgrDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<section>
                    		<condition>
                    			<if-has-permission permission="HR_EMPLEAVE" action="_VIEW"/>
                    		</condition>
                    		<actions>
                    			<set field="emplId" from-field="partyId"/>
