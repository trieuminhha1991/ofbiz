								</entity-condition>
								<entity-condition list="leaveReasonTypes" entity-name="EmplLeaveReasonType"></entity-condition>
                    		</actions>
	                    	<widgets>
		                        <screenlet id="AddEmplLeavePanel" title="${uiLabelMap.HREmplLeaveCreate}" collapsible="false">
		                            <platform-specific>
		                            	<html>
		                            		<html-template location="component://hrolbius/webapp/hrolbius/ftl/employee/EditEmplLeave.ftl"/>
		                            	</html>
