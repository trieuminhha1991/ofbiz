<?xml version="1.0" encoding="UTF-8"?>
<menus xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../../framework/widget/dtd/widget-menu.xsd">
	<!-- Sub Recruitment Menu-->
	<menu name="RecruitmentMenus" modelMenu="businessSubMenu" selected-menuitem-context-field-name="selectedSubMenuItem">
		<menu-item name="RecruitmentPlan" title="${uiLabelMap.RecruitmentPlan}">
			<condition>
				<if-has-permission permission="HR_RECRUITMENT_PLAN" action="_VIEW"/>
			</condition>
			<link target="FindRecruitmentPlan"></link>
		</menu-item>
		<menu-item name="SaleRecruitmentPlan" title="${uiLabelMap.SaleRecruitmentPlan}">
			<condition>
				<if-has-permission permission="HR_SALE_RECRUITMENT_PLAN" action="_VIEW"/>
			</condition>
			<link target="FindSaleRecruitmentPlan"></link>
		</menu-item>
		<menu-item name="RecruitmentPlanDT" title="${uiLabelMap.RecruitmentPlanDT}">
			<condition>
				<if-has-permission permission="HR_RECRUITMENT_PLAN_DT" action="_VIEW"/>
			</condition>
			<link target="FindRecruitmentPlanDT"></link>
		</menu-item>
		<menu-item name="JobRequest" title="${uiLabelMap.JobRequest}">
			<condition>
				<if-has-permission permission="HR_JOB_REQUEST" action="_VIEW"/>
			</condition>
			<link target="FindJobRequest"></link>
		</menu-item>
		<menu-item name="RecruitmentProcess" title="${uiLabelMap.OfficeEmplRecruitmentProcess}" >
			<condition>
				<if-has-permission permission="HR_RECRUITMENT_PROCESS" action="_VIEW"/>
			</condition>
			<link target="FindRecruitmentProcess"></link>
		</menu-item>
		<menu-item name="SaleEmplRecruitmentProcess" title="${uiLabelMap.SaleEmplRecruitmentProcess}" >
			<condition>
				<if-has-permission permission="HR_SE_RECRUITMENT_PROCESS" action="_VIEW"/>
			</condition>
			<link target="FindSaleEmplRecruitmentProcess"></link>
		</menu-item>
		<menu-item name="Induction" title="${uiLabelMap.Induction}" >
			<condition>
				<if-has-permission permission="HR_INDUCTION" action="_VIEW"/>
			</condition>
			<link target="FindInduction"></link>
		</menu-item>
		<menu-item name="FindProbation" title="${uiLabelMap.Probation}">
			<condition>
				<if-has-permission permission="HR_PROBATION" action="_VIEW"/>
			</condition>
			<link target="FindProbation"></link>
		</menu-item>
	</menu>
	
	<menu name="InductionSubTarBar" modelMenu="olbiustab" extends="CommonTabBarMenu"
		extends-resource="component://common/widget/CommonMenus.xml" id="InductionSubTarBar" >
		<menu-item name="listSelectedAppl" title="${uiLabelMap.listSelectedAppl}">
			<link target="FindSelectedAppl">
				<parameter param-name="workEffortId" from-field="parameters.workEffortId"/>
			</link>
		</menu-item>
		<menu-item name="listInductedAppl" title="${uiLabelMap.listInductedAppl}">
			<link target="FindInductedAppl">
				<parameter param-name="workEffortId" from-field="parameters.workEffortId"/>
			</link>
		</menu-item>
		<menu-item name="listInductedAppl" title="${uiLabelMap.listInductedAppl}">
			<link target="FindInductedAppl">
				<parameter param-name="workEffortId" from-field="parameters.workEffortId"/>
			</link>
		</menu-item>
	</menu>
	
	<menu name="InductionTabBar" modelMenu="olbiustab" extends="CommonTabBarMenu"
		extends-resource="component://common/widget/CommonMenus.xml" id="InductionTabBar" >
		<menu-item name="FindInduction" title="${uiLabelMap.NormalInduction}">
			<link target="FindInduction"></link>
		</menu-item>
		<menu-item name="FindDirectedInduction" title="${uiLabelMap.DirectedInduction}">
			<link target="FindDirectedInduction">
				<parameter param-name="workEffortId" value="_NA_"/>
			</link>
		</menu-item>
	</menu>
	
	<menu name="RecruitmentPlanTabBar" modelMenu="olbiustab" extends="CommonTabBarMenu"
		extends-resource="component://common/widget/CommonMenus.xml" selected-menuitem-context-field-name="tabButtonItem" id="test">
		<menu-item name="FindRecruitmentPlan" title="${uiLabelMap.FindRecruitmentPlan}">
			<condition>
				<if-has-permission permission="HR_RECRUITMENT_PLAN_CREATE"/>
			</condition>
			<link target="FindRecruitmentPlan"></link>
		</menu-item>
		<menu-item name="FindRecruitmentPlanSummary" title="${uiLabelMap.FindRecruitmentPlanSummary}">
			<condition>
				<if-has-permission permission="HR_RECRUITMENT_PLAN_SUM"/>
			</condition>
			<link target="FindRecruitmentPlanSummary"></link>
		</menu-item>
		<menu-item name="CheckRecruitmentPlan" title="${uiLabelMap.CheckRecruitmentPlan}">
			<condition>
				<if-has-permission permission="HR_RECRUITMENT_PLAN_CHECK"/>
			</condition>
			<link target="CheckRecruitmentPlan"></link>
		</menu-item>
		<menu-item name="ProposeRecruitmentPlan" title="${uiLabelMap.ProposeRecruitmentPlan}">
			<condition>
				<if-has-permission permission="HR_RECRUITMENT_PLAN_PROPOSE"/>
			</condition>
			<link target="ProposeRecruitmentPlan"></link>
		</menu-item>
		<menu-item name="ApproveRecruitmentPlan" title="${uiLabelMap.ApproveRecruitmentPlan}">
			<condition>
				<if-has-permission permission="HR_RECRUITMENT_PLAN_APPR"/>
			</condition>
			<link target="ApproveRecruitmentPlan"></link>
		</menu-item>
	</menu>
</menus>