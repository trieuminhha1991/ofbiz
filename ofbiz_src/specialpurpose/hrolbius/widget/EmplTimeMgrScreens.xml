    <screen name="EmplWorkOvertimeRegis">
    	<section>
    		<actions>
				<set field="selectedMenuItem" value="EmplTimekeeping" />
				<set field="selectedSubMenuItem" value="mgrWorkingOvertime"/>
				<set field="titleProperty" value="HREmplWorkOvertimeRegis"/>
				<set field="tabButtonItem" value="regisWorkOvertime"/>
				<set field="tabBarName" value="EmplTimeMgrTabBar" global="true" />
				<set field="tabBarLocation"
					value="component://hrolbius/widget/menus/PayrollMenus.xml"
					global="true" />
			</actions>
			<widgets>
				<decorator-screen name="EmplTimekeepingDecorator" location="component://hrolbius/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<actions>
								<entity-condition list="statusListWorkOvertime" entity-name="StatusItem">
									<condition-expr field-name="statusTypeId" value="WOT_REGISTER"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<set field="partyId" from-field="userLogin.partyId"/>
							</actions>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://hrolbius/webapp/hrolbius/ftl/employee/EmplWorkOvertimeRegis.ftl"/>
									</html>
								</platform-specific>
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
    	</section>
    </screen>
    
