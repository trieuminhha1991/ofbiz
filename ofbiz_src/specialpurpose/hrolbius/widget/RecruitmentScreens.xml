	<screen name="LeaderReview">
		<section>
			<actions>
				<property-map resource="RecruitmentUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <entity-and list="list" entity-name="ProbationaryReviewView">
                	<field-map field-name="offerProbationId" from-field="parameters.offerProbationId"/>
                	<field-map field-name="roleTypeId" value="MANAGER"/>
                </entity-and>
                <set field="leaderReview" from-field="list[0]"/>
			</actions>
			<widgets>
				<section>
					<condition>
						<or>
							<if-empty field="leaderReview"/>
							<if-compare operator="equals" field="leaderReview.statusId" value="PROB_RP_LREVIEWED"></if-compare>						
						</or>
					</condition>
					<widgets>
						<platform-specific>
							<html>
								<html-template location="component://hrolbius/webapp/hrolbius/ftl/recruitment/jqxLeaderReview.ftl"></html-template>
							</html>
						</platform-specific>
					</widgets>
					<fail-widgets>
						<platform-specific>
							<html>
								<html-template location="component://hrolbius/webapp/hrolbius/ftl/recruitment/jqxDisplayLeaderReview.ftl"></html-template>
							</html>
						</platform-specific>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>
	
