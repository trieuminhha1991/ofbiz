<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<!-- Screens for internal job posting -->
	<screen name="RecruitmentReport">
		<section>
			<actions>
				<set field="selectedMenuItem" value="Report"/>
				<set field="titleProperty" value="PageTitleRecruitmentReport" />
			</actions>
			<widgets>
				<decorator-screen name="ReportDecorator"
					location="component://hrolbius/widget/CommonScreens.xml">
					<decorator-section name="body">
						<screenlet title="${uiLabelMap.ScreenletTitle_RecruitmentReport}">
						</screenlet>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>