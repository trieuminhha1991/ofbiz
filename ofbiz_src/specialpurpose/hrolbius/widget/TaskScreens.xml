    <screen name="ViewProjectTask">
        <section>
            <actions>
                <set field="workEffortId" from-field="parameters.workEffortId" default-value="${parameters.id}"/>
                <set field="projectId" from-field="parameters.workEffortId"/>
                <set field="isReadable" value="true"/>
                <property-map resource="ProjectMgrUiLabels"
						map-name="uiLabelMap" global="true" />
                <service service-name="getProjectTask" result-map="taskResult">
                    <field-map field-name="taskId" from-field="workEffortId"/>
                </service>
                <set field="task" from-field="taskResult.taskInfo"/>
                <service service-name="getProjectIdAndNameFromTask" result-map="projectResult">
                    <field-map field-name="taskId" from-field="workEffortId"/>
                </service>
            </actions>
            <widgets>
            	<container style="row-fluid">
            	<container style="span12 no-left-margin">
            		  <include-screen name="taskInfo"/>
            	</container>
            	<container style="clear-all"></container>
            	<horizontal-separator></horizontal-separator>
            	<container style="span12 no-left-margin">
            		<container style="span6 no-left-margin">
	                    <screenlet title="${uiLabelMap.PageTitleTasksBefore}" id="taskBeforeId" collapsible="true" initially-collapsed="true">
                    		 <container id="table-container"> <include-screen name="taskBefore"/></container>
	                    </screenlet>
                      	<screenlet title="${uiLabelMap.PageTitleTasksAfter}" id="taskAfterId" collapsible="true" initially-collapsed="true">
	                    	 <container id="table-container"><include-screen name="taskAfter"/></container>
                    	</screenlet>
                    	<screenlet title="${uiLabelMap.ProjectMgrTaskTeam}" id="TaskTeamInfoId" collapsible="true" initially-collapsed="true">
		                    <container id="table-container"> <include-screen name="TaskTeamInfo"/></container>
	                    </screenlet>
	                </container>
	                <container style="span6">
