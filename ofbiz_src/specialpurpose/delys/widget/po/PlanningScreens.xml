    <screen name="ListPOPlan">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleListPlanning"/>
                <set field="buttonBarItem" value="PageTitleListPlanning"/>
                <set field="planTypeId" value="DEPARTMENT_PLAN"/>
                <entity-condition list="listUom" entity-name="Uom" use-cache="true">
                    <condition-list combine="or">
                    	<condition-expr field-name="uomTypeId" operator="equals" value="PRODUCT_PACKING"/>
                    	<condition-expr field-name="uomTypeId" operator="equals" value="OTHER_MEASURE"/>        
                    	<condition-expr field-name="uomTypeId" operator="equals" value="WEIGHT_MEASURE"/>
                    	<condition-expr field-name="uomTypeId" operator="equals" value="VOLUME_LIQ_MEASURE"/>
                    	<condition-expr field-name="uomTypeId" operator="equals" value="AREA_MEASURE"/>
                    	<condition-expr field-name="uomTypeId" operator="equals" value="LENGTH_MEASURE"/>
                    	<condition-expr field-name="uomTypeId" operator="equals" value="TIME_FREQ_MEASURE"/>
                    	<condition-expr field-name="uomTypeId" operator="equals" value="DATASPD_MEASURE"/>
                    	<condition-expr field-name="uomTypeId" operator="equals" value="DATA_MEASURE"/>
                    </condition-list>
                </entity-condition>
                <set field="layoutSettings.javaScripts[+0]" value="/delys/images/js/ckeditor/ckeditor.js"
					global="true" />
                <entity-condition list="listCurrency" entity-name="Uom">
                	<condition-expr field-name="uomTypeId" operator="equals" value="CURRENCY_MEASURE"/>
                	<order-by field-name="description"/>
                </entity-condition>
                <set field="procurementCategory"  value="PROCUREMENT_CATEGORY" />
            </actions>
            <widgets>
               <decorator-screen name="CommonPlanningDecorator" location="component://delys/widget/PO/PlanningScreens.xml">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://delys/webapp/delys/procurement/planning/listPlanningPO.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
            </widgets>
        </section>
    </screen>
