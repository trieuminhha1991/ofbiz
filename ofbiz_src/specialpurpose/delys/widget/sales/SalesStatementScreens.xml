<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <screen name="CommonCommissionDecorator">
    	<section>
    		<actions>
    			<set field="selectedMenuItem" value="statementAndPolicy"/>
    			<set field="tabBarName" value="SalesCommissionTabBar" global="true"/>
    			<set field="tabBarLocation" value="component://delys/widget/sales/SalesMenus.xml" global="true"/>
    			<set field="printTabBar" value="true"/>
    		</actions>
    		<widgets>
    			<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<decorator-section-include name="body"/>
                    </decorator-section>
                </decorator-screen>
    		</widgets>
    	</section>
    </screen>
	<screen name="SalesCommissionDataList">
		<section>
			<actions>
				<set field="selectedSubMenuItem" value="salesCommissionDataList"/>
				<set field="titleProperty" value="DAListSalesCommissionDataResult"/>
				<set field="tabButtonItem" value="salesCommissionDataList"/>
			</actions>
			<widgets>
				<decorator-screen name="CommonCommissionDecorator">
					<decorator-section name="body">
						<platform-specific>
							<html><html-template location="component://delys/webapp/delys/sales/commission/salesCommissionDataListJQ.ftl"/></html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="SalesCommissionCalculate">
		<section>
			<actions>
				<set field="selectedSubMenuItem" value="salesCommissionDataList"/>
				<set field="titleProperty" value="DASalesCommissionCalculate"/>
				<set field="tabButtonItem" value="salesCommissionCalculate"/>
			</actions>
			<widgets>
				<decorator-screen name="CommonCommissionDecorator">
					<decorator-section name="body">
						<screenlet title="${uiLabelMap.DASalesCommissionCalculate}">
							<platform-specific>
								<html><html-template location="component://delys/webapp/delys/sales/commission/salesCommissionCalculateJQ.ftl"/></html>
							</platform-specific>
						</screenlet>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="SalesCommissionDataApprove">
		<section>
			<actions>
				<set field="selectedSubMenuItem" value="salesCommissionDataList"/>
				<set field="titleProperty" value="DASalesCommissionDataApprove"/>
				<set field="tabButtonItem" value="salesCommissionDataApprove"/>
			</actions>
			<widgets>
				<decorator-screen name="CommonCommissionDecorator">
					<decorator-section name="body">
						<platform-specific>
							<html><html-template location="component://delys/webapp/delys/sales/commission/salesCommissionDataListApproveJQ.ftl"/></html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>