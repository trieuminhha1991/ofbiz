<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	
	<screen name="ListReturns">
    	<section>
	    	<actions>
	    		<set field="selectedMenuItem" value="receiveProduct"/>
                <set field="selectedSubMenuItem" value="Returns"/>
				<set field="titleProperty" value="OrderOrderReturn"/>
    		</actions>
    		<widgets>
    			<decorator-screen name="DelysCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
							<platform-specific>
                            	<html><html-template location="component://delys/webapp/delys/sales/return/listReturnOrderComJQ.ftl"/></html>
                            </platform-specific>
					</decorator-section>
				</decorator-screen>
    		</widgets>
   		</section>
    </screen>
	
	<screen name="DetailReturnOrder">
    	<section>
	    	<actions>
	    		<set field="selectedMenuItem" value="receiveProduct"/>
                <set field="selectedSubMenuItem" value="Returns"/>
				<set field="titleProperty" value="OrderOrderReturn"/>
				<entity-one value-field="returnHeader" entity-name="ReturnHeader">
                	<field-map field-name="returnId" from-field="parameters.returnId"/>
                </entity-one>
                <set field="companyId" value="${groovy: org.ofbiz.entity.util.EntityUtilProperties.getPropertyValue('general.properties', 'ORGANIZATION_PARTY', delegator)}"/>
    		</actions>
    		<widgets>
    			<decorator-screen name="DelysCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<screenlet navigation-menu-name="LogReturnOrderSubTabBar" title="${uiLabelMap.DetailReturn}">
							<include-menu name="LogReturnOrderSubTabBar" location="component://delys/widget/DelysMenus.xml" />
							<platform-specific>
                            	<html><html-template location="component://delys/webapp/delys/sales/return/viewReturnOrderGeneralJQ.ftl"/></html>
                            </platform-specific>
                        </screenlet>
					</decorator-section>
				</decorator-screen>
    		</widgets>
   		</section>
    </screen>
    
    <screen name="DeliveryByReturn">
    	<section>
	    	<actions>
	    		<set field="selectedMenuItem" value="receiveProduct"/>
                <set field="selectedSubMenuItem" value="Returns"/>
    		</actions>
    		<widgets>
    			<decorator-screen name="DelysCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<platform-specific>
                        	<html><html-template location="component://delys/webapp/delys/logistics/delivery/listReceiveDelivery.ftl"/></html>
                        </platform-specific>
					</decorator-section>
				</decorator-screen>
    		</widgets>
   		</section>
    </screen>
    
    <screen name="CreateReturnDelivery">
    	<section>
	    	<actions>
	    		<set field="selectedMenuItem" value="receiveProduct"/>
                <set field="selectedSubMenuItem" value="Returns"/>
    		</actions>
    		<widgets>
    			<decorator-screen name="DelysCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<platform-specific>
                        	<html><html-template location="component://delys/webapp/delys/logistics/delivery/detailDelivery.ftl"/></html>
                        </platform-specific>
					</decorator-section>
				</decorator-screen>
    		</widgets>
   		</section>
    </screen>
</screens>