	<!-- ===========Fixed Asset Depreciation Screen========== -->
	<screen name="ShowFixedAssetDepreciation">
		<section>
			<actions>
				<set field="titleProperty" value="PageTitleFixedAssetDepreciationReport" />
				<set field="tabButtonItem" value="FixedAssetDepreciation" />
				<set field="labelTitleProperty" value="PageTitleFixedAssetDepreciationReport" />
				<set field="fixedAssetId" from-field="parameters.fixedAssetId" />
				<entity-one entity-name="FixedAsset" value-field="fixedAsset"
					auto-field-map="true" />
				<service service-name="calculateFixedAssetDepreciation"
					result-map="assetDepreciationResultMap">
					<field-map field-name="fixedAssetId" from-field="parameters.fixedAssetId" />
				</service>
				<set field="assetDepreciationInfoList"
					from-field="assetDepreciationResultMap.assetDepreciationInfoList" />
				<set field="assetDepreciationResultMessages" from-field="assetDepreciationResultMap.successMessageList" />
				<set field="depreciation" from-field="fixedAsset.depreciation"
					default-value="0.0" type="BigDecimal" />
					<set field="convertDate" from-field="fixedAsset.dateAcquired" default-value="${resultDate}" type="Date"/>
				<set field="organizationPartyId" from-field="fixedAsset.partyId" />
				<set field="purchaseCostUomId" from-field="fixedAsset.purchaseCostUomId" />
				<set field="fixedAssetTypeId" from-field="fixedAsset.fixedAssetTypeId" />
				<script location="component://delys/webapp/delys/WEB-INF/actions/accounting/FixedAssetTypeGlAccounts.groovy"/>
               <entity-condition list="listProfitGlAccount" entity-name="GlAccountOrganizationAndClass">
                	<condition-list>
                		<condition-expr field-name="glAccountClassId" operator="equals" value="CASH_INCOME"/>
                		<condition-expr field-name="organizationPartyId" operator="equals" from-field="fixedAsset.partyId"/>
                	</condition-list>
                </entity-condition>
                <entity-condition list="listLossGlAccount" entity-name="GlAccountOrganizationAndClass">
                	<condition-list >
                		<condition-expr field-name="organizationPartyId" operator="equals" from-field="fixedAsset.partyId"/>
                		<condition-expr field-name="glAccountClassId" operator="equals" value="SGA_EXPENSE"/>
                	</condition-list>
                </entity-condition>	
                <entity-condition list="listFixedAssetType" entity-name="FixedAssetType">
               		<order-by field-name="description"/>
                </entity-condition>                			
			</actions>
			<widgets>
				<decorator-screen name="CommonFixedAssetDecorator"
					location="${parameters.fixedAssetDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<screenlet
									title="${uiLabelMap.PageTitleFixedAssetDepreciationHistory}" navigation-menu-name="ListFixedAssetsSubTabBar">
<!-- 									<include-menu location="component://delys/widget/accounting/fixedAsset/FixedAssetMenus.xml" name="ListFixedAssetsSubTabBar"/> -->
									<container style="width:100%;margin-right:5px;form-group">
										<container style="row-fluid">
											<container  style="span6">
												<label style="aggregate-label">${uiLabelMap.FormFieldTitle_purchaseCost}: </label> 
												<label style="aggregate-value">${fixedAsset.purchaseCost}</label> 
											</container>
											<container style="span6">
												<label style="aggregate-label">${uiLabelMap.FormFieldTitle_depreciation}: </label>
												<label style="aggregate-value">${depreciation}</label> 
											</container>	
										</container>								
										<container style="row-fluid bordertop">
											<container  style="span6">
												<label style="aggregate-label">${uiLabelMap.FormFieldTitle_salvageValue}: </label> 
												<label style="aggregate-value">${fixedAsset.salvageValue}</label> 												
											</container>
											<container style="span6">
												<label style="aggregate-label">${uiLabelMap.FormFieldTitle_dateAcquired}: </label> 
												<label style="aggregate-value">${convertDate}</label> 			
											</container>	
										</container>
										<container style="row-fluid bordertop">
											<container  style="span6">
												<label style="aggregate-label">${uiLabelMap.FormFieldTitle_expectedEndOfLife}: </label> 
												<label style="aggregate-value">${fixedAsset.expectedEndOfLife}</label> 			 
											</container>
											<container style="span6">
												<label style="aggregate-label">${uiLabelMap.FormFieldTitle_NextDepreciationAmount}: </label> 
												<label style="aggregate-value">${assetDepreciationResultMap.nextDepreciationAmount}</label>
											</container>	
										</container>		
									</container>
									<section>
										<condition>
											<and>
												<not>
													<if-empty
														field="assetDepreciationResultMap.plannedPastDepreciationTotal" />
												</not>
												<not>
													<if-empty field="fixedAsset.partyId" />
												</not>
												<if-compare-field
													field="assetDepreciationResultMap.plannedPastDepreciationTotal"
													to-field="depreciation" operator="greater" type="BigDecimal" />
											</and>
										</condition>
										<actions>
											<service service-name="getGlAccountFromAccountType"
												result-map="defaultCreditAccountForDepreciationTransactionResult">
												<field-map field-name="organizationPartyId"
													from-field="fixedAsset.partyId" />
												<field-map field-name="acctgTransTypeId" value="DEPRECIATION" />
												<field-map field-name="fixedAssetId" from-field="fixedAsset.fixedAssetId" />
												<field-map field-name="debitCreditFlag" value="C" />
											</service>
											<set field="defaultCreditAccountForDepreciationTransaction"
												from-field="defaultCreditAccountForDepreciationTransactionResult.glAccountId"
												default-value=" " />
											<service service-name="getGlAccountFromAccountType"
												result-map="defaultDebitAccountForDepreciationTransactionResult">
												<field-map field-name="organizationPartyId"
													from-field="fixedAsset.partyId" />
												<field-map field-name="acctgTransTypeId" value="DEPRECIATION" />
												<field-map field-name="fixedAssetId" from-field="fixedAsset.fixedAssetId" />
												<field-map field-name="debitCreditFlag" value="D" />
											</service>
											<set field="defaultDebitAccountForDepreciationTransaction"
												from-field="defaultDebitAccountForDepreciationTransactionResult.glAccountId"
												default-value=" " />
										</actions>
										<widgets>
											<container>
												<link
													text="${uiLabelMap.accCreateAnDepreciationAccountingTransaction}: ${assetDepreciationResultMap.plannedPastDepreciationTotal}"
													 style="btn btn-small btn-info" target="CreateAcctgTransAndEntries">
													<parameter param-name="fixedAssetId" from-field="fixedAsset.fixedAssetId" />
													<parameter param-name="organizationPartyId"
														from-field="fixedAsset.partyId" />
													<parameter param-name="acctgTransTypeId" value="DEPRECIATION" />
													<parameter param-name="debitGlAccountId"
														from-field="defaultDebitAccountForDepreciationTransaction" />
													<parameter param-name="creditGlAccountId"
														from-field="defaultCreditAccountForDepreciationTransaction" />
													<parameter param-name="amount"
														from-field="assetDepreciationResultMap.plannedPastDepreciationTotal" />
												</link>
											</container>
										</widgets>
									</section>
								</screenlet>
<!-- 								<screenlet title="${uiLabelMap.PageTitleFixedAssetDepreciationMethod}"> -->
									<platform-specific>
										<html>
											<html-template location="component://delys/webapp/delys/accounting/fixedAsset/listFixedAssetDepreciationMethod.ftl"></html-template>
										</html>
									</platform-specific>	
<!-- 								</screenlet> -->
<!-- 								<screenlet title="${uiLabelMap.AccountingGlMappings}"> -->
<!-- 									<include-form name="AddFixedAssetTypeGlAccount" -->
<!-- 										location="component://delys/widget/accounting/fixedAsset/FixedAssetForms.xml" /> -->
<!-- 									<container style="smaller blue lighter"> -->
<!-- 									<label style="h4">${uiLabelMap.PageTitleFixedAssetMappings} -->
<!-- 									</label> -->
<!-- 									</container> -->
<!-- 									<include-form name="FixedAssetTypeGlAccounts" -->
<!-- 										location="component://delys/widget/accounting/fixedAsset/FixedAssetForms.xml" /> -->
<!-- 										<container style="smaller blue lighter"> -->
<!-- 									<label style="h4">${uiLabelMap.PageTitleFixedAssetGlobalMappings} -->
<!-- 									</label> -->
<!-- 									</container> -->
									<platform-specific>
										<html>
											<html-template location="component://delys/webapp/delys/accounting/fixedAsset/listFixedAssetTypeGlAccount.ftl"></html-template>
										</html>
									</platform-specific>
									 <platform-specific>
										<html>
											<html-template location="component://delys/webapp/delys/accounting/fixedAsset/listGlobalFixedAssetTypeGlAccount.ftl"></html-template>
										</html>
									</platform-specific>
<!-- 									<include-form name="GlobalFixedAssetTypeGlAccounts" -->
<!-- 										location="component://delys/widget/accounting/fixedAsset/FixedAssetForms.xml" /> -->
<!-- 								</screenlet> -->
								<section>
									<condition>
										<not>
											<if-empty field="assetDepreciationInfoList" />
										</not>
									</condition>
									<widgets>
<!-- 										<screenlet -->
<!-- 											title="${uiLabelMap.PageTitleFixedAssetDepreciationReport}"> -->
<!-- 											<include-form name="ListFixedAssetDepreciations" -->
<!-- 												location="component://delys/widget/accounting/fixedAsset/FixedAssetForms.xml" /> -->
<!-- 										</screenlet> -->
										 <platform-specific>
											<html>
												<html-template location="component://delys/webapp/delys/accounting/fixedAsset/listFixedAssetDepreciationReport.ftl"></html-template>
											</html>
										</platform-specific>										
									</widgets>
									<fail-widgets>
										<screenlet
											title="${uiLabelMap.PageTitleFixedAssetDepreciationReport}">
											<container style="smaller blue lighter">
											<label style="h4">${assetDepreciationResultMessages}</label>
											</container>
										</screenlet>
									</fail-widgets>
								</section>
<!-- 								<screenlet title="${uiLabelMap.AccountingTransactions}"> -->
<!-- 									<include-form name="FixedAssetTransactions" -->
<!-- 										location="component://delys/widget/accounting/fixedAsset/FixedAssetForms.xml" /> -->
<!-- 								</screenlet> -->
									 <platform-specific>
										<html>
											<html-template location="component://delys/webapp/delys/accounting/fixedAsset/listFixedAssetTransactions.ftl"></html-template>
										</html>
									</platform-specific>	
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

