<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">
    <!-- OrderContent -->
    <simple-method method-name="createOrderContent" short-description="Create Content For Order">
        <make-value value-field="newEntity" entity-name="OrderContentPaymentOrder"/>
        <set-pk-fields map="parameters" value-field="newEntity"/>
        <set-nonpk-fields map="parameters" value-field="newEntity"/>
        <create-value value-field="newEntity"/>
        <!-- <set-service-fields service-name="updateContent" map="parameters" to-map="updateContent"/> -->
        <!-- <call-service service-name="updateContent" in-map-name="updateContent"/> -->
        <field-to-result field="newEntity.contentId" result-name="contentId"/>
        <field-to-result field="newEntity.orderId" result-name="orderId"/>
        <field-to-result field="newEntity.orderContentTypeId" result-name="orderContentTypeId"/>
    </simple-method>
    <simple-method method-name="removeOrderContent" short-description="Remove Content For Order">
    	<entity-one value-field="orderContentPaymentOrder" entity-name="OrderContentPaymentOrder"></entity-one>
    	<if-not-empty field="orderContentPaymentOrder">
    		<remove-value value-field="orderContentPaymentOrder"/>
    	</if-not-empty>
    </simple-method>
</simple-methods>