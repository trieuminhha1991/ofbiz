<ofbiz-component enabled="true" name="mobileapp"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">
	<!-- define resource loaders; most common is to use the component resource
		loader -->
	<resource-loader name="main" type="component" />

	<!-- web applications; will be mounted when using the embedded container -->
	<webapp name="mobileapp" title="Mobile App" menu-name="secondary"
		server="default-server" location="webapp/mobileapp" mount-point="/mobileapp"
		app-bar-display="false" base-permission="SALESMANGT" />

	<webapp name="salesrep" title="Sales Representative" menu-name="secondary"
		server="default-server" location="webapp/salesrep" mount-point="/salesrep"
		app-bar-display="false" base-permission="SALESMANGT" />
		
	<webapp name="salessup" title="Sales Sup" menu-name="secondary"
		server="default-server" location="webapp/salessup" mount-point="/salessup"
		app-bar-display="false" base-permission="SALESMANGT" />
</ofbiz-component>