<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
            	<property-map resource="notificationUiLabels" map-name="uiLabelMap" global="true"/>
            	<property-map resource="notificationErrorUiLabels" map-name="uiLabelMap" global="true"/>
            	<property-map resource="BaseSalesUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseSalesErrorUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="AppBaseUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseSalesMtlUiLabels" map-name="uiLabelMap" global="true"/>
				<!-- HR Uilabels  -->
				<property-map resource="BaseHRUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRDirectoryUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHREmployeeUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHREmploymentUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRInsuranceUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRPayrollUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRTrainingUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRRecruitmentUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRKeyPerfIndicatorUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHROlapUiLabels" map-name="uiLabelMap" global="true"/>
				<!-- ./end -->
				<!-- Logistics -->
				<property-map resource="BaseLogisticsUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="BaseLogisticsErrorUiLabels" map-name="uiLabelMap" global="true"/>
				<!-- PO -->
				<property-map resource="BasePOUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="PlanUiLabels" map-name="uiLabelMap" global="true"/>
				
                <property-map resource="BaseAccountingUiLabels" map-name="uiLabelMap" global="true"/>
				<!--crm -->
				<property-map resource="BaseCRMUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="DmsUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="MarketingUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CustomMarketingUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="CallCenterUiLabels" map-name="uiLabelMap" global="true"/>
				<!--crm -->
				
				<!-- BaseEcommerceUiLabels -->
				<property-map resource="EcommerceUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="BaseEcommerceUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="EcommerceBackendUiLabels" map-name="uiLabelMap" global="true"/>
				<!-- BaseEcommerceUiLabels -->
				<!-- pos -->
				<property-map resource="BasePosUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="BasePosErrorUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="WidgetUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="WebPosSettingUiLabels" map-name="uiLabelMap" global="true" />
				<!-- pos -->
				<property-map resource="OldUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="AdministrationUiLabels" map-name="uiLabelMap" global="true"/>
				
                <set field="layoutSettings.companyName" from-field="uiLabelMap.AppBaseCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.AppBaseCompanySubtitle" global="true"/>

                <set field="activeApp" value="appbase" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://appbase/widget/AppBaseMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.AppBaseApplication}" global="true"/>
            	
            	<set field="componentResourceName" value="AppBase" global="true"/>
            	<set field="componentNameSc" value="appbase" global="true"/>
            	
            	<set field="layoutSettings.javaScripts[+0]" value="/aceadmin/jqw/jqwidgets/olbMain.js" global="true"/>
            	<script location="component://appbase/webapp/appbase/WEB-INF/actions/businessTitle.groovy"></script>
            </actions>
            <widgets>
                <include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="AppBaseCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="APPBASE" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.AppBaseViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="appbase">
		<section>
			<widgets>
				<include-menu location="component://appbase/widget/AppBaseMenus.xml"
					name="AppBaseAppBar" />
			</widgets>
		</section>
	</screen>
	
	<screen name="WizardSystem">
		<section>
			<actions>
				<set field="titleProperty" value="AppBasePageTitleWizardSystem" />
				<script location="component://appbase/webapp/appbase/WEB-INF/actions/wizardSystem.groovy"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://appbase/webapp/appbase/wizard/wizardSystem.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="WizardSystem">
		<section>
			<actions>
				<set field="titleProperty" value="AppBasePageTitleWizardSystem" />
				<script location="component://appbase/webapp/appbase/WEB-INF/actions/wizardSystem.groovy"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://appbase/webapp/appbase/wizard/wizardSystem.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>