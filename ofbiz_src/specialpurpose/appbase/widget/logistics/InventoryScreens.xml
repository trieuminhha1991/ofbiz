<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="InventoryCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ListInventory">
    	<section>
    		<actions>
    			<set field="selectedMenuItem" value="Facility"/>
                <set field="selectedSubMenuItem" from-field="parameters.sub" default-value="ListFacility"/>
                <set field="tabBarName" value="FacilityTabBar" global="true" />
			    <set field="tabBarLocation" value="component://appbase/widget/AppBaseMenus.xml" global="true"/>
		     	<set field="tabButtonItem" value="Inventory" global="true"/>
			    <set field="printTabBar" value="true" />
			    <set field="facilityId" from-field="parameters.facilityId"/>
			    <entity-one value-field="facility" entity-name="FacilityAndProductStore"/>
			    <set field="titleHeaderValue" value="FacilityTitle" global="true"/>
				<set field="titleHeaderLocation" value="component://appbase/widget/logistics/FacilityScreens.xml" global="true"/>
    		</actions>
			<widgets>
             	<include-screen name="ListInventoryPublic" location="component://baselogistics/widget/InventoryScreens.xml"/>
			</widgets>
       </section>
    </screen>
    
    <screen name="ListAllInventory">
    	<section>
    		<actions>
    			<set field="selectedMenuItem" value="Inventory"/>
                <set field="selectedSubMenuItem" value="ListAllInventory"/>
    		</actions>
			<widgets>
             	<include-screen name="ListInventoryPublic" location="component://baselogistics/widget/InventoryScreens.xml"/>
			</widgets>
       </section>
    </screen>
    
    <screen name="ListProductToImport">
    	<section>
    		<actions>
    			<set field="selectedMenuItem" value="StockIn"/>
                <set field="selectedSubMenuItem" value="OtherImport"/>
    		</actions>
			<widgets>
             	<include-screen name="ListProductToImportPublic" location="component://baselogistics/widget/InventoryScreens.xml"/>
			</widgets>
       </section>
    </screen>
    
</screens>