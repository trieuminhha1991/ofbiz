<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="AppBaseMtlCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

	<screen name="dashboard">
		<section>
			<actions>
				<set field="titleProperty" value="Dashboard"/>
				<set field="layoutSettings.javaScripts[]" value="/aceadmin/assets/js/initDashboard.js" global="true"/>
                <script location="component://appbasemtl/webapp/appbasemtl/WEB-INF/actions/dashboardWorker.groovy"></script>
                <set field="selectedMenuItem" value="main"/>
			</actions>
			<widgets>
				<decorator-screen name="AppBaseMtlCommonDecorator" location="${parameters.mainDecoratorLocation}">
    				<decorator-section name="body">
						<container id="portalContainerId">
							<include-screen name="lib-report" location="component://bi-x/widget/libReport.xml" />
							<container id="PortletContainer" style="grid-stack">
							    <include-portal-page id="${portalPageId}" conf-mode="false" use-private="false"/>
							</container>
						</container>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>