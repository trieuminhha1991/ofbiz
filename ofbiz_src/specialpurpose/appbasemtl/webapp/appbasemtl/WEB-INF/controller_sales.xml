<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
    <include location="component://basesales/webapp/basesales/WEB-INF/controller.xml"/>
    <include location="component://basesales/webapp/basesales/WEB-INF/controller_report.xml"/>
    <include location="component://basesalesmtl/webapp/basesalesmtl/WEB-INF/controller_report.xml"/>
    <include location="component://basesales/webapp/basesales/WEB-INF/controller_setting.xml"/>
    <include location="component://basesales/webapp/basesales/WEB-INF/controller_loyalty.xml"/>
    <description>Sales module Site Configuration File</description>
    
    <!-- Request Mappings -->
    <request-map uri="newSalesOrder">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="NewSalesOrder"/>
	</request-map>
    <request-map uri="viewOrder">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="ViewOrder"/>
	</request-map>
    <view-map name="NewSalesOrder" type="screen" page="component://appbasemtl/widget/sales/OrderScreens.xml#NewSalesOrder"/>
    <view-map name="ViewOrder" type="screen" page="component://appbasemtl/widget/sales/OrderScreens.xml#ViewOrderDetail"/>
</site-conf>