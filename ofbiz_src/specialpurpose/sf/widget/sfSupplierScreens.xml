<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <screen name="FindSF">
        <section>
            <actions>
                <set field="navMenuName" value="SupplierSubTabBar" />
				<set field="navMenuLocation" value="component://sf/widget/sfMenus.xml" />
				<set field="titleProperty" value="PageTitleFindProduct" />
				<service service-name="findSupplier" auto-field-map="parameters"/>
            </actions>
            <widgets>
                <decorator-screen name="sfCommonSupplierDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
			<section>
                            <widgets>
								<decorator-screen name="FindScreenDecorator"
									location="component://common/widget/CommonScreens.xml">
									<decorator-section name="search-options">
										<platform-specific>
											<html><html-template location="component://sf/webapp/sf/supplier/findsupplier.ftl"/></html>
										</platform-specific>
									</decorator-section>
									<decorator-section name="search-results">
										<platform-specific>
											<html><html-template location="component://sf/webapp/sf/supplier/findresult.ftl"/></html>
										</platform-specific>
									</decorator-section>
								</decorator-screen>
							</widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="editSupplier">
        <section>
            <actions>
                <set field="navMenuName" value="SupplierSubTabBar" />
				<set field="navMenuLocation" value="component://sf/widget/sfMenus.xml" />
				<set field="titleProperty" value="PageTitleFindProduct" />
				<set field="partyId" from-field="userLogin.partyId"/>
				<entity-one value-field="supplier" entity-name="SellerFriend">
					<field-map field-name="partyId" from-field="partyId"/>
				</entity-one>
            </actions>
            <widgets>
                <decorator-screen name="sfCommonSupplierDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
			<section>
				<condition><if-empty field="supplier"/></condition>
                            <widgets>
				<screenlet title="${uiLabelMap.sfNewSupplier}" >
									<include-form location="component://sf/widget/sfForms.xml" name="EditSupplier"/>
								</screenlet>
							</widgets>
							<fail-widgets>
								<screenlet title="${uiLabelMap.sfEditSupplier}" >
									<include-form location="component://sf/widget/sfForms.xml" name="EditSupplier"/>
								</screenlet>
							</fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>