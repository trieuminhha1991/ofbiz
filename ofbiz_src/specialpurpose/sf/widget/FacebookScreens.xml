<?xml version="1.0" encoding="UTF-8"?>

<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="facebook">
		<section>
			<actions>
			    <set field="layoutSettings.javaScripts[+0]"
					value="/aceadmin/assets/js/bootstrap-tag.min.js"
					global="true" />
			    <set field="layoutSettings.styleSheets[+0]" value="/aceadmin/assets/css/fbsettings.css" />
			    <script
					location="component://sf/script/com/olbius/sf/facebook/FacebookSettings.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<if-has-permission permission="SF" action="_ADMIN" />
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template
											location="component://sf/webapp/sf/facebook/facebookSettings.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<label style="h3">${uiLabelMap.sfViewPermissionError}</label>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>