<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
	<request-map uri="ViewListEmplAgreement">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ViewListEmplAgreement"></response>
		<response name="error" type="view" value="ViewListEmplAgreement"></response>
	</request-map>
	<request-map uri="getAgreementEffectiveOfParty">
		<security https="true" auth="true" />
		<event type="java" invoke="getAgreementEffectiveOfParty" path="com.olbius.basehr.employment.events.AgreementEvents"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="getPartyAgreementInfo">
		<security https="true" auth="true" />
		<event type="java" invoke="getPartyAgreementInfo" path="com.olbius.basehr.employment.events.AgreementEvents"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="createEmploymentAgreement">
		<security https="true" auth="true" />
		<event type="service" invoke="preCreateEmploymentAgreement"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="updateEmploymentAgreement">
		<security https="true" auth="true" />
		<event type="service" invoke="preUpdateEmploymentAgreement"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="checkUpdateAgreementStatus">
		<security https="true" auth="true" />
		<event type="java" invoke="checkUpdateAgreementStatus" path="com.olbius.basehr.employment.events.AgreementEvents"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="uploadAgreementFile">
		<security https="true" auth="true" />
		<event type="service" invoke="uploadedFileAgreement"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="deleteAgreementContent">
		<security https="true" auth="true" />
		<event type="service" invoke="deleteAgreementContent"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="getAgreementContent">
		<security https="true" auth="true" />
		<event type="service" invoke="getAgreementContent"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="getAgreementAllowance">
		<security https="true" auth="true" />
		<event type="service" invoke="getAgreementAllowance"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="createAgrDuration">
	    <security https="true" auth="true"/>
	    <event type="service" invoke="createAgrDuration"></event>
	    <response name="success" type="request" value="json"></response>
	</request-map>
	<request-map uri="getAgrDurationList">
	    <security https="true" auth="true"/>
	    <event type="service" invoke="getAgrDurationList"></event>
	    <response name="success" type="request" value="json"></response>
	</request-map>
	
	<view-map name="ViewListEmplAgreement" type="screen"
		page="component://basehr/widget/AgreementScreens.xml#ViewListEmplAgreement"></view-map>
</site-conf>	