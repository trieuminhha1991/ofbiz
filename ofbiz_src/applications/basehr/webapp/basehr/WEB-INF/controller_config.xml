<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
	<request-map uri="ViewListCustomTimePeriodHR">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ViewListCustomTimePeriod"></response>
		<response name="error" type="view" value="ViewListCustomTimePeriod"></response>
	</request-map>
	
	<request-map uri="createPayrollCustomTimePeriod">
		<security https="true" auth="true" />
		<event type="java" invoke="createPayrollCustomTimePeriod" path="com.olbius.basehr.configuration.ConfigurationEvents"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="updatePayrollCustomTimePeriod">
		<security https="true" auth="true" />
		<event type="java" invoke="updatePayrollCustomTimePeriod" path="com.olbius.basehr.configuration.ConfigurationEvents"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="ViewEmplLeaveReasonTypeList">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ViewEmplLeaveReasonTypeList"></response>
		<response name="error" type="view" value="ViewEmplLeaveReasonTypeList"></response>
	</request-map>
	<request-map uri="ViewSkillTypeList">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ViewSkillTypeList"/>
		<response name="error" type="view" value="ViewSkillTypeList"/>
	</request-map>
	<request-map uri="ViewTrainingPurposeTypeList">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ViewTrainingPurposeTypeList"/>
		<response name="error" type="view" value="ViewTrainingPurposeTypeList"/>
	</request-map>
	
	<!-- ViewMap -->
	<view-map name="ViewTrainingPurposeTypeList" type="screen" page="component://basehr/widget/ConfigurationScreens.xml#ViewTrainingPurposeTypeList"></view-map>
	<view-map name="ViewSkillTypeList" type="screen" page="component://basehr/widget/ConfigurationScreens.xml#ViewSkillTypeList"></view-map>
		
	<view-map name="ViewListCustomTimePeriod" type="screen"
		page="component://basehr/widget/ConfigurationScreens.xml#ViewListCustomTimePeriod"></view-map>
	<view-map name="ViewEmplLeaveReasonTypeList" type="screen"
		page="component://basehr/widget/ConfigurationScreens.xml#ViewEmplLeaveReasonTypeList"></view-map>
</site-conf>	