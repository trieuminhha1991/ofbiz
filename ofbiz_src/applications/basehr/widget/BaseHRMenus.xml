<?xml version="1.0" encoding="UTF-8"?>
<menus xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-menu.xsd">
   
    <menu name="MainAppBar" title="${uiLabelMap.BaseHRApplication}" extends="CommonAppBarMenu" extends-resource="component://common/widget/CommonMenus.xml">
        <menu-item name="main" title="${uiLabelMap.CommonMain}"><link target="main"/></menu-item>
    </menu>
    <menu name="BaseHRAppBar" modelMenu="olbius" iconStyle="icon-desktop" style="dropdown-toggle" 
    	title="${uiLabelMap.BaseHRApplication}" extends="CommonAppBarMenu" extends-resource="component://common/widget/CommonMenus.xml">
       <menu-item name="main" title="${uiLabelMap.CommonMain}"><link target="main"/></menu-item>
    </menu>
    <menu name="ConfigurationSubMenu" modelMenu="businessSubMenu" selected-menuitem-context-field-name="selectedSubMenuItem">
    	<menu-item name="PayrollPeriod" title="${uiLabelMap.PayrollPeriod}">
			<condition>
				<if-has-permission permission="HR_CONFIG" action="_VIEW" />
			</condition>
			<link target="ViewListCustomTimePeriodHR"></link>
		</menu-item>
        <menu-item name="HolidaySetting" title="${uiLabelMap.SettingHoliday}">
            <condition>
                <if-olbius-has-permission/>
            </condition>
            <link target="ViewListHolidaySetting"></link>
        </menu-item>
        <menu-item name="SettingWorkingShift" title="${uiLabelMap.SettingWorkingShift}">
            <condition>
                <if-olbius-has-permission/>
            </condition>
            <link target="ViewListWorkingShift"></link>
        </menu-item>
    	<menu-item name="EmplLeaveReasonType" title="${uiLabelMap.EmplLeaveReasonType}">
			<condition>
				<if-olbius-has-permission/>
			</condition>
			<link target="ViewEmplLeaveReasonTypeList"></link>
		</menu-item>
		<menu-item name="SkillType" title="${uiLabelMap.TrainingCourseSkillType}">
			<condition>
				<if-olbius-has-permission/>
			</condition>
			<link target="ViewSkillTypeList"></link>
		</menu-item>
		<menu-item name="TrainingPurpose" title="${uiLabelMap.TrainingPurpose}">
			<condition>
				<if-olbius-has-permission/>
			</condition>
			<link target="ViewTrainingPurposeTypeList"></link>
		</menu-item>
    </menu>
</menus>