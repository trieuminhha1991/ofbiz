										<container style="alert alert-info">
											<label text="${uiLabelMap.ScreenNoPermission}"></label>
										</container>
									</fail-widgets>						
								</section>
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
