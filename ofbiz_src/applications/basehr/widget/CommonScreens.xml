    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="BaseHRUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRDirectoryUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHREmployeeUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHREmploymentUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRInsuranceUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRPayrollUiLabels" map-name="uiLabelMap" global="true"/>
                <!-- include uiLabelMap by Trung Anh -->
                <property-map map-name="uiLabelMap" resource="BaseHRKeyPerfIndicatorUiLabels" global="true"/>
                <property-map map-name="uiLabelMap" resource="BaseHROlapUiLabels" global="true"/>
                <!-- end -->

                <set field="layoutSettings.companyName" from-field="uiLabelMap.BaseHRCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.BaseHRCompanySubtitle" global="true"/>

                <set field="activeApp" value="basehr" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://basehr/widget/BaseHRMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.BaseHRApplication}" global="true"/>
                
                <set field="componentResourceName" value="BaseHR" global="true"/>
            	<set field="componentNameSc" value="basehr" global="true"/>
            </actions>
            <widgets>
                <include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="BaseHRCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="BASEHR" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.BaseHRViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
