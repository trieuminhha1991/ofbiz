	<screen name="ViewRecruitmentSalesList">
		<section>
			<actions>
				<set field="selectedMenuItem" value="Recruitment" />
				<set field="selectedSubMenuItem" value="RecruitmentSales" />
				<set field="titleProperty" value="HRRecruitmentSales"/>
			</actions>
			<widgets>
				<decorator-screen name="RecruitmentDecorator" location="component://basehr/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-has-permission permission="RECRUITSALESPLAN" action="_CREATE"/>
							</condition>
							<actions>
								<property-to-field resource="general" property="country.geo.id.default" field="defaultCountry"/>
								<entity-condition list="customTimePeriodList" entity-name="CustomTimePeriod">
									<condition-expr field-name="periodTypeId" value="YEARLY"/>
									<order-by field-name="-fromDate"/>
								</entity-condition>
								<!-- <entity-condition list="enumRecruitmentTypeList" entity-name="Enumeration">
									<condition-expr field-name="enumTypeId" value="RECRUITMENT_TYPE"/>
									<order-by field-name="sequenceId"/>
								</entity-condition> -->
								<entity-condition list="geoList" entity-name="GeoAssocAndGeoTo">
									<condition-list>
										<condition-expr field-name="geoIdFrom" from-field="defaultCountry"/>
										<condition-expr field-name="geoTypeId" value="PROVINCE"/>
									</condition-list>
								</entity-condition>
								<entity-condition list="genderList" entity-name="Gender"></entity-condition>
								<entity-condition list="recruitmentTypeEnumList" entity-name="Enumeration">
									<condition-expr field-name="enumTypeId" value="RECRUITMENT_TYPE"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="geoCountryList" entity-name="Geo">
									<condition-expr field-name="geoTypeId" value="COUNTRY"/>
								</entity-condition>
								<entity-condition list="statusList" entity-name="StatusItem">
									<condition-expr field-name="statusTypeId" value="HR_REC_SALE_STT"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="statusEmplRecList" entity-name="StatusItem">
									<condition-expr field-name="statusTypeId" value="HR_REC_EMPL_SALE_STT"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<script location="component://basehr/webapp/basehr/WEB-INF/actions/getCustomTimePeriod.groovy"/>
							</actions>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://basehr/webapp/basehr/recruitment/ViewRecruitmentSalesList.ftl"/>
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.ScreenNoPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>		
			</widgets>
		</section>
	</screen>
