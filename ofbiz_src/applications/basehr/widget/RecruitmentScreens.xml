	<screen name="ViewListRecruitmentPlan">
		<section>
			<actions>
				<set field="selectedMenuItem" value="Recruitment" />
				<set field="selectedSubMenuItem" value="RecruitmentPlan" />
				<set field="titleProperty" value="RecruitmentPlan"/>
			</actions>
			<widgets>
				<decorator-screen name="RecruitmentDecorator" location="component://basehr/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<actions>
								<property-to-field resource="general" property="country.geo.id.default" field="defaultCountry"/>
								<entity-condition list="periodTypeList" entity-name="PeriodType">
									<condition-list combine="or">
										<condition-expr field-name="periodTypeId" value="DAILY"/>
										<condition-expr field-name="periodTypeId" value="MONTHLY"/>
										<condition-expr field-name="periodTypeId" value="YEARLY"/>
									</condition-list>
								</entity-condition>
								<entity-condition list="emplPositionTypeList" entity-name="EmplPositionType">
									<condition-expr field-name="emplPositionTypeId" operator="not-equals" value="_NA_"/>
									<order-by field-name="description"/>
								</entity-condition>
								<entity-condition list="recruitmentFormTypeList" entity-name="RecruitmentFormType"></entity-condition>
								<entity-condition list="customTimePeriodList" entity-name="CustomTimePeriod">
									<condition-expr field-name="periodTypeId" value="YEARLY"/>
									<order-by field-name="-fromDate"/>
								</entity-condition>
								<entity-condition list="statusList" entity-name="StatusItem">
									<condition-expr field-name="statusTypeId" value="HR_REC_PLAN_STT"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="statusCandidateRoundList" entity-name="StatusItem">
									<condition-expr field-name="statusTypeId" value="HR_REC_ROUND_STT"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="recruitReqEnumList" entity-name="Enumeration">
									<condition-expr field-name="enumTypeId" value="RECRUIT_REQUIRE_TYPE"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="roundTypeEnumList" entity-name="Enumeration">
									<condition-expr field-name="enumTypeId" value="RECRUIT_ROUND_TYPE"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="statusEvaluatedCandidateList" entity-name="StatusItem">
									<condition-expr field-name="statusTypeId" value="RECRUIT_INTERVIEW_STTS"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<!-- <entity-condition list="recInputParamList" entity-name="Enumeration">
									<condition-expr field-name="enumTypeId" value="RECRUIT_IN_PARAM"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="recOpCondList" entity-name="Enumeration">
									<condition-expr field-name="enumTypeId" value="RECRUIT_OP_COND"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="recLogicCondList" entity-name="Enumeration">
									<condition-expr field-name="enumTypeId" value="RECRUIT_LOGIC_COND"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>-->
								<entity-condition list="educationSystemTypeList" entity-name="EducationSystemType">
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="degreeClassTypeList" entity-name="DegreeClassificationType"></entity-condition>
								<entity-condition list="genderList" entity-name="Gender"></entity-condition>
								<entity-condition list="recruitmentCostItemList" entity-name="RecruitmentCostItemAndCatType"></entity-condition>
								<entity-condition list="recruitmentCostCatTypeList" entity-name="RecruitmentCostCategoryType"></entity-condition>
								<entity-condition list="recruitmentResultTypeList" entity-name="RecruitmentResultType">
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<script location="component://basehr/webapp/basehr/WEB-INF/actions/getCustomTimePeriod.groovy"/>
								<script location="component://basehr/webapp/basehr/WEB-INF/actions/getPartyGroupTree.groovy"/>
							</actions>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://basehr/webapp/basehr/recruitment/ViewListRecruitmentPlan.ftl"/>
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.ScreenNoPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>	
			</widgets>
		</section>
	</screen>
