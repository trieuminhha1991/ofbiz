<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="ViewJobPosition">
		<section>
			<actions>
				<set field="selectedMenuItem" value="directory" />
				<set field="selectedSubMenuItem" value="JobPosition"/>
				<set field="titleProperty" value="JobPositionCurrent"/>
			</actions>
			<widgets>
				<decorator-screen name="CommonDirectoryDecorator"
					location="component://basehr/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<section>
									<actions>
										<entity-condition list="emplPositionTypeList" entity-name="EmplPositionType">
											<condition-expr field-name="emplPositionTypeId" operator="not-equals" value="_NA_"/>
											<order-by field-name="description"/>
										</entity-condition>
									</actions>
									<widgets>
										<platform-specific>
											<html>
												<html-template location="component://basehr/webapp/basehr/generalMgr/viewJobPosition.ftl"/>
											</html>
										</platform-specific>
									</widgets>
								</section>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.ScreenNoPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>	
			</widgets>
		</section>
	</screen>
	<screen name="ViewOrganizationUnit">
		<section>
			<actions>
				<set field="selectedMenuItem" value="directory" />
				<set field="selectedSubMenuItem" value="OrganizationUnit"/>
				<set field="titleProperty" value="OrganizationUnit"/>
			</actions>
			<widgets>
				<decorator-screen name="CommonDirectoryDecorator"
					location="component://basehr/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-has-permission permission="BASEHR" action="_VIEW"/>
							</condition>
							<widgets>
								<section>
									<actions>
										<!-- <script location="component://basehr/webapp/basehr/WEB-INF/actions/getPartyGroupTree.groovy"/> -->
										<property-to-field resource="general" property="country.geo.id.default" field="countryGeoIdDefault"/>
									</actions>
									<widgets>
										<platform-specific>
											<html>
												<html-template location="component://basehr/webapp/basehr/generalMgr/ViewOrganizationUnit.ftl"/>
											</html>
										</platform-specific>							
									</widgets>
								</section>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.ScreenNoPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>	
			</widgets>
		</section>
	</screen>
	<screen name="ViewEmployeeList">
		<section>
			<actions>
				<set field="selectedMenuItem" value="directory" />
				<set field="selectedSubMenuItem" value="employeeList"/>
				<set field="titleProperty" value="HREmplList"/>
			</actions>
			<widgets>
				<decorator-screen name="CommonDirectoryDecorator"
					location="component://basehr/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<section>
									<actions>
										<!-- <script location="component://basehr/webapp/basehr/WEB-INF/actions/getPartyGroupTree.groovy"/> -->
										<entity-condition list="genderList" entity-name="Gender"></entity-condition>
										<entity-condition list="statusWorkingList" entity-name="StatusItem">
											<condition-expr field-name="statusTypeId" operator="equals" value="EMPL_WORK_STT"/>
											<order-by field-name="sequenceId"/>
										</entity-condition>
										<entity-condition list="listStateProvinceGeoVN" entity-name="GeoAssocAndGeoTo">
									         <condition-list>
										          <condition-expr field-name="geoIdFrom" value="VNM"/>
										          <condition-expr field-name="geoAssocTypeId" value="REGIONS"/>
										          <condition-expr field-name="geoTypeId" value="PROVINCE"/>
									         </condition-list>
									         <order-by field-name="geoName"/>
								        </entity-condition>
										<entity-condition list="terminationReasonList" entity-name="TerminationReason"></entity-condition>
										<entity-condition list="agreementTypeList" entity-name="AgreementType">
											<condition-expr field-name="parentTypeId" value="EMPLOYMENT_AGREEMENT"/>
										</entity-condition>
										<entity-condition list="dependentStatusList" entity-name="StatusItem">
											<condition-expr field-name="statusTypeId" value="DEPENDENT_PER_STT"/>
											<order-by field-name="sequenceId"/>
										</entity-condition>
										<entity-condition list="periodTypeList" entity-name="PeriodType">
											<condition-list combine="or">
												<condition-expr field-name="periodTypeId" value="DAILY"/>
												<condition-expr field-name="periodTypeId" value="MONTHLY"/>
												<condition-expr field-name="periodTypeId" value="YEARLY"/>
											</condition-list>
										</entity-condition>
										<entity-condition list="insuranceTypeList" entity-name="InsuranceType">
											<order-by field-name="sequenceNum"/>
										</entity-condition>
										<property-to-field resource="general" property="country.geo.id.default" field="countryGeoIdDefault"/>
									</actions>
									<widgets>
										<platform-specific>
											<html>
												<html-template location="component://basehr/webapp/basehr/generalMgr/ViewEmplList.ftl"/>
											</html>
										</platform-specific>
									</widgets>
								</section>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.ScreenNoPermission}"></label>
								</container>
							</fail-widgets>
						</section>
						
					</decorator-section>
				</decorator-screen>	
			</widgets>
		</section>
	</screen>
	
	<screen name="ViewEmplTerminationList">
		<section>
			<actions>
				<set field="selectedMenuItem" value="directory" />
				<set field="selectedSubMenuItem" value="employeeTerminationList"/>
				<set field="titleProperty" value="HREmplTerminationList"/>
			</actions>
			<widgets>
				<decorator-screen name="CommonDirectoryDecorator" location="component://basehr/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<actions>
								<entity-condition list="terminationReasonList" entity-name="TerminationReason"></entity-condition>
								<entity-condition list="workingStatusList" entity-name="StatusItem">
									<condition-list>
										<condition-expr field-name="statusTypeId" value="EMPL_WORK_STT"/>
										<condition-expr field-name="statusId" operator="not-equals" value="EMPL_WORKING"/>
									</condition-list>
								</entity-condition>
							</actions>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://basehr/webapp/basehr/generalMgr/ViewEmplTerminationList.ftl"/>
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.ScreenNoPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="AddNewEmployee">
		<section>
			<actions>
				<property-to-field resource="general" property="country.geo.id.default" field="defaultCountry"/>
				<entity-condition list="genderList" entity-name="Gender"></entity-condition>
				<entity-condition list="geoList" entity-name="GeoAssocAndGeoTo">
					<condition-list>
						<condition-expr field-name="geoIdFrom" from-field="defaultCountry"/>
						<condition-expr field-name="geoTypeId" value="PROVINCE"/>
					</condition-list>
				</entity-condition>
				<entity-condition list="geoCountryList" entity-name="Geo">
					<condition-expr field-name="geoTypeId" value="COUNTRY"/>
				</entity-condition>
				<entity-condition list="listStateProvinceGeoVN" entity-name="GeoAssocAndGeoTo">
			         <condition-list>
				          <condition-expr field-name="geoIdFrom" value="VNM"/>
				          <condition-expr field-name="geoAssocTypeId" value="REGIONS"/>
				          <condition-expr field-name="geoTypeId" value="PROVINCE"/>
			         </condition-list>
			         <order-by field-name="geoName"/>
		        </entity-condition>
			</actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://basehr/webapp/basehr/generalMgr/AddNewEmployee.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
