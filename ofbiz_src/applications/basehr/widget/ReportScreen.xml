    <screen name="ViewORGPayrollSummaryReport">
    	<section>
    		<actions>
    			<set field="selectedMenuItem" value="ReportHrSubMenu"/>
    			<set field="selectedSubMenuItem" value="ORGPayrollSummaryReport"/>
    			<set field="titleProperty" value="ORGPayrollSummaryReport"/>
    		</actions>
    		<widgets>
    			<decorator-screen name="BaseHRCommonDecorator" location="component://basehr/widget/CommonScreens.xml">
    				<decorator-section name="body">
    					<section>
    						<actions>
    							<service service-name="getPayrollItemTypeDimensionList" result-map="resultServices">
    								<field-map field-name="isParent" value="Y"/>
    							</service>
    							<set field="payrollItemTypeList" from-field="resultServices.listReturn"/>
    							<service service-name="getPayrollCharacteristicDimensionList" result-map="resultPayrollFormula">
    								<field-map field-name="payrollCharacteristicId" value="ORG_PAID"/>
    							</service>
    							<set field="payrollFormulaByCharList" from-field="resultPayrollFormula.listReturn"/>
    						</actions>
    						<widgets>
    							<include-screen name="lib-report" location="component://bi-x/widget/libReport.xml"/>
    							<platform-specific>
    								<html>
    									<html-template location="component://basehr/webapp/basehr/report/ViewORGPayrollSummaryReport.ftl"/>
    								</html>
    							</platform-specific>
    						</widgets>
    					</section>
    				</decorator-section>
