    <screen name="ViewPayrollSummaryReport">
    	<section>
    		<actions>
    			<set field="selectedMenuItem" value="ReportHrSubMenu"/>
    			<set field="selectedSubMenuItem" value="PayrollSummaryReport"/>
    			<set field="titleProperty" value="PayrollSummaryReport"/>
    		</actions>
    		<widgets>
    			<decorator-screen name="BaseHRCommonDecorator" location="component://basehr/widget/CommonScreens.xml">
    				<decorator-section name="body">
    					<section>
    						<actions>
    							<entity-condition list="payrollItemTypeList" entity-name="PayrollItemType">
									<condition-expr field-name="parentTypeId" value=""/>
									<order-by field-name="sequenceNum"/>
								</entity-condition>
    						</actions>
    						<widgets>
    							<include-screen name="lib-report" location="component://bi-x/widget/libReport.xml"/>
    							<platform-specific>
    								<html>
    									<html-template location="component://basehr/webapp/basehr/report/ViewPayrollSummaryReport.ftl"/>
    								</html>
