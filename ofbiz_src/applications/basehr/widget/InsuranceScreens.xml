	<screen name="ViewInsuranceReportPartyOriginate">
		<section>
			<actions>
				<set field="selectedMenuItem" value="Insurance" />
				<set field="selectedSubMenuItem" value="ReportOfParicipateInsurance" />
				<set field="titleProperty" value="ReportOfParicipateInsuranceTitle" global="true"/>
				<entity-one value-field="insuranceParticipateReport" entity-name="InsuranceParticipateReport"></entity-one>
				<set field="reportId" from-field="parameters.reportId"/>
			</actions>
			<widgets>
				<decorator-screen name="InsuranceCommonDecorator" location="component://basehr/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<section>
									<condition>
										<not>
											<if-empty field="insuranceParticipateReport"/>
										</not>
									</condition>
									<actions>
										<set field="month" value="${groovy: return (insuranceParticipateReport.month + 1)}" global="true"/>
										<set field="year" value="${groovy: return String.valueOf(insuranceParticipateReport.getLong(&quot;year&quot;))}" global="true"/>
										<set field="titleProperty" value="InsuranceReportPartyOriginateTitle" global="true"/>
										<entity-condition list="genderList" entity-name="Gender"></entity-condition>
										<entity-condition list="insuranceOriginateTypeList" entity-name="InsuranceOriginateType"></entity-condition>
									</actions>
									<widgets>
										<platform-specific>
											<html>
												<html-template location="component://basehr/webapp/basehr/insurance/ViewInsuranceReportPartyOriginate.ftl"/>
											</html>
										</platform-specific>
									</widgets>
									<fail-widgets>
										<container style="alert alert-info">
											<label text="${uiLabelMap.CannotFindInsuranceParticipateReport}"></label>
										</container>
									</fail-widgets>
								</section>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.ScreenNoPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>			
		</section>
	</screen>
	
