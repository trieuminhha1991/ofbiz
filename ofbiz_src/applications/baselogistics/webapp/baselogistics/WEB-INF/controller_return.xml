<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
        
<!-- request -->
	<request-map uri="printSupplierReturn.pdf">
		<security https="false" auth="true"/>
		<response name="success" type="view" value="SupplierReturnPDF"/>
	</request-map>
	
	<request-map uri="prepareExportProductFromVendorReturn">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="ExportProductFromVendorReturn"/>
		<response name="error" type="view" value="ExportProductFromVendorReturn"/>
	</request-map>
	
	<request-map uri="prepareReceiveProductFromCustomerReturn">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="ReceiveProductFromCustomerReturn"/>
		<response name="error" type="view" value="ReceiveProductFromCustomerReturn"/>
	</request-map>
	
	<request-map uri="exportProductFromVendorReturn">
		<security auth="true" https="true"/>
		<event type="service" invoke="exportProductFromVendorReturn"/>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	
	<request-map uri="receiveProductFromCustomerReturn">
		<security auth="true" https="true"/>
		<event type="service" invoke="receiveProductFromCustomerReturn"/>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	
<!-- View -->
	<view-map name="ExportProductFromVendorReturn" type="screen" page="component://baselogistics/widget/ReturnScreens.xml#ExportProductFromVendorReturn"/>
	<view-map name="ReceiveProductFromCustomerReturn" type="screen" page="component://baselogistics/widget/ReturnScreens.xml#ReceiveProductFromCustomerReturn"/>

<!-- Pdf -->
	<view-map name="SupplierReturnPDF" type="screenfop" page="component://baselogistics/widget/ReturnScreens.xml#SupplierReturnPDF" content-type="application/pdf" />
	
</site-conf>