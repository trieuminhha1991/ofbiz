<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
	<description>Product Services</description>
	<vendor></vendor>
	<version>1.0</version>

	<service name="getProductDetailByUPCA" engine="java" invoke="getProductDetailByUPCA" location="com.olbius.baselogistics.delivery.UPCAServices">
		<attribute name="idUPCA" mode="IN" type="String" />
		<attribute name="productDetail" mode="OUT" type="Map" optional="true" />
	</service>

	<service name="getInventoryAvailableByFacilityNew" engine="simple" location="component://baselogistics/script/com/olbius/logistics/inventory/InventoryServices.xml"
		invoke="getProductInventoryAvailable" auth="false" use-transaction="false">
		<description>Get Inventory Availability for a Product constrained by a facilityId</description>
		<attribute name="productId" type="String" mode="IN" optional="false" />
		<attribute name="facilityId" type="String" mode="IN" optional="false" />
		<attribute name="statusId" type="String" mode="IN" optional="true" />
		<attribute name="lotId" mode="IN" type="String" optional="true" />
		<attribute name="expireDate" mode="IN" type="Timestamp" optional="true" /><!-- TODOCHANGE expireDate -->
		<attribute name="quantityOnHandTotal" type="BigDecimal" mode="OUT" optional="false" />
		<attribute name="availableToPromiseTotal" type="BigDecimal" mode="OUT" optional="false" />
		<attribute name="useCache" type="Boolean" mode="IN" optional="true" />
	</service>
	
    <service name="getInventoryAvailableByFacilityHaveDeb" engine="simple"
                location="component://baselogistics/script/com/olbius/logistics/inventory/InventoryServices.xml" invoke="getProductInventoryAvailableHaveDeb" auth="false" use-transaction="false">
        <description>Get Inventory Availability for a Product constrained by a facilityId</description>
        <attribute name="productId" type="String" mode="IN" optional="false"/>
        <attribute name="facilityId" type="String" mode="IN" optional="false"/>
        <attribute name="statusId" type="String" mode="IN" optional="true"/>
        <attribute name="lotId" mode="IN" type="String" optional="true"/>
        <attribute name="expireDate" mode="IN" type="Timestamp" optional="true"/><!-- TODOCHANGE expireDate -->
        <attribute name="quantityOnHandTotal" type="BigDecimal" mode="OUT" optional="false"/>
        <attribute name="availableToPromiseTotal" type="BigDecimal" mode="OUT" optional="false"/>
        <attribute name="amountOnHandTotal" type="BigDecimal" mode="OUT" optional="false"/>
        <attribute name="useCache" type="Boolean" mode="IN" optional="true"/>
    </service>	
</services>