<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">        
        
    <screen name="ConfigurationCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="LogisticsConfigs">
		<section>
			<actions>
				<set field="selectedMenuItem" value="Configuration" />
				<set field="titleProperty" value="Configuration" global="true" />
				<property-map resource="BaseLogisticsUiLabels"
					map-name="uiLabelMap" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission />
					</condition>
					<widgets>
						<decorator-screen name="ConfigurationCommonDecorator">
							<decorator-section name="body">
								<section>
									<widgets>
										<container style="screenlet">
											<platform-specific>
												<html>
													<html-template location="component://baselogistics/webapp/baselogistics/config/config.ftl" />
												</html>
											</platform-specific>
										</container>
									</widgets>
								</section>										
							</decorator-section>
						</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="ConfigurationCommonDecorator">
							<decorator-section name="body">
								<container style="alert alert-danger">
									<label text="${uiLabelMap.DmsNotPermission}" />
								</container>
							</decorator-section>
						</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>
	
	<screen name="ProductRequiredAttributes">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="Configuration"/>
                <set field="selectedSubMenuItem" value="ProductAttributeConfig"/>
                <set field="titleProperty" value="ProductAttributeConfig" global="true"/>
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission/>
					</condition>
					<widgets>
						<decorator-screen name="ConfigurationCommonDecorator">
		                    <decorator-section name="body">
		                    	<platform-specific>
									<html>
										<html-template location="component://baselogistics/webapp/baselogistics/config/listProductRequiredAttributes.ftl"/>
									</html>
								</platform-specific>
		    				</decorator-section>
		    			</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="ConfigurationCommonDecorator">
		                    <decorator-section name="body">
		                    	<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
		    				</decorator-section>
		    			</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
       </section>
    </screen>
    
    <screen name="FormulaCalculatePurchase">
        <section>
            <actions>
                <set field="titleProperty" value="BLCalculatePurchaseFormula"/>
                <set field="selectedMenuItem" default-value="configPO" from-field="parameters.selectedMenuItem"/>
                <set field="selectedSubMenuItem" value="CalculatePurchaseFormula"/>
                <set field="activeTab" from-field="parameters.activeTab" default-value="formula"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<section>
							<condition>
                    			<if-olbius-has-permission/>
                    		</condition>
                    		<widgets>
                                   <platform-specific>
                                       <html><html-template location="component://baselogistics/webapp/baselogistics/formula/productFormulaConfig.ftl"/></html>
                                   </platform-specific>
                    		</widgets>
                    		<fail-widgets>
                    			<container style="alert alert-info">
                    				<label text="${uiLabelMap.BSYouHavenotViewPermission}"/>
                    			</container>
                    		</fail-widgets>
                   		</section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>