<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
        
    <screen name="FixedAssetCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
    
    <screen name="ListFixedAsset">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="LogAsset"/>
                <set field="selectedSubMenuItem" value="ListAsset"/>
                <set field="titleProperty" value="BLListAsset" global="true"/>
				<property-map resource="BaseLogisticsUiLabels" map-name="uiLabelMap"/>
			</actions>
			<widgets>
				<decorator-screen name="FixedAssetCommonDecorator">
                    <decorator-section name="body">
                   		<platform-specific>
							<html>
								<html-template location="component://baselogistics/webapp/baselogistics/asset/listAsset.ftl"/>
							</html>
						</platform-specific>
    				</decorator-section>
    			</decorator-screen>
			</widgets>
       </section>
    </screen>
</screens>