<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">        
           
    <screen name="ProductCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
    <screen name="ListProducts">
    	<section>
            <actions>
			    <set field="productStoreId" from-field="parameters.productStoreId"/>
			</actions>
			<widgets>
                <platform-specific>
					<html>
						<html-template location="component://baselogistics/webapp/baselogistics/product/listProducts.ftl"/>
					</html>
				</platform-specific>
			</widgets>
       </section>
    </screen>
    
    <screen name="LogisticsListProducts">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="Product"/>
                <set field="selectedSubMenuItem" value="ListProducts"/>
                <set field="titleProperty" value="ListProduct" global="true"/>
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission/>
					</condition>
					<widgets>
						<decorator-screen name="ProductCommonDecorator">
		                    <decorator-section name="body">
		                    	<platform-specific>
									<html>
										<html-template location="component://baselogistics/webapp/baselogistics/product/listAllProducts.ftl"/>
									</html>
								</platform-specific>
		    				</decorator-section>
		    			</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="ProductCommonDecorator">
		                    <decorator-section name="body">
		                    	<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
		    				</decorator-section>
		    			</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
       </section>
    </screen>
    
   	<screen name="PrintBarcodeProducts">
   	 	<section>
            <actions>
                <set field="titleProperty" value="PrintBarCode" global="true"/>
                <set field="selectedMenuItem" value="Product"/>
                <set field="selectedSubMenuItem" value="PrintBarCode"/>
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission/>
					</condition>
					<widgets>
						<decorator-screen name="ProductCommonDecorator">
		                    <decorator-section name="body">
		                    	<platform-specific>
									<html>
										<html-template location="component://baselogistics/webapp/baselogistics/product/printBarCodeProductsTemplate.ftl"/>
									</html>
								</platform-specific>
		    				</decorator-section>
		    			</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="ProductCommonDecorator">
		                    <decorator-section name="body">
		                    	<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
		                    </decorator-section>
	                    </decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
       </section>
    </screen>
</screens>