<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
    <screen name="DeliveryClusterCommonDecorator">
        <section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <decorator-section-include name="body"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="NewDeliveryCluster">
        <section>
            <actions>
                <set field="titleProperty" value="BLNewDeliveryCluster" global="true"/>
                <set field="selectedMenuItem" value="DeliveryCluster"/>
                <set field="selectedSubMenuItem" value="CreateNewCluster"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <if-olbius-has-permission/>
                    </condition>
                    <widgets>
                        <decorator-screen name="DeliveryClusterCommonDecorator">
                            <decorator-section name="body">
                                <platform-specific>
                                    <html>
                                        <html-template location="component://baselogistics/webapp/baselogistics/delivery_cluster/newDeliveryClusterTotal.ftl"/>
                                    </html>
                                </platform-specific>
                            </decorator-section>
                        </decorator-screen>
                    </widgets>
                    <fail-widgets>
                        <decorator-screen name="DeliveryClusterCommonDecorator">
                            <decorator-section name="body">
                                <container style="alert alert-info">
                                    <label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
                                </container>
                            </decorator-section>
                        </decorator-screen>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
    </screen>

    <screen name="ListCluster">
        <section>
            <actions>
                <set field="titleProperty" value="BLListDeliveryCluster" global="true"/>
                <set field="selectedMenuItem" value="DeliveryCluster"/>
                <set field="selectedSubMenuItem" value="ListCluster"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <if-olbius-has-permission/>
                    </condition>
                    <widgets>
                        <decorator-screen name="DeliveryClusterCommonDecorator">
                            <decorator-section name="body">
                                <platform-specific>
                                    <html>
                                        <html-template location="component://baselogistics/webapp/baselogistics/delivery_cluster/listDeliveryCluster.ftl"/>
                                    </html>
                                </platform-specific>
                            </decorator-section>
                        </decorator-screen>
                    </widgets>
                    <fail-widgets>
                        <decorator-screen name="DeliveryClusterCommonDecorator">
                            <decorator-section name="body">
                                <container style="alert alert-info">
                                    <label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
                                </container>
                            </decorator-section>
                        </decorator-screen>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
    </screen>

    <screen name="NewDeliveryClusterInfo">
        <section>
            <widgets>
                <platform-specific>
                    <html>
                        <html-template location="component://baselogistics/webapp/baselogistics/delivery_cluster/newDeliveryClusterInfo.ftl"/>
                    </html>
                </platform-specific>
            </widgets>
        </section>
    </screen>

    <screen name="ListCustomerDetail">
        <section>
            <widgets>
                <platform-specific>
                    <html>
                        <html-template location="component://baselogistics/webapp/baselogistics/delivery_cluster/listCustomerFilter.ftl"/>
                    </html>
                </platform-specific>
            </widgets>
        </section>
    </screen>

    <screen name="DeliveryClusterTitle">
        <section>
            <widgets>
                <label style="ibefore-icon-angle-right" text=" ${uiLabelMap.BLDeliveryClusterId}: "></label>
                <link url-mode="plain" target="deliveryClusterDetail?deliveryClusterId=${parameters.deliveryClusterId}" text="${parameters.deliveryClusterId}"></link>
            </widgets>
        </section>
    </screen>

    <screen name="DeliveryClusterDetail">
        <section>
            <actions>
                <set field="titleProperty" value="BLDeliveryClusterInformation"/>
                <set field="selectedMenuItem" value="DeliveryCluster"/>
                <set field="selectedSubMenuItem" value="ListCluster" />
                <set field="tabButtonItem" value="DeliveryCluster"/>
                <set field="deliveryClusterId" from-field="parameters.deliveryClusterId"/>
                <set field="titleHeaderValue" value="DeliveryClusterTitle" global="true"/>
                <set field="titleHeaderLocation" value="component://baselogistics/widget/DeliveryClusterScreens.xml" global="true"/>
                <entity-and entity-name="DeliveryClusterAndPartyDetail" list="deliveryClusters">
                    <field-map from-field="deliveryClusterId" field-name="deliveryClusterId"/>
                </entity-and>
                <set field="activeTab" from-field="parameters.activeTab" default-value="general-tab"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <if-olbius-has-permission/>
                    </condition>
                    <widgets>
                        <decorator-screen name="DeliveryClusterCommonDecorator">
                            <decorator-section name="body">
                                <platform-specific>
                                    <html>
                                        <html-template location="component://baselogistics/webapp/baselogistics/delivery_cluster/deliveryClusterDetail.ftl"/>
                                    </html>
                                </platform-specific>
                            </decorator-section>
                        </decorator-screen>
                    </widgets>
                    <fail-widgets>
                        <decorator-screen name="DeliveryClusterCommonDecorator">
                            <decorator-section name="body">
                                <container style="alert alert-info">
                                    <label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
                                </container>
                            </decorator-section>
                        </decorator-screen>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
    </screen>
</screens>