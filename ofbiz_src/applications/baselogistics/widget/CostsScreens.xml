<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
        
    <screen name="CostCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
    
	<screen name="GeneralCosts">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="Costs"/>
                <set field="selectedSubMenuItem" value="GeneralCosts"/>
			</actions>
			<widgets>
				<decorator-screen name="CostCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<platform-specific>
							<html>
								<html-template location="component://dms/webapp/dms/logistics/costs/logGeneralCosts.ftl"/>
							</html>
						</platform-specific>
    				</decorator-section>
    			</decorator-screen>
			</widgets>
       </section>
    </screen>
    
    <screen name="FacilityCosts">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="Costs"/>
                <set field="selectedSubMenuItem" value="FacilityCosts"/>
			</actions>
			<widgets>
				<decorator-screen name="CostCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<platform-specific>
							<html>
								<html-template location="component://dms/webapp/dms/logistics/costs/logGeneralCosts.ftl"/>
							</html>
						</platform-specific>
    				</decorator-section>
    			</decorator-screen>
			</widgets>
       </section>
    </screen>
    
    <screen name="DeliveryCosts">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="Costs"/>
                <set field="selectedSubMenuItem" value="DeliveryCosts"/>
			</actions>
			<widgets>
				<decorator-screen name="CostCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<platform-specific>
							<html>
								<html-template location="component://dms/webapp/dms/logistics/costs/logGeneralCosts.ftl"/>
							</html>
						</platform-specific>
    				</decorator-section>
    			</decorator-screen>
			</widgets>
       </section>
    </screen>
    
    <screen name="ListCostsGeneral">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="LogCost"/>
                <set field="selectedSubMenuItem" value="ListCostsGeneral"/>
                <set field="titleProperty" value="CostsGeneral" global="true"/>
				<property-map resource="BaseLogisticsUiLabels" map-name="uiLabelMap"/>
				<set field="urlGetParty" value="jqGetListOrgManagedByParty"/>
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission/>
					</condition>
					<widgets>
						<decorator-screen name="CostCommonDecorator">
		                    <decorator-section name="body">
		                   		<platform-specific>
								    <html><html-template location="component://basesalesmtl/webapp/basesalesmtl/supervisor/listCostsGeneral.ftl"/></html>
								</platform-specific>
		    				</decorator-section>
		    			</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="CostCommonDecorator">
		                    <decorator-section name="body">
		                    	<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
		    				</decorator-section>
		    			</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
       </section>
    </screen>
</screens>