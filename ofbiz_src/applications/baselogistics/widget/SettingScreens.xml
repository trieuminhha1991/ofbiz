	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
        
   	<screen name="SettingCommonDecorator">
		<section>
			<actions>
				<property-map resource="BaseCRMUiLabels" map-name="uiLabelMap" global="true"/>
    			<property-map resource="BasePOUiLabels" map-name="uiLabelMap" global="true"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ProductFacilityInventoryWarning">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="Configuration"/>
                <set field="selectedSubMenuItem" value="ConfigInventoryWarning"/>
                <set field="titleProperty" value="ConfigInventoryWarning"/>
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission/>
					</condition>
					<widgets>
						<decorator-screen name="SettingCommonDecorator">
		                    <decorator-section name="body">
		                    	<platform-specific>
									<html>
										<html-template location="component://baselogistics/webapp/baselogistics/settings/listThresholdsProductFacility.ftl"/>
									</html>
								</platform-specific>
		    				</decorator-section>
		    			</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="SettingCommonDecorator">
		                    <decorator-section name="body">
		                    	<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
		    				</decorator-section>
		    			</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
       </section>
    </screen>
