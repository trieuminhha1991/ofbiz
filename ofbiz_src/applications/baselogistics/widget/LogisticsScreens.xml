<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="FoReportDecorator">
		<section>
			<actions>
				<property-map resource="CommonUiLabels" map-name="uiLabelMap"
					global="true" />
				<set field="logoImageUrl" value="/images/ofbiz_logo.gif" />
				<set field="defaultFontFamily" value="Arial" />
			</actions>
			<widgets>
				<platform-specific>
					<xsl-fo>
						<html-template location="component://baselogistics/webapp/baselogistics/report/reportTemplate.fo.ftl"/>
					</xsl-fo>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	<screen name="LogisticsCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="OrderHoldingReasons">
		<section>
			<actions>
				<set field="selectedMenuItem" value="Configuration"/>
                <set field="selectedSubMenuItem" value="OrderHoldReason"/>
			</actions>
			<widgets>
				<decorator-screen name="LogisticsCommonDecorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://dms/webapp/dms/logistics/order/listOrderHoldingReason.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
    </screen>
    <screen name="ReportTemplate">
    	<section>
    		<actions>
				<property-map resource="POUiLabels" map-name="uiLabelMap"
					global="true" />
				<set field="defaultFontFamily" value="Arial" />
			</actions>
    		<widgets>
    			<platform-specific>
					<xsl-fo>
						<html-template
							location="component://dms/webapp/dms/logistics/report/reportTemplate.fo.ftl"/> 
					</xsl-fo>
				</platform-specific>
    		</widgets>
    	</section>
    </screen>
    <screen name="ListProductReturn">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="stockIn"/>
                <set field="selectedSubMenuItem" value="ListProductReturn"/>
			</actions>
			<widgets>
				<decorator-screen name="LogisticsCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<platform-specific>
							<html>
								<html-template location="component://dms/webapp/dms/logistics/delivery/listProductReturn.ftl"/>
							</html>
						</platform-specific>
    				</decorator-section>
    			</decorator-screen>
			</widgets>
       </section>
    </screen>
    
    <screen name="ListHistoryShipmentReport">
		<section>
			<actions>
				<set field="selectedMenuItem" value="Report"/>
                <set field="selectedSubMenuItem" value="HistoryShipmentReport"/>
                <set field="titleProperty" value="LogHistoryShipmentReportTit" global="true"/>
				<property-map resource="LogisticsUiLabels" map-name="uiLabelMap"/>
			</actions>
			<widgets>
				<decorator-screen name="LogisticsCommonDecorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<include-screen name="lib-report" location="component://bi-x/widget/libReport.xml"/>
						<platform-specific>
							<html>
								<html-template location="component://dms/webapp/dms/logistics/report/listHistoryShipmentReportOlap.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
    </screen>
    <screen name="ListPrintListHistoryShipmentReport">
    	<section>
    		<actions>
    			<property-map resource="POUiLabels" map-name="uiLabelMap" global="true"/>
    			<property-map resource="LogisticsUiLabels" map-name="uiLabelMap" global="true"/>
    			<property-map resource="SalesUiLabels" map-name="uiLabelMap" global="true"/>
    			<script location="component://dms/webapp/dms/WEB-INF/actions/logistics/getHistoryShipmentReport.groovy" />
    		</actions>
    		<widgets>
    			<decorator-screen name="FoReportDecorator" >
                   <decorator-section name="body">
                        <section>
                            <widgets>
                                <platform-specific>
								     <xsl-fo><html-template location="component://dms/webapp/dms/logistics/report/exportHistoryShipmentReportToPdf.fo.ftl"/></xsl-fo>
								</platform-specific>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
    		</widgets>
    	</section>
    </screen>
    <screen name="ListImportProductReturnByTH">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="stockIn"/>
                <set field="selectedSubMenuItem" value="ListImportProductReturnByTH"/>
                <set field="titleProperty" value="LogImportProductReturnByTH" global="true"/>
                <script location="component://dms/webapp/dms/WEB-INF/actions/logistics/getReceiveInventory.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="LogisticsCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<screenlet title="${uiLabelMap.LogProductInventoryReceive}">
                    		<platform-specific>
								<html>
									<html-template location="component://dms/webapp/dms/logistics/facility/listReceiveInventory.ftl"/>
								</html>
							</platform-specific>
                    	</screenlet>
    				</decorator-section>
    			</decorator-screen>
			</widgets>
       </section>
    </screen>
    <screen name="ListRequirementReceviceProductByLog">
    	<section>
            <actions>
                <set field="selectedMenuItem" value="stockIn"/>
                <set field="selectedSubMenuItem" value="ListRequirementReceviceProductByLog"/>
                <set field="titleProperty" value="LogListReceiveRequirementManaged" global="true"/>
                <script location="component://dms/webapp/dms/WEB-INF/actions/logistics/getReceiveInventory.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="LogisticsCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                   		<platform-specific>
							<html>
								<html-template location="component://dms/webapp/dms/logistics/facility/listRequirementReceviceProduct.ftl"/>
							</html>
						</platform-specific>
    				</decorator-section>
    			</decorator-screen>
			</widgets>
       </section>
    </screen>
    
</screens>