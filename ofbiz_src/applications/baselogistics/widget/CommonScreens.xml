<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="BaseLogisticsUiLabels" map-name="uiLabelMap" global="true"/>                
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseLogisticsErrorUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="layoutSettings.companyName" from-field="uiLabelMap.BaseLogisticsCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.BaseLogisticsCompanySubtitle" global="true"/>

                <set field="activeApp" value="baselogistics" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://baselogistics/widget/BaseLogisticsMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.BaseLogisticsApplication}" global="true"/>
                
                <set field="componentResourceName" value="BaseLogistics" global="true"/>
    			<set field="componentNameSc" value="baselogistics" global="true"/>
    			<set field="layoutSettings.styleSheets[]" value="/logresources/css/logistics.css" global="true"/>
            </actions>
            <widgets>
                <include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="BaseLogisticsCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="BASELOGISTICS" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.BaseLogisticsViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="baselogistics">
		<section>
			<widgets> 
				<include-menu location="component://baselogistics/widget/BaseLogisticsMenus.xml" name="BaseLogisticsAppBar" />
			</widgets>
		</section>
	</screen>
</screens>