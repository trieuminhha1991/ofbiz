<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="Picklist">
		<section>
			<actions>
				<set field="titleProperty" value="BLDmsDSDotSoan" />
				<set field="selectedMenuItem" value="Picklist" />
				<set field="selectedSubMenuItem" value="Picklist" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template
											location="component://baselogistics/webapp/baselogistics/picklist/Picklist.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="PicklistBin">
		<section>
			<actions>
				<set field="titleProperty" value="BLDmsDSPhieuSoan" />
				<set field="selectedMenuItem" value="Picklist" />
				<set field="selectedSubMenuItem" value="PicklistBin" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<platform-specific>
									<html>
										<html-template
											location="component://baselogistics/webapp/baselogistics/picklist/PicklistBin.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="CreatePicklistTitle">
		<section>
			<condition>
				<not>
					<if-empty field="parameters.picklistId" />
				</not>
			</condition>
			<widgets>
				<label style="ibefore-icon-angle-right" text="${uiLabelMap.BSId}: "></label>
				<link url-mode="plain" target="CreatePicklist?picklistId=${parameters.picklistId}" text="${parameters.picklistId}"></link>
			</widgets>
		</section>
	</screen>

	<screen name="CreatePicklist">
		<section>
			<actions>
				<set field="titleProperty" value="DmsPicklist" />
				<set field="selectedMenuItem" value="Picklist" />
				<set field="selectedSubMenuItem" value="CreatePicklist" />
				<set field="titleHeaderValue" value="CreatePicklistTitle" global="true" />
				<set field="titleHeaderLocation" value="component://baselogistics/widget/PicklistScreens.xml" global="true" />
				<script
					location="component://baselogistics/webapp/baselogistics/WEB-INF/actions/picklist/CreatePicklist.groovy"></script>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template
											location="component://baselogistics/webapp/baselogistics/picklist/CreatePicklist.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="PicklistDetailTitle">
		<section>
			<condition>
				<not>
					<if-empty field="parameters.picklistBinId" />
				</not>
			</condition>
			<widgets>
				<label style="ibefore-icon-angle-right" text="${uiLabelMap.BSId}: "></label>
				<link url-mode="plain" target="PicklistDetail?picklistBinId=${parameters.picklistBinId}" text="${parameters.picklistBinId}"></link>
			</widgets>
		</section>
	</screen>
	<screen name="PicklistDetail">
		<section>
			<actions>
				<set field="titleProperty" value="DmsPicklistDetail" />
				<set field="selectedMenuItem" value="Picklist" />
				<set field="selectedSubMenuItem" value="PicklistBin" />
				<set field="titleHeaderValue" value="PicklistDetailTitle" global="true" />
				<set field="titleHeaderLocation" value="component://baselogistics/widget/PicklistScreens.xml" global="true" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<platform-specific>
									<html>
										<html-template
											location="component://baselogistics/webapp/baselogistics/picklist/PicklistDetail.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ListPickistBins">
		<section>
			<actions>
				<set field="titleProperty" value="DmsPicklistDetail" />
				<set field="selectedMenuItem" default-value="Picklist" from-field="parameters.selectedMenuItem"/>
				<set field="selectedSubMenuItem" value="salesPickinglist" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<platform-specific>
									<html>
										<html-template
											location="component://baselogistics/webapp/baselogistics/picklist/listPicklistBins.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="DeliveryPlan">
		<section>
			<actions>
				<set field="titleProperty" value="BLDmsDeliveryPlan" />
				<set field="selectedMenuItem" value="DeliveryEntry" />
				<set field="selectedSubMenuItem" value="DeliveryPlan" />
				<script
					location="component://baselogistics/webapp/baselogistics/WEB-INF/actions/picklist/DeliveryPlan.groovy"></script>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<and>
									<if-olbius-has-permission/>
									<not>
										<if-compare operator="equals" value="[]" field="facilities"/>
									</not>
								</and>
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template
											location="component://baselogistics/webapp/baselogistics/picklist/DeliveryPlan.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
</screens>