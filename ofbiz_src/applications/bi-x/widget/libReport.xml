<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="lib-report">
		<section>
			<actions>
				<set field="ReportLibDefined" from-field="ReportLibDefined"
					default-value="N" global="true" type="String" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-compare operator="equals" value="N" field="ReportLibDefined"
							type="String" />
					</condition>
					<widgets>
						<section>
							<actions>
								<set field="ReportLibDefined" value="Y" global="true" type="String" />
								<set field="company" value="${userLogin.lastOrg}" />
								<property-map map-name="uiLabelMap" resource="OlapUiLabels" />
								<property-to-field resource="chart" property="tickInterval"
									field="tickInterval" />
							</actions>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://bi-x/widget/ftl/report-lib.ftl" />
									</html>
								</platform-specific>
							</widgets>
						</section>
					</widgets>
					<fail-widgets></fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>

</screens>