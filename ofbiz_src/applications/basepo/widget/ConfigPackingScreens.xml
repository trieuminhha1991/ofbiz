<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="GetListProductConfigPacking">
		<section>
			<actions>
				<set field="titleProperty" value="POConfigPacking" />
				<set field="selectedMenuItem" value="configPO" />
				<set field="selectedSubMenuItem" value="listProductConfigPacking" />
<!-- 				<set field="titleProperty" value="listProductConfigPacking" global="true" /> -->
				<property-map resource="BasePOUiLabels" map-name="uiLabelMap" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission />
					</condition>
					<widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<platform-specific>
									<html>
										<html-template location="component://basepo/webapp/basepo/configPacking/configProductCapacitys.ftl" />
									</html>
								</platform-specific>
							</decorator-section>
						</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<container style="alert alert-danger">
									<label text="${uiLabelMap.DmsNotPermission}" />
								</container>
							</decorator-section>
						</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>

	<screen name="ProductBrand">
		<section>
			<actions>
				<set field="selectedMenuItem" value="configPO" />
				<set field="selectedSubMenuItem" value="ProductBrand" />
				<set field="titleProperty" value="POProductBrand" global="true" />
				<property-map resource="BasePOUiLabels" map-name="uiLabelMap" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission />
					</condition>
					<widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<platform-specific>
									<html>
										<html-template location="component://basepo/webapp/basepo/configPacking/productBrands.ftl" />
									</html>
								</platform-specific>
							</decorator-section>
						</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<container style="alert alert-danger">
									<label text="${uiLabelMap.DmsNotPermission}" />
								</container>
							</decorator-section>
						</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>

</screens>