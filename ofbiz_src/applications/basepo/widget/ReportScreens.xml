	<screen name="ReportAccessories">
		<section>
			<actions>
				<set field="AccessoriesDefined" from-field="AccessoriesDefined" default-value="N" global="true" type="String" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-compare operator="equals" value="N" field="AccessoriesDefined" type="String" />
					</condition>
					<widgets>
						<section>
							<actions>
								<set field="AccessoriesDefined" value="Y" global="true" type="String" />
								<script location="component://basepo/webapp/basepo/WEB-INF/actions/report/ReportAccessories.groovy" />
							</actions>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://basepo/webapp/basepo/common/ReportAccessories.ftl" />
									</html>
								</platform-specific>
							</widgets>
						</section>
					</widgets>
					<fail-widgets></fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>
	
