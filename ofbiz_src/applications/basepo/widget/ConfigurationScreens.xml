<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="ConfigurationCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="PartyCurrencyConfig">
		<section>
			<actions>
				<set field="selectedMenuItem" value="configPO" />
				<set field="selectedSubMenuItem" value="PartyCurrency" />
				<set field="titleProperty" value="BPOCurrencyUomId" global="true" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission />
					</condition>
					<widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<platform-specific>
									<html>
										<html-template location="component://basepo/webapp/basepo/config/listPartyCurrency.ftl" />
									</html>
								</platform-specific>
							</decorator-section>
						</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<container style="alert alert-danger">
									<label text="${uiLabelMap.DmsNotPermission}" />
								</container>
							</decorator-section>
						</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>
	
	<screen name="ConfigScreens">
		<section>
			<actions>
				<set field="selectedMenuItem" value="configPO" />
				<set field="titleProperty" value="Configuration" global="true" />
				<property-map resource="BasePOUiLabels"
					map-name="uiLabelMap" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission />
					</condition>
					<widgets>
						<decorator-screen name="ConfigurationCommonDecorator">
							<decorator-section name="body">
								<section>
									<widgets>
										<container style="screenlet">
											<platform-specific>
												<html>
													<html-template location="component://basepo/webapp/basepo/config/config.ftl" />
												</html>
											</platform-specific>
										</container>
									</widgets>
								</section>										
							</decorator-section>
						</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="ConfigurationCommonDecorator">
							<decorator-section name="body">
								<container style="alert alert-danger">
									<label text="${uiLabelMap.DmsNotPermission}" />
								</container>
							</decorator-section>
						</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>
	
	
</screens>