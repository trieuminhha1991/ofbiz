<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="ListSupllierProduct">
		<section>
			<actions>
				<set field="selectedMenuItem" value="SupplierManager" />
				<set field="selectedSubMenuItem" value="listSupllierProduct" />
				<set field="statusId" from-field="parameters.statusId" />
				<set field="titleProperty" value="POSupplierProductList" />
				<property-map resource="BasePOErrorUiLabels" map-name="uiLabelMap" global="true" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission />
					</condition>
					<widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<screenlet title="${uiLabelMap.POSupplierProductList}" navigation-menu-name="supplierProductManagerMenu">
									<include-menu location="component://basepo/widget/BasePOMenus.xml" name="supplierProductManagerMenu" />
									<platform-specific>
										<html>
											<html-template location="component://basepo/webapp/basepo/productSupplier/productSupplierViewTotal.ftl" />
										</html>
									</platform-specific>
								</screenlet>
							</decorator-section>
						</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<container style="alert alert-danger">
									<label text="${uiLabelMap.DmsNotPermission}" />
								</container>
							</decorator-section>
						</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>

	<screen name="ProductSupplierViewGrid">
		<section>
			<actions>
			</actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://basepo/webapp/basepo/productSupplier/productSupplierViewGrid.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>

	<screen name="ProductSupplierNewProductSupplierPopup">
		<section>
			<actions>
			</actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://basepo/webapp/basepo/productSupplier/productSupplierNewProductSupplierPopup.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>

</screens>