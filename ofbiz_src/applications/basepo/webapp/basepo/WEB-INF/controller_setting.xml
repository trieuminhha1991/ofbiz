<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
	<description>Product Configuration File</description>

	<!-- Request Mappings -->
	<request-map uri="getUomByProductId">
		<security https="true" auth="true" />
		<event type="java" invoke="getUomByProductId"
			path="com.olbius.basepo.configPacking.ConfigPackingEvent"></event>
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	
	<request-map uri="getPartyCurrencyConfig">
		<security https="true" auth="true" />
		<response name="success" type="view" value="PartyCurrencyConfig" />
		<response name="error" type="view" value="PartyCurrencyConfig" />
	</request-map>
	
	<request-map uri="createMultiPartyCurrency">
		<security https="true" auth="true" />
		<event type="service" invoke="createMultiPartyCurrency" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	
	<request-map uri="createPartyCurrency">
		<security https="true" auth="true" />
		<event type="service" invoke="createPartyCurrency" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	
	<request-map uri="updatePartyCurrency">
		<security https="true" auth="true" />
		<event type="service" invoke="updatePartyCurrency" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	
	<!-- View Mappings -->
	<view-map name="PartyCurrencyConfig" type="screen"
		page="component://basepo/widget/ConfigurationScreens.xml#PartyCurrencyConfig" />
</site-conf>