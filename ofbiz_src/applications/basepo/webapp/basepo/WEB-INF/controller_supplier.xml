<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
	<request-map uri="viewSupplier">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ViewSupplier" />
	</request-map>

	<request-map uri="loadPostalAddress">
		<security auth="true" https="true" />
		<event type="service" invoke="loadPostalAddress"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>

	<request-map uri="createOrStorePostalAddress">
		<security auth="true" https="true" />
		<event type="service" invoke="createOrStorePostalAddress"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>

	<request-map uri="createPartySupplier">
		<security https="true" auth="true" />
		<event type="service" invoke="createPartySupplier" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	
	<request-map uri="createPartySupplierQuick">
		<security https="true" auth="true" />
		<event type="service" invoke="createPartySupplierQuick" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<request-map uri="updatePartySupplier">
		<security https="true" auth="true" />
		<event type="service" invoke="updatePartySupplier" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	
	<request-map uri="addProductsToSupplier">
		<security auth="true" https="true" />
		<event type="service" invoke="addProductsToSupplier"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>

    <request-map uri="updateSupplierTarget">
        <security auth="true" https="true" />
        <event type="service" invoke="updateSupplierTarget"></event>
        <response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
    </request-map>

    <view-map name="ViewSupplier" type="screen"
              page="component://basepo/widget/SupplierScreens.xml#ViewSupplier" />
</site-conf>