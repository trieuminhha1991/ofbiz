<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
	<description>Product Configuration File</description>

	<!-- Product quotation -->
	<request-map uri="calculatePurchasePrice">
		<security https="true" auth="true" />
		<event type="service" invoke="calculatePurchasePrice" />
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="listQuotationPO">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ListQuotationPO"/>
    </request-map>
	<request-map uri="newQuotationPO">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="NewQuotationPO"/>
    </request-map>
    <request-map uri="createQuotationPOAjax">
    	<security https="true" auth="true"/>
    	<event type="service" invoke="createProductQuotationPO"/>
    	<response name="success" type="request" value="json"/>
    	<response name="error" type="request" value="json"/>
    </request-map>
    <request-map uri="viewQuotationPO">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="ViewQuotationPO"/>
	</request-map>
	<request-map uri="updateQuotationPOThruDate">
    	<security https="true" auth="true"/>
    	<event type="service" invoke="updateQuotationPOThruDate"/>
        <response name="success" type="request-redirect" value="viewQuotationPO"><redirect-parameter name="productQuotationPOId"/></response>
        <response name="error" type="view" value="ViewQuotationPO"/>
    </request-map>
	<request-map uri="changeQuotationPOStatus">
        <security https="true" auth="true"/>
        <event type="service" invoke="changeQuotationPOStatus"/>
        <response name="success" type="request-redirect" value="viewQuotationPO"><redirect-parameter name="productQuotationPOId"/></response>
        <response name="error" type="view" value="ViewQuotationPO"/>
    </request-map>
    <request-map uri="editQuotationPO">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="EditQuotationPO"/>
    </request-map>
    <request-map uri="updateQuotationPOAjax">
    	<security https="true" auth="true"/>
    	<event type="service" invoke="updateProductQuotationPO"/>
    	<response name="success" type="request" value="json"/>
    	<response name="error" type="request" value="json"/>
    </request-map>
    <request-map uri="findProductPricePO">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="FindProductPricePO"/>
    </request-map>
    <request-map uri="findProductsAddToQuotPO">
		<security https="true" auth="true" />
		<event type="java" path="com.olbius.basepo.product.ProductEvents" invoke="findProductsAddToQuotPO"></event>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
    <request-map uri="getInfoProductAddToQuotPO">
		<security https="true" auth="true" />
		<event type="service" invoke="getInfoProductAddToQuotPO"></event>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	<request-map uri="printQuotationPO">
		<security https="true" auth="true" />
		<response name="success" type="view" value="PrintQuotationPO"/>
	</request-map>
    <!-- end quotation -->
    
    <!-- quotation -->
	<view-map name="ListQuotationPO" type="screen" page="component://basepo/widget/ProductQuotationScreens.xml#ListQuotationPO"/>
	<view-map name="EditQuotationPO" type="screen" page="component://basepo/widget/ProductQuotationScreens.xml#NewQuotationPO"/>
	<view-map name="ViewQuotationPO" type="screen" page="component://basepo/widget/ProductQuotationScreens.xml#ViewQuotationPO"/>
	<view-map name="NewQuotationPO" type="screen" page="component://basepo/widget/ProductQuotationScreens.xml#NewQuotationPO"/>
    <view-map name="PrintQuotationPO" type="screen" page="component://basepo/widget/ProductQuotationScreens.xml#PrintQuotationPO"/>
    <view-map name="FindProductPricePO" type="screen" page="component://basepo/widget/ProductScreens.xml#FindProductPricePO"/>
    <view-map name="PrintQuotationPO" type="screen" page="component://basepo/widget/ProductQuotationScreens.xml#PrintQuotationPO"/>
    
</site-conf>