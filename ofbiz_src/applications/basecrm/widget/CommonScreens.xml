<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

	<screen name="main-decorator">
		<section>
			<actions>
				<property-map resource="OldUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="BaseCRMUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="AccountingUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="PartyUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="OrderUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="ManufacturingUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="DmsUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="MarketingUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="CustomMarketingUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="CallCenterUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="BaseSalesUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="BaseSalesErrorUiLabels" map-name="uiLabelMap" global="true" />
				<set field="layoutSettings.companyName" from-field="uiLabelMap.BaseCRMCompanyName" global="true" />
				<set field="layoutSettings.companySubtitle" from-field="uiLabelMap.BaseCRMCompanySubtitle" global="true" />
				<set field="activeApp" value="basecrm" global="true" />
				<set field="applicationMenuName" value="MainAppBar" global="true" />
				<set field="applicationMenuLocation" value="component://basecrm/widget/BaseCRMMenus.xml" global="true" />
				<set field="applicationTitle" value="${uiLabelMap.BaseCRMApplication}" global="true" />
				<set field="componentResourceName" value="BaseCRM" global="true" />
				<set field="componentNameSc" value="basecrm" global="true" />
			</actions>
			<widgets>
				<include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml" />
			</widgets>
		</section>
	</screen>

	<screen name="BaseCRMCommonDecorator">
		<section>
			<actions>
				<set field="layoutSettings.javaScripts[+0]" value="/crmresources/js/Utils.js" global="true" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<decorator-section-include name="body" />
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="basecrm">
		<section>
			<widgets>
				<include-menu location="component://basecrm/widget/BaseCRMMenus.xml" name="BaseCRMAppBar" />
			</widgets>
		</section>
	</screen>

</screens>