<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="CommunicationSubject">
		<section>
			<actions>
				<set field="titleProperty" value="KCommunicationSubject" />
				<set field="selectedMenuItem" value="settingCallcenter" />
				<set field="selectedSubMenuItem" value="subject" />
			</actions>
			<widgets>
				<decorator-screen name="BaseCRMCommonDecorator" location="component://basecrm/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission />
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://basecrm/webapp/basecrm/crmsetting/communicationSubject.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

