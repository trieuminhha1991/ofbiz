<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="main">
		<section>
			<actions>
				<set field="headerItem" value="main" />
			</actions>
			<widgets>
				<decorator-screen name="BaseCRMCommonDecorator" location="component://basecrm/widget/CommonScreens.xml">
					<decorator-section name="body">
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="ListContactFamily">
		<section>
			<actions>
				<set field="selectedMenuItem" value="contact" />
				<set field="selectedSubMenuItem" value="ListContactFamily" />
				<set field="titleProperty" value="DmsListContactFamily" />
				<set field="layoutSettings.javaScripts[+0]" value="/crmresources/js/crm/listContactFamily.js" global="true" />
				<entity-condition list="listRoleType" entity-name="RoleType">
					<condition-list combine="or">
						<condition-expr field-name="parentTypeId" operator="equals" value="FAMILY_MEMBER" />
						<condition-expr field-name="parentTypeId" operator="equals" value="PARENT" />
					</condition-list>
				</entity-condition>
			</actions>
			<widgets>
				<decorator-screen name="BaseCRMCommonDecorator" location="component://basecrm/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission />
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://basecrm/webapp/basecrm/crm/listContactFamily.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

