	<screen name="ReportDecorator">
		<section>
			<actions>
				<property-map resource="CallCenterUiLabels" map-name="uiLabelMap" global="true" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<decorator-section-include name="body" />
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="CallResultCampaign">
		<section>
			<actions>
				<set field="selectedMenuItem" value="report" />
				<set field="selectedSubMenuItem" value="communicationCampaign" />
				<set field="titleProperty" value="CallResultCampaignReport" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission />
					</condition>
					<widgets>
						<decorator-screen name="ReportDecorator" location="component://basecrm/widget/ReportScreens.xml">
							<decorator-section name="body">
								<include-screen name="lib-report" location="component://bi-x/widget/libReport.xml" />
								<platform-specific>
									<html>
										<html-template location="component://basecrm/webapp/basecrm/report/communicationCampaignReport.ftl" />
									</html>
								</platform-specific>
							</decorator-section>
						</decorator-screen>
					</widgets>
				</section>
			</widgets>
		</section>
	</screen>

