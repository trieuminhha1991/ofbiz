<?xml version="1.0" encoding="UTF-8"?>
<ofbiz-component name="basecrm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">
	<!-- define resource loaders; most common is to use the component resource 
		loader -->
	<resource-loader name="main" type="component" />

	<!-- place the config directory on the classpath to access configuration 
		files -->
	<classpath type="dir" location="config" />
	<classpath type="dir" location="dtd" />

	<!-- load single or multiple external libraries -->
	<classpath type="jar" location="build/lib/*" />
	<classpath type="jar" location="lib/*" />

	<!-- entity resources: model(s), eca(s), group, and data definitions -->
	<entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml" />
	<entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_callcenter.xml" />
	<entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_marketing.xml" />
	<!-- <entity-resource type="eca" reader-name="main" loader="main" location="entitydef/eecas.xml"/> -->
	<entity-resource type="data" reader-name="seed" loader="main" location="data/BaseCRMTypeData.xml" />
	<entity-resource type="data" reader-name="seed" loader="main" location="data/BaseCRMSecurityPermissionSeedData.xml" />
	<entity-resource type="data" reader-name="coredemo" loader="main" location="data/BaseCRMSecurityGroupDemoData.xml" />
	<entity-resource type="data" reader-name="coredemo" loader="main" location="data/BaseCRMDemoData.xml" />

	<!-- service resources: model(s), eca(s) and group definitions -->
	<service-resource type="model" loader="main" location="servicedef/services_crm.xml" />
	<service-resource type="model" loader="main" location="servicedef/services_callcenter.xml" />
	<service-resource type="model" loader="main" location="servicedef/services_crmcampaign.xml" />
	<service-resource type="model" loader="main" location="servicedef/services_crmsetting.xml" />
	<service-resource type="model" loader="main" location="servicedef/services_report.xml" />
	<!-- <service-resource type="eca" loader="main" location="servicedef/secas.xml"/> 
		<service-resource type="group" loader="main" location="servicedef/groups.xml"/> -->

	<test-suite loader="main" location="testdef/BaseCRMTests.xml" />

	<!-- web applications; will be mounted when using the embedded container -->
	<webapp name="basecrm" title="BaseCRM"
		server="default-server"
		location="webapp/basecrm"
		base-permission="BASECRM"
		mount-point="/basecrm"
		app-bar-display="false" />

	<webapp name="basecrmresources" title="BaseCRM"
		server="default-server"
		location="webapp/basecrm/resources"
		base-permission="BASECRM"
		mount-point="/crmresources"
		app-bar-display="false" />

</ofbiz-component>
