<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>
    <include location="component://basecrm/webapp/basecrm/WEB-INF/controller_callcenter.xml"/>
    <include location="component://basecrm/webapp/basecrm/WEB-INF/controller_crmsetting.xml"/>
    <include location="component://basecrm/webapp/basecrm/WEB-INF/controller_crmreport.xml"/>
    <include location="component://basecrm/webapp/basecrm/WEB-INF/controller_crmcampaign.xml"/>

    <description>CRM Component Site Configuration File</description>

    <!-- Request Mappings -->
    <request-map uri="jqxGeneralServicer">
        <event type="java" invoke="jqxEventProcessor" path="com.olbius.events.JqxEvents" global-transaction="false"/>
        <response name="success" type="none" />
        <response name="error" type="none" />
    </request-map>
    
    <request-map uri="main">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="main"/>
   	</request-map>
    
    <request-map uri="ListContactFamily">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ListContactFamily" />
	</request-map>
	<request-map uri="ListContactBusinesses">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ListContactBusinesses" />
	</request-map>
	<request-map uri="ListContactSchool">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ListContactSchool" />
	</request-map>
	<request-map uri="ListCustomersFamily">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ListCustomersFamily" />
	</request-map>
	<request-map uri="ListCustomersBusinesses">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ListCustomersBusinesses" />
	</request-map>
	<request-map uri="ListCustomersSchool">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ListCustomersSchool" />
	</request-map>
	
	<request-map uri="Analytics">
		<security https="true" auth="true" />
		<response name="success" type="view" value="Analytics" />
	</request-map>
	
    <request-map uri="autoCompleteGeoAjax">
		<security https="false" auth="true" />
		<event type="service" invoke="autoCompleteGeoAjax"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	
    <request-map uri="checkAndUpdateRelSalesExecutive">
		<security https="false" auth="true" />
		<event type="service" invoke="checkAndUpdateRelSalesExecutive"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	
    <!-- View Mappings -->
    <view-map name="main" type="screen" page="component://basecrm/widget/BaseCRMScreens.xml#main"/>
    <view-map name="ListContactFamily" type="screen" page="component://basecrm/widget/BaseCRMScreens.xml#ListContactFamily"/>
    <view-map name="ListContactBusinesses" type="screen" page="component://basecrm/widget/BaseCRMScreens.xml#ListContactBusinesses"/>
    <view-map name="ListContactSchool" type="screen" page="component://basecrm/widget/BaseCRMScreens.xml#ListContactSchool"/>
    <view-map name="ListCustomersFamily" type="screen" page="component://basecrm/widget/BaseCRMScreens.xml#ListCustomersFamily"/>
    <view-map name="ListCustomersBusinesses" type="screen" page="component://basecrm/widget/BaseCRMScreens.xml#ListCustomersBusinesses"/>
    <view-map name="ListCustomersSchool" type="screen" page="component://basecrm/widget/BaseCRMScreens.xml#ListCustomersSchool"/>
    <view-map name="Analytics" type="screen" page="component://basecrm/widget/BaseCRMScreens.xml#Analytics"/>
</site-conf>