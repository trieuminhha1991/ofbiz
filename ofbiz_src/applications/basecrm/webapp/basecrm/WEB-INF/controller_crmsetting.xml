<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>

    <description>CRM Setting Component Site Configuration File</description>
    
    <request-map uri="CommunicationSubject">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="CommunicationSubject"/>
	</request-map>
	<request-map uri="CommunicationResult">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="CommunicationResult"/>
	</request-map>
	<request-map uri="CommunicationReason">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="CommunicationReason"/>
	</request-map>
	<request-map uri="Rivals">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="Rivals"/>
	</request-map>
	<request-map uri="ProductsOfRivals">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="ProductsOfRivals"/>
	</request-map>
	
	<request-map uri="checkEnumerationCode">
		<security https="true" auth="true"/>
		<event type="service" invoke="checkEnumerationCode"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="checkEnumerationTypeId">
		<security https="true" auth="true"/>
		<event type="service" invoke="checkEnumerationTypeId"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    
	<request-map uri="setPartyStatus">
		<security https="true" auth="true"/>
		<event type="service" invoke="setPartyStatus"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    
	<request-map uri="getProductsInSubject">
		<security https="false" auth="true"/>
		<event type="service" invoke="getProductsInSubject"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    
	<request-map uri="createEnumerationRelProduct">
		<security https="true" auth="true"/>
		<event type="service" invoke="createEnumerationRelProduct"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="updateEnumerationRelProduct">
		<security https="true" auth="true"/>
		<event type="service" invoke="updateEnumerationRelProduct"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="deleteEnumerationRelProduct">
		<security https="true" auth="true"/>
		<event type="service" invoke="deleteEnumerationRelProduct"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    
    
    <view-map name="CommunicationSubject" type="screen" page="component://basecrm/widget/BaseCRMSettingScreens.xml#CommunicationSubject"/>
    <view-map name="CommunicationResult" type="screen" page="component://basecrm/widget/BaseCRMSettingScreens.xml#CommunicationResult"/>
    <view-map name="CommunicationReason" type="screen" page="component://basecrm/widget/BaseCRMSettingScreens.xml#CommunicationReason"/>
    <view-map name="Rivals" type="screen" page="component://basecrm/widget/BaseCRMSettingScreens.xml#Rivals"/>
    <view-map name="ProductsOfRivals" type="screen" page="component://basecrm/widget/BaseCRMSettingScreens.xml#ProductsOfRivals"/>
</site-conf>