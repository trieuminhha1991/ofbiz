<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
	<screen name="SettingDecorator">
    	<section>
    		<widgets>
    			<decorator-screen name="main-decorator" location="component://appbase/widget/CommonScreens.xml">
    				<decorator-section name="body">
    					<decorator-section-include name="body"/>
    				</decorator-section>
    			</decorator-screen>
    		</widgets>
    	</section>
    </screen>
    
   <screen name="ConfigTerminalPOS">
   		<section>
   			<actions>
   				<set field="titleProperty" value="BPOSTerminalPOS" />
   				<set field="selectedMenuItem" value="settingSales" />
				<set field="selectedSubMenuItem" value="configTerminalPOS" />
   			</actions>
   			<widgets>
   				<section>
   					<condition>
   						<if-olbius-has-permission/>
   					</condition>	
   					<widgets>
   						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
		   					<decorator-section name="body">
		   						<platform-specific>
				   					<html>
				   						<html-template location="component://basepos/webapp/basepos/settings/terminalPOSList.ftl"/>
				   					</html>
				   				</platform-specific>		
		   					</decorator-section>
		   				</decorator-screen>
   					</widgets>
   					<fail-widgets>
   						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
		   					<decorator-section name="body">
		   						<label style="h4">${uiLabelMap.BasePosViewPermissionError}</label>
		   					</decorator-section>
		   				</decorator-screen>
   					</fail-widgets>
   				</section>
   			</widgets>
   		</section>
   </screen>
   
   <screen name="ConfigPrintOrderPOS">
   		<section>
   			<actions>
   				<set field="titleProperty" value="BPOSPrintOrderPOS" />
   				<set field="selectedMenuItem" value="settingSales" />
				<set field="selectedSubMenuItem" value="configPrintOrderPOS" />
   			</actions>
   			<widgets>
   				<section>
   					<condition>
   						<if-olbius-has-permission/>
   					</condition>	
   					<widgets>
   						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
		   					<decorator-section name="body">
		   						<platform-specific>
				   					<html>
				   						<html-template location="component://basepos/webapp/basepos/settings/configPrintOrderPOS.ftl"/>
				   					</html>
				   				</platform-specific>		
		   					</decorator-section>
		   				</decorator-screen>
   					</widgets>
   					<fail-widgets>
   						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
		   					<decorator-section name="body">
		   						<label style="h4">${uiLabelMap.BasePosViewPermissionError}</label>
		   					</decorator-section>
		   				</decorator-screen>
   					</fail-widgets>
   				</section>
   			</widgets>
   		</section>
   </screen>
   
</screens>  