<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
    <screen name="Main">
        <section>
            <actions>
                <set field="titleProperty" value="BPOSPos"/>
                <set field="MainColumnStyle" value="center"/>
                <property-map resource="BasePosUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BasePosErrorUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="WidgetUiLabels" map-name="uiLabelMap" global="true"/>
                <script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/Header.groovy" />
            </actions>
            <widgets>
                <decorator-screen name="CommonWebPosMainDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <!-- Shortcut screen -->
    <screen name="ShortcutsListWebPos">
        <section>
            <widgets>
              <include-screen name="ShortcutsWebPos"/>
            </widgets>
        </section>
    </screen>
    
    <screen name="ShortcutsWebPos">
        <section>
            <widgets>
            	<platform-specific>
            		<html>
            			<html-template location="component://basepos/webapp/basepos/pos/ShortcutsWebPos.ftl"/>
            		</html>
            	</platform-specific>
            </widgets>
        </section>
    </screen>
    
    <!-- Party screen -->
    <screen name="PartyInfo">
        <section>
            <widgets>
                <container id="PartyAddress" style="col-md-3 co-lg-3 col-xs-3 col-sm-3 pos-right w30">
                    <include-screen name="PosPartyInfo"/>
                </container>
            </widgets>
        </section>
    </screen>

    <screen name="PosPartyInfo">
        <section>
            <widgets>
            	<platform-specific>
            		<html>
            			<html-template location="component://basepos/webapp/basepos/pos/partyinfo.ftl"/>
            		</html>
            	</platform-specific>
            </widgets>
        </section>
    </screen>
    
    <!-- Cart screen -->
    <screen name="CartItemSelected">
        <section>
            <widgets>
                <container id="CartItemSelected" style="col-md-9 co-lg-9 col-xs-9 col-sm-9 pos-left w70">
                    <include-screen name="ShowCartItemSelected"/>
                </container>
            </widgets>
        </section>
    </screen>
    
    <screen name="ShowCartItemSelected">
        <section>
            <widgets>
                 <platform-specific>
                 	<html>
                 		<html-template location="component://basepos/webapp/basepos/pos/ShowCartItemSelected.ftl"/>
                 	</html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
    
    <screen name="CartListWebPOS">
        <section>
            <widgets>
	            <container id="CartListWebPOS" style="widget">
	                <include-screen name="ShowCartWebPOS"/>
	            </container>
            </widgets>
        </section>
    </screen>
    
    <screen name="ShowCartWebPOS">
        <section>
            <widgets>
                <container id="list-items" >
                    <platform-specific>
                    	<html>
                    		<html-template location="component://basepos/webapp/basepos/pos/ShowCart.ftl"/>
                    	</html>
                    </platform-specific>
                </container>
            </widgets>
        </section>
    </screen>
    
    <screen name="CartHeaderWebPOS">
        <section>
            <widgets>
            	 <container id="CartHeader" style="widget">
            	 	<include-screen name="CartHeader"/>
            	 </container>
            </widgets>
        </section>
    </screen>
    
    <screen name="CartHeader">
    	<section>
    		<actions>
    			<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/GetCart.groovy" />
    		</actions>
            <widgets>
            	<platform-specific>
            		<html>
            			<html-template location="component://basepos/webapp/basepos/pos/CartHeaderWebPOS.ftl"/>
            		</html>
            	</platform-specific>
            </widgets>
    	</section>
    </screen>
    
    <screen name="ViewHoldCart">
        <section>
            <widgets>
            	<include-screen name="HoldCartGeneral"/>
            </widgets>
        </section>
    </screen>
    
    <screen name="HoldCartGeneral">
        <section>
        	<actions>
        		<property-map resource="WidgetUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="BasePosUiLabels" map-name="uiLabelMap" global="true"/>
				<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/GetCart.groovy" />
        	</actions>
            <widgets>
            	<platform-specific>
            		<html>
            			<html-template location="component://basepos/webapp/basepos/pos/ViewHoldCartJQ.ftl"/>
            		</html>
            	</platform-specific>
            </widgets>
        </section>
    </screen>
    
    <screen name="PrintOrder">
        <section>
        	<actions>
				<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/GetFacilityId.groovy"/>	
				<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/GetCart.groovy" />
        	</actions>
            <widgets>
	            <platform-specific>
	            	<html>
	            		<html-template location="component://basepos/webapp/basepos/pos/PrintOrder.ftl"/>
	            	</html>
	            </platform-specific>
            </widgets>
        </section>
    </screen>
    
    <screen name="SaleHistory">
		<section>
			<actions>
				<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/GetFacilityId.groovy"/>
				<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/GetCart.groovy" />
			</actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://basepos/webapp/basepos/pos/SalesHistory.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="ListPromotion">
		<section>
			<actions>
				<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/GetFacilityId.groovy"/>
			</actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://basepos/webapp/basepos/pos/ListPromotion.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="PromotionCode">
        <section>
            <widgets>
                <container>
                    <platform-specific>
                    	<html>
                    		<html-template location="component://basepos/webapp/basepos/pos/PromotionCode.ftl"/>
                    	</html>
                    </platform-specific>
                </container>
            </widgets>
        </section>
    </screen>
    
	<screen name="OlbiusPOSHelpCenter">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://basepos/webapp/basepos/pos/OlbiusPOSHelpCenter.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	<screen name="OlbiusPOSParReturn">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://basepos/webapp/basepos/pos/ParReturn.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	<screen name="OlbiusSecuriry">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://basepos/webapp/basepos/pos/OlbiusSecuriry.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
    
	<!-- Manage screen -->
    <screen name="CloseTerminal">
        <section>
            <widgets>
                <container>
                    <platform-specific>
                    	<html>
                    		<html-template location="component://basepos/webapp/basepos/pos/ShowCloseTerminal.ftl"/>
                    	</html>
                    </platform-specific>
                </container>
            </widgets>
        </section>
    </screen>
    
    <screen name="PaidOut">
        <section>
            <actions>
                <entity-condition list="invoiceItemTypeList" entity-name="InvoiceItemType">
                	<condition-expr field-name="parentTypeId" value="DIFF_EXPENSES_SALE" operator="equals"/>
                </entity-condition>
            </actions>
            <widgets>
                <container>
                    <platform-specific>
                    	<html>
                    		<html-template location="component://basepos/webapp/basepos/pos/PaidOut.ftl"/>
                    	</html>
                    </platform-specific>
                </container>
            </widgets>
        </section>
    </screen>
    
    <screen name="PaidIn">
        <section>
            <actions>
                <entity-condition list="invoiceItemTypeList" entity-name="InvoiceItemType">
                	<condition-expr field-name="parentTypeId" value="DIFF_TURNOVER_SALE" operator="equals"/>
                </entity-condition>
            </actions>
            <widgets>
                <container>
                    <platform-specific>
                    	<html>
                    		<html-template location="component://basepos/webapp/basepos/pos/PaidIn.ftl"/>
                    	</html>
                    </platform-specific>
                </container>
            </widgets>
        </section>
    </screen>
    
    <!-- Payment screen -->
    <screen name="PayCash">
        <section>
            <widgets>
                <container>
                    <platform-specific>
                    	<html>
                    		<html-template location="component://basepos/webapp/basepos/pos/PayCash.ftl"/>
                    	</html>
                    </platform-specific>
                </container>
            </widgets>
        </section>
    </screen>
    
    <screen name="CreateOrderToLog">
        <section>
            <widgets>
                <container>
                    <platform-specific>
                    	<html>
                    		<html-template location="component://basepos/webapp/basepos/pos/CreateOrderToLog.ftl"/>
                    	</html>
                    </platform-specific>
                </container>
            </widgets>
        </section>
    </screen>
    
    <screen name="CreateNewCustomer">
        <section>
        	<actions>
        		<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/GetFacilityId.groovy"/>
        	</actions>
            <widgets>
                <container>
                    <platform-specific>
                    	<html>
                    		<html-template location="component://basepos/webapp/basepos/pos/CreateNewCustomer.ftl"/>
                    	</html>
                    </platform-specific>
                </container>
            </widgets>
        </section>
    </screen>
    
</screens>