<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
    <screen name="BasePosCommonDecorator">
        <section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="BASEPOS" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.BasePosViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="main-decorator">
		<section>
			<actions>
				<property-map resource="WidgetUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="BasePosUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="BasePosErrorUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="BaseSalesUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="HelpCenterUiLabels" map-name="uiLabelMap" global="true"/>
				<set field="layoutSettings.companyName" from-field="uiLabelMap.BasePosCompanyName" global="true" />
				<set field="layoutSettings.companySubtitle" from-field="uiLabelMap.BasePosCompanySubtitle" global="true" />
				<set field="applicationTitle" value="${uiLabelMap.BPOSPos}" global="true" />
				<set field="componentResourceName" value="BasePos" global="true"/>
            	<set field="componentNameSc" value="basepos" global="true"/>		
			</actions>
			<widgets>
				<include-screen name="ApplicationDecoratorWebPos" location="component://commonext/widget/CommonScreens.xml" />
			</widgets>
		</section>
	</screen>
	
	<screen name="CommonWebPosMainDecorator">
		<section>
			<actions>
				<set field="layoutSettings.styleSheets[+0]" value="/posresources/assets/css/bootstrap-responsive.min.css" global="true" />
				<set field="layoutSettings.styleSheets[+0]" value="/aceadmin/assets/css/olbius-form-standard.css" global="true"/>
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/assets/js/jquery.PrintArea.js" global="true" />
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/assets/js/bootbox-4.2.0.min.js" global="true" />
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/assets/js/jquery.maskMoney.js" global="true"/>
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/js/Shortcuts.js" global="true" />
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/js/SearchPos.js" global="true" />
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/js/ShowCartItemSelected.js" global="true" />
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/js/CloseTerminal.js" global="true" />
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/js/PromotionCode.js" global="true" />
				<set field="layoutSettings.javaScripts[]" value="/posresources/js/ShowCart.js" global="true" />
				<set field="layoutSettings.javaScripts[]" value="/posresources/js/PayCash.js" global="true" />
				<set field="layoutSettings.javaScripts[]" value="/posresources/js/CreateOrder.js" global="true" />
				<set field="layoutSettings.javaScripts[]" value="/posresources/js/PayFinish.js" global="true" />
				<set field="layoutSettings.javaScripts[]" value="/crmresources/js/Underscore1.8.3.js" global="true" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<include-screen name="PrintOrder" location="component://basepos/widget/WebPosScreens.xml"/>
								<container style="content ">
									<container style="container-fluid">
										<container style="row-fluid">
											<container>
												<include-screen name="CenterBarWebPOS" />
												<container style="col-md-12 co-lg-12 col-xs-12 col-sm-12">
													<include-screen name="CartItemSelected" location="component://basepos/widget/WebPosScreens.xml"/>
													<include-screen name="PartyInfo" location="component://basepos/widget/WebPosScreens.xml"/>
												</container>
											</container>
											<container style="col-md-12 co-lg-12 col-xs-12 col-sm-12" id="content-body" >
												<container style="col-md-9 co-lg-9 col-xs-9 col-sm-9 pos-left w70">
													<include-screen name="CartListWebPOS" location="component://basepos/widget/WebPosScreens.xml"/>
												</container>
												<container style="col-md-3 co-lg-3 col-xs-3 col-sm-3 pos-right w30">
													<container style="pos-checkout">
														<include-screen name="CartHeaderWebPOS" location="component://basepos/widget/WebPosScreens.xml"/>
													</container>
													<container style="col-md-12 co-lg-12 col-xs-12 col-sm-12 no-padding-left no-padding-right">
														<include-screen name="ShortcutsListWebPos" location="component://basepos/widget/WebPosScreens.xml" />
													</container>
												</container>
											</container>
										</container>
									</container>
								</container>
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="CenterBarWebPOS">
		<section>
			<widgets>
				<container id="CenterBar">
					<include-screen name="WebPosUiLabels"/>
					<include-screen name="ViewHoldCart" location="component://basepos/widget/WebPosScreens.xml"/>
		            <include-screen name="SaleHistory" location="component://basepos/widget/WebPosScreens.xml"/>
		            <include-screen name="ListPromotion" location="component://basepos/widget/WebPosScreens.xml"/>
					<include-screen name="PayCash" location="component://basepos/widget/WebPosScreens.xml" />
					<include-screen name="CreateOrderToLog" location="component://basepos/widget/WebPosScreens.xml" />
					<include-screen name="CreateNewCustomer" location="component://basepos/widget/WebPosScreens.xml" />
					<include-screen name="CloseTerminal" location="component://basepos/widget/WebPosScreens.xml"/>
					<include-screen name="PaidOut" location="component://basepos/widget/WebPosScreens.xml" />
					<include-screen name="PaidIn" location="component://basepos/widget/WebPosScreens.xml" />
					<include-screen name="PromotionCode" location="component://basepos/widget/WebPosScreens.xml"/>
					<include-screen name="OlbiusPOSHelpCenter" location="component://basepos/widget/WebPosScreens.xml"/>
					<include-screen name="OlbiusPOSParReturn" location="component://basepos/widget/WebPosScreens.xml"/>
					<include-screen name="OlbiusSecuriry" location="component://basepos/widget/WebPosScreens.xml"/>
				</container>
			</widgets>
		</section>
	</screen>
	
	<screen name="LoginDecoratorScreen">
		<section>
			<actions>
				<property-map resource="BasePosUiLabels" map-name="uiLabelMap" global="true" />
				<set field="layoutSettings.companyName" from-field="uiLabelMap.BasePosCompanyName" global="true" />
				<set field="layoutSettings.companySubtitle" from-field="uiLabelMap.BasePosCompanySubtitle" global="true" />
				<set field="activeApp" value="basepos" global="true" />
				<set field="applicationTitle" value="${uiLabelMap.BPOSPos}" global="true" />
			</actions>
			<widgets>
				<include-screen name="ApplicationDecoratorWebPosLogin" location="component://commonext/widget/CommonScreens.xml" />
			</widgets>
		</section>
	</screen>
	
	<screen name="Login">
		<section>
			<actions>
				<set field="MainColumnStyle" value="leftonly" />
				<set field="titleProperty" value="PageTitleLogin" />
				<set field="headerItem" value="login" />
				<property-map resource="BasePosUiLabels" map-name="uiLabelMap" global="true" />
				<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/Login.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="LoginDecoratorScreen">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://basepos/webapp/basepos/login/Login.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="forgotPassword">
		<section>
			<actions>
				<set field="MainColumnStyle" value="leftonly" />
				<set field="titleProperty" value="PageTitleLogin" />
				<set field="headerItem" value="login" />
				<property-map resource="BasePosUiLabels" map-name="uiLabelMap" global="true" />
				<script location="component://basepos/webapp/basepos/WEB-INF/actions/cart/Login.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="LoginDecoratorScreen">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://common/webcommon/forgotPassword.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	
	<screen name="showOpenTerminal">
		<section>
			<actions>
				<set field="MainColumnStyle" value="leftonly" />
				<set field="titleProperty" value="BPOSShowOpenTerminal" />
				<set field="headerItem" value="BPOSShowOpenTerminal" />
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/assets/js/bootbox-3.3.0.min.js" global="true" />
				<set field="layoutSettings.javaScripts[+0]" value="/posresources/assets/js/jquery.maskMoney.js" global="true"/>
			</actions>
			<widgets>
				<decorator-screen name="LoginDecoratorScreen">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://basepos/webapp/basepos/pos/ShowOpenTerminal.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="WebPosUiLabels">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://basepos/webapp/basepos/pos/WebPosUiLabels.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="requirePasswordChange">
		<section>
			<widgets>
				<decorator-screen name="LoginDecoratorScreen">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://common/webcommon/changePassword.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>