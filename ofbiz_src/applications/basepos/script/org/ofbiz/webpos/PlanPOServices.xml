<?xml version="1.0" encoding="UTF-8"?>
<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">
	<simple-method method-name="createPlanPO" short-description="Create a plan PO Entity">
		<make-value value-field="newEntity" entity-name="PlanPurchaseOrder" />
		<sequenced-id sequence-name="PlanPurchaseOrder" field="newEntity.planPOId" />
		<set-nonpk-fields value-field="newEntity" map="parameters" />
		<if-not-empty field="parameters.createdDate">
			<set field="newEntity.createdDate" from-field="parameters.createdDate" />
			<else>
				<now-timestamp field="nowTimestamp" />
				<set field="newEntity.createdDate" from-field="nowTimestamp" />
			</else>
		</if-not-empty>
		<create-value value-field="newEntity" />
		<check-errors />
		<field-to-result field="newEntity.planPOId" result-name="planPOId" />
	</simple-method>
	
	<simple-method method-name="createPlanPOItem" short-description="Create a plan Purchase Order Item Entity">
		<make-value value-field="newEntity" entity-name="PlanPurchaseOrderItem" />
		<set field="planPOId" from-field="parameters.planPOId" />
		<set field="planPOItemSeqId" from-field="parameters.planPOItemSeqId" />
		<set field="newEntity.planPOId" from-field="planPOId" />
		<set field="newEntity.planPOItemSeqId" from-field="planPOItemSeqId" />
		<set-nonpk-fields value-field="newEntity" map="parameters" />
		<create-value value-field="newEntity" />
		<check-errors />
		<field-to-result field="planPOId" result-name="planPOId" />
		<field-to-result field="planPOItemSeqId" result-name="planPOItemSeqId" />
	</simple-method>
	
	<simple-method method-name="createPlanPOItemFacility" short-description="Create a plan Purchase Order Item Facility Entity">
		<make-value value-field="newEntity" entity-name="PlanPurchaseOrderItemFacility" />
		<set field="planPOId" from-field="parameters.planPOId" />
		<set field="productId" from-field="parameters.productId" />
		<set field="facilityId" from-field="parameters.facilityId" />
		<set field="newEntity.planPOId" from-field="planPOId" />
		<set field="newEntity.productId" from-field="productId" />
		<set field="newEntity.facilityId" from-field="facilityId" />
		<set-nonpk-fields value-field="newEntity" map="parameters" />
		<create-value value-field="newEntity" />
		<check-errors />
		<field-to-result field="planPOId" result-name="planPOId" />
		<field-to-result field="productId" result-name="productId" />
		<field-to-result field="facilityId" result-name="facilityId" />
	</simple-method>
	
</simple-methods>