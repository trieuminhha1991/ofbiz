<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../framework/service/dtd/services.xsd">
	<description>JcrClient Services</description>
	<vendor></vendor>
	<version>1.0</version>

	<service name="jackrabbitRemoteLogin" engine="interface">
		<attribute name="public" mode="IN" type="String" optional="true" />
	</service>

	<service name="jackrabbitScaleImageService" engine="java" location="com.olbius.jackrabbit.client.services.JackrabbitOlbiusDataServices"
		invoke="jackrabbitScaleImageService">
		<implements service="jackrabbitRemoteLogin" optional="true" />
		<attribute name="curPath" mode="IN" type="String" optional="false" />
		<attribute name="imageUrl" mode="OUT" type="java.util.Map" optional="false"></attribute>
		<attribute name="pathType" mode="IN" type="String" optional="true" />
	</service>

	<service name="jackrabbitUpdateDataResource" default-entity-name="DataResource" engine="java" auth="false"
		location="com.olbius.jackrabbit.services.dataresource.DataResource" invoke="jackrabbitUpdateDataResource">
		<implements service="uploadFileInterface" optional="false" />
		<implements service="updateDataResource" />
		<attribute name="folder" mode="IN" type="String" optional="true" />
	</service>

	<service name="jackrabbitCreateDataResource" default-entity-name="DataResource" engine="java" auth="false"
		location="com.olbius.jackrabbit.services.dataresource.DataResource" invoke="jackrabbitCreateDataResource">
		<implements service="uploadFileInterface" optional="false" />
		<implements service="createDataResource" />
		<attribute name="folder" mode="IN" type="String" optional="true" />
	</service>

	<service name="jackrabbitRegistry" engine="olbius" location="com.olbius.jackrabbit.client.services.JackrabbitRegistryService">
		<required-permissions join-type="AND">
			<olbius-permission />
		</required-permissions> 
	</service>
	
	<service name="jackrabbitRegistryFolder" engine="olbius" location="com.olbius.jackrabbit.client.services.JackrabbitRegistryFolder">
		<required-permissions join-type="AND">
			<olbius-permission />
		</required-permissions> 
		<attribute name="folder" mode="IN" type="String"/>
		<attribute name="permissions" mode="IN" type="String"/>
	</service>

</services>