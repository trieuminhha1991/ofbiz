<?xml version="1.0" encoding="UTF-8"?>
<ofbiz-component name="busmessage" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">
	<resource-loader name="main" type="component" />

	<classpath type="dir" location="config" />
	<classpath type="jar" location="build/lib/*" />
	<classpath type="jar" location="lib/*" />

	<entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml" />

	<service-resource type="model" loader="main" location="servicedef/services.xml" />
	<service-resource type="eca" loader="main" location="servicedef/secas.xml" />

	<container name="busmessage-container" class="com.olbius.activemq.container.MessageContainer">
		<property name="send" value="olbius:send"/>
		<property name="receive" value="olbius:receive"/>
		<property name="listenerTopic" value="ofbiz1,ofbiz2">
			<property name="productPublish" value="com.olbius.activemq.receive.ProductPublisher" />
			<property name="registerSupplier" value="com.olbius.activemq.receive.RegisterSupplier" />
		</property>
		<property name="listenerQueue" value="ofbiz1,ofbiz2">
			<property name="getProduct" value="com.olbius.activemq.receive.GetProduct" />
			<property name="getSupplier" value="com.olbius.activemq.receive.GetSupplier" />
			<property name="purchaseOrder" value="com.olbius.activemq.receive.PurchaseOrder" />
			<property name="updateOrderItems" value="com.olbius.activemq.receive.UpdateOrderItems" />
			<property name="orderCancelled" value="com.olbius.activemq.receive.OrderCancel" />
			<property name="updateInfo" value="com.olbius.activemq.receive.handle.UpdateInfo" />
			<property name="orderConfirm" value="com.olbius.activemq.receive.OrderConfirm" />
			<property name="orderItemCancelled" value="com.olbius.activemq.receive.OrderItemCancel" />
			<property name="orderAcept" value="com.olbius.activemq.receive.OrderAcept" />
			<property name="sales" value="com.olbius.activemq.receive.SalesOrder" />
		</property>
	</container>

</ofbiz-component>
