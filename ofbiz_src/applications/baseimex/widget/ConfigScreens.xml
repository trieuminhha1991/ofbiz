<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="ConfigCommonDecorator">
		<section>
			<actions>
				<set field="tabBarName" value="ConfigSubTabBar" global="true"/>
				<set field="tabBarLocation" value="component://baseimex/widget/BaseImExMenus.xml" global="true"/>
				<set field="selectedMenuItem" value="Configuration" />
				<set field="titleProperty" value="Configuration" global="true" />
				<property-map resource="BaseImExUiLabels" map-name="uiLabelMap" />
				<property-map resource="BaseLogisticsUiLabels" map-name="uiLabelMap" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ImExConfigs">
		<section>
			<actions>
				<set field="tabButtonItem" value="ImportPeriod" global="true"/>
				<set field="titleProperty" value="Configuration"/>
				<set field="selectedMenuItem" value="Configuration"/>
				<set field="selectedSubMenuItem" value="Configuration"/>
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission />
					</condition>
					<widgets>
						<decorator-screen name="ConfigCommonDecorator">
							<decorator-section name="body">
								<section>
									<widgets>
										<container style="screenlet">
											<platform-specific>
												<html>
													<html-template location="component://baseimex/webapp/baseimex/config/config.ftl" />
												</html>
											</platform-specific>
										</container>
									</widgets>
								</section>										
							</decorator-section>
						</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="ConfigCommonDecorator">
							<decorator-section name="body">
								<container style="alert alert-danger">
									<label text="${uiLabelMap.DmsNotPermission}" />
								</container>
							</decorator-section>
						</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>
	
	<screen name="ImportPeriodConfigs">
		<section>
			<widgets>
				<decorator-screen name="ConfigCommonDecorator">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://baseimex/webapp/baseimex/config/importPeriod.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ImportPortConfigs">
		<section>
			<widgets>
				<decorator-screen name="ConfigCommonDecorator">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://baseimex/webapp/baseimex/config/importPort.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ConfigGeneralCapacitys">
		<section>
			<widgets>
				<decorator-screen name="ConfigCommonDecorator">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://baseimex/webapp/baseimex/config/configCapacitys.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>