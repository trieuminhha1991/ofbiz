<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

	<screen name="main-decorator">
		<section>
			<actions>
				<property-map resource="BaseImExUiLabels" map-name="uiLabelMap" global="true" />
				<property-map resource="BaseImExErrorUiLabels" map-name="uiLabelMap" global="true"/>
				<property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true" />
				<set field="layoutSettings.companyName" from-field="uiLabelMap.BaseImExCompanyName" global="true" />
				<set field="layoutSettings.companySubtitle" from-field="uiLabelMap.BaseImExCompanySubtitle" global="true" />
				<set field="activeApp" value="baseimex" global="true" />
				<set field="applicationMenuName" value="MainAppBar" global="true" />
				<set field="applicationMenuLocation" value="component://baseimex/widget/BaseImExMenus.xml" global="true" />
				<set field="applicationTitle" value="${uiLabelMap.BaseImExApplication}" global="true" />
				<set field="componentResourceName" value="BaseImEx" global="true" />
				<set field="componentNameSc" value="baseimex" global="true" />
			</actions>
			<widgets>
				<include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml" />
			</widgets>
		</section>
	</screen>

	<screen name="BaseImExCommonDecorator">
		<section>
			<actions>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<if-has-permission permission="BASEIMEX" action="_VIEW" />
							</condition>
							<widgets>
								<decorator-section-include name="body" />
							</widgets>
							<fail-widgets>
								<label style="h3">${uiLabelMap.BaseImExViewPermissionError}
								</label>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="baseimex">
		<section>
			<widgets>
				<include-menu location="component://baseimex/widget/BaseImExMenus.xml" name="BaseImExAppBar" />
			</widgets>
		</section>
	</screen>

	<screen name="DetailAgreementCommonDecorator">
		<section>
			<actions>
				<set field="printTabBar" value="true" />
				<set field="tabBarName" value="PurchaseAgreementTabBar" global="true" />
				<set field="tabBarLocation" value="component://baseimex/widget/BaseImExMenus.xml" global="true" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<decorator-section-include name="body" />
							</widgets>
							<fail-widgets>
								<label style="h3">${uiLabelMap.DelysViewPermissionError}
								</label>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>