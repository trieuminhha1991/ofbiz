<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

	<screen name="CostsListView">
		<section>
			<actions>
				<set field="headerItem" value="orderentry" />
				<set field="titleProperty" value="KListCostsType" />
				<set field="selectedMenuItem" value="settingMarketing" />
				<set field="selectedSubMenuItem" value="listCosts" />
			</actions>
			<widgets>
				<section>
					<condition>
						<if-olbius-has-permission />
					</condition>
					<widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<section>
									<widgets>
										<container style="screenlet">
											<platform-specific>
												<html>
													<html-template location="component://basemarketing/webapp/basemarketing/setting/listCostsTypeJQ.ftl" />
												</html>
											</platform-specific>
											<container style="screenlet-body">
												<decorator-section-include name="body" />
											</container>
										</container>
									</widgets>
								</section>
							</decorator-section>
						</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<container style="alert alert-danger">
									<label text="${uiLabelMap.DmsNotPermission}" />
								</container>
							</decorator-section>
						</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>

	<screen name="ListRequirementRecevieProductActivation">
		<section>
			<actions>
				<set field="headerItem" value="orderentry" />
				<set field="titleProperty" value="ListReceiveActivationProduct" />
				<set field="selectedMenuItem" value="acivationProduct" />
				<set field="selectedSubMenuItem" value="ListRequirementRecevieProductActivation" />
				<script location="component://basemarketing/webapp/basemarketing/WEB-INF/actions/getReceiveInventory.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="DmsCommonDecorator" location="${parameters.mainDecoratorLocation}">
				</decorator-screen>
			</widgets>
		</section>
	</screen>

</screens>