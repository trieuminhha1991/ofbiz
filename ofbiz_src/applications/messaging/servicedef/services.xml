<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">

	<service name="sendTextMessage" engine="java" auth="true" location="com.olbius.jms.Publisher" invoke="sendTextMessage">
		<attribute name="message" mode="IN" type="String" optional="false" allow-html="any" />
		<attribute name="destination" mode="IN" type="String" optional="false" />
		<attribute name="destinationType" mode="IN" type="String" optional="true" default-value="queue" />
	</service>
	
	<service name="sendProduct" engine="java" auth="true" location="com.olbius.jms.Publisher" invoke="sendProduct">
		<attribute name="productId" mode="IN" type="String" optional="false"/>
		<attribute type="String" mode="OUT" name="productXml" optional="false" allow-html="any"/>
	</service>
</services>