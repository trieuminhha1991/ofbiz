<?xml version="1.0" encoding="UTF-8"?>

<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">

	<include location="component://common/webcommon/WEB-INF/common-controller.xml" />

	<request-map uri="jqxGeneralServicer">
		<event type="java" invoke="jqxEventProcessor" path="com.olbius.events.JqxEvents" global-transaction="false" />
		<response name="success" type="none" />
		<response name="error" type="none" />
	</request-map>

	<request-map uri="main">
		<security https="true" auth="true" />
		<response name="success" type="view" value="main" />
	</request-map>
	
	<request-map uri="party">
		<security https="true" auth="true" />
		<response name="success" type="view" value="party" />
	</request-map>
	
	<request-map uri="userLogin">
		<security https="true" auth="true" />
		<response name="success" type="view" value="userLogin" />
	</request-map>
	
	<request-map uri="application">
		<security https="true" auth="true" />
		<response name="success" type="view" value="application" />
	</request-map>

	<request-map uri="createOrUpdateValue">
		<security https="true" auth="true" />
		<event type="service" invoke="createOrUpdateValue" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	
	<request-map uri="removeValue">
		<security https="true" auth="true" />
		<event type="service" invoke="removeValue" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	
	<request-map uri="thruDateValue">
		<security https="true" auth="true" />
		<event type="service" invoke="thruDateValue" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<view-map name="main" type="screen" page="component://securityolbius/widget/SecurityScreens.xml#main" />
	<view-map name="party" type="screen" page="component://securityolbius/widget/PartyScreens.xml#party" />
	<view-map name="application" type="screen" page="component://securityolbius/widget/ApplicationScreens.xml#appliction" />
	<view-map name="userLogin" type="screen" page="component://securityolbius/widget/UserLoginScreens.xml#userLogin" />

</site-conf>
