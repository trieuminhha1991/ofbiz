<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
	<screen name="appliction">
		<section>
			<condition>
				<if-olbius-has-permission/>
			</condition>
			<actions>
				<script location="component://securityolbius/webapp/script/com/olbius/security/application/loadApplication.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="securityCommonDecorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template location="component://securityolbius/webapp/ftl/appliction/applicationMain.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
			<fail-widgets>
				<label style="h3">Access deny!</label>
			</fail-widgets>
		</section>
	</screen>

	<screen name="appDetail">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://securityolbius/webapp/ftl/appliction/appDetail.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="appList">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://securityolbius/webapp/ftl/appliction/appList.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="appMember">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://securityolbius/webapp/ftl/appliction/appMember.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="overridePermission">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://securityolbius/webapp/ftl/appliction/overridePermission.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
</screens>