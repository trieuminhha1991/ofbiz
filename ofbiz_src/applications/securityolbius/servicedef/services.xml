<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../framework/service/dtd/services.xsd">

	<service name="test" engine="java" location="com.olbius.security.services.Test" invoke="test">
		<attribute name="partyId" mode="IN" type="String"/>
	</service>
	
	<service name="clearCache" engine="java" export="true" location="com.olbius.security.services.SecurityServices" invoke="clearCache">
		<attribute name="entity" mode="IN" type="String" optional="true"/>
		<attribute name="distributed" mode="IN" type="Boolean" default-value="true"/>
	</service>
	
	<service name="distributedClearCache" engine="jms" location="serviceMessenger" invoke="clearCache">
        <attribute name="entity" mode="IN" type="String" optional="true"/>
        <attribute name="distributed" mode="IN" type="Boolean" default-value="false"/>
    </service>
	
	<service name="viewEntity" engine="java" location="com.olbius.security.services.SecurityServices" invoke="viewEntity">
		<required-permissions join-type="AND">
			<olbius-permission/>
		</required-permissions>
		<implements service="jqxGetListInterface"/>
	</service>
	
	<service name="createOrUpdateValue" engine="java" location="com.olbius.security.services.SecurityServices" invoke="createOrUpdateValue">
		<required-permissions join-type="AND">
			<olbius-permission/>
		</required-permissions>
		<attribute name="entity" mode="IN" type="String"/>
		<attribute name="value" mode="IN" type="Map"/>
	</service>

	<service name="removeValue" engine="java" location="com.olbius.security.services.SecurityServices" invoke="removeValue">
		<required-permissions join-type="AND">
			<olbius-permission/>
		</required-permissions>
		<attribute name="entity" mode="IN" type="String"/>
		<attribute name="value" mode="IN" type="Map"/>
	</service>
	
	<service name="thruDateValue" engine="java" location="com.olbius.security.services.SecurityServices" invoke="thruDateValue">
		<required-permissions join-type="AND">
			<olbius-permission/>
		</required-permissions>
		<attribute name="entity" mode="IN" type="String"/>
		<attribute name="value" mode="IN" type="Map"/>
		<attribute name="time" mode="IN" type="java.sql.Timestamp" optional="true"/>
	</service>

</services>