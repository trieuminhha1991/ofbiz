<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
	
	<screen name="CreateAgreement">
		<section>
			<actions>
				<set field="selectedMenuItem" value="agreement"/>
				<set field="selectedSubMenuItem" value="CreateAgreement"/>
				<set field="titleProperty" value="DmsCreateAgreement"/>
				<entity-one value-field="party" entity-name="Party">
					<field-map field-name="partyId" from-field="parameters.partyId"/>
				</entity-one>
				<script location="component://basesales/webapp/basesales/WEB-INF/actions/agreement/Agreement.groovy"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
                    		<condition>
                    			<if-olbius-has-permission/>
                    		</condition>
                    		<widgets>
								<screenlet title="${uiLabelMap.DmsCreateAgreement}">
									<platform-specific>
										<html><html-template location="component://basesales/webapp/basesales/agreement/createAgreement.ftl"/></html>
									</platform-specific>
								</screenlet>
							</widgets>
	                   		<fail-widgets>
	                   			<container style="alert alert-info">
	                   				<label text="${uiLabelMap.BSYouHavenotViewPermission}"/>
	                   			</container>
	                   		</fail-widgets>
	                   	</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="ListAgreements">
		<section>
			<actions>
				<set field="selectedMenuItem" value="agreement"/>
				<set field="selectedSubMenuItem" value="ListAgreements"/>
				<set field="titleProperty" value="DmsListAgreements"/>
				<script location="component://basesales/webapp/basesales/WEB-INF/actions/agreement/Agreement.groovy"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
                    		<condition>
                    			<if-olbius-has-permission/>
                    		</condition>
                    		<widgets>
								<screenlet>
									<platform-specific>
										<html><html-template location="component://basesales/webapp/basesales/agreement/listAgreements.ftl"/></html>
									</platform-specific>
								</screenlet>
							</widgets>
	                   		<fail-widgets>
	                   			<container style="alert alert-info">
	                   				<label text="${uiLabelMap.BSYouHavenotViewPermission}"/>
	                   			</container>
	                   		</fail-widgets>
	                   	</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
</screens>
