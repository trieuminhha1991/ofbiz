<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="PartyCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="PopupNewContactMechShippingAddress">
		<section>
			<widgets>
				<platform-specific>
					<html><html-template location="component://basesales/webapp/basesales/party/contactNewShippingAddressPopup.ftl"/></html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	<screen name="NewContactMechShippingAddress">
		<section>
			<widgets>
				<platform-specific>
					<html><html-template location="component://basesales/webapp/basesales/party/contactNewShippingAddress.ftl"/></html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
</screens>