<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="ShowFormularList">
		<section>
			<actions>
				<set field="selectedMenuItem" value="settingSales" />
				<set field="selectedSubMenuItem" value="showFormularList" />
				<set field="titleProperty" value="SettingSetupFormular" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template
									location="component://basesales/webapp/basesales/setting/pos/showFormularList.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="setupFormular">
		<section>
			<actions>
				<set field="selectedMenuItem" value="configPO" />
				<set field="selectedSubMenuItem" value="setupFormular" />
				<set field="titleProperty" value="SettingSetupFormular" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<platform-specific>
							<html>
								<html-template
									location="component://basesales/webapp/basesales/setting/pos/setupFormular.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>