<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
	<screen name="ProductItemsPopup">
		<section>
			<actions>
				<set field="orderNewSearchProductSplit" from-field="orderNewSearchProductSplit" default-value="false" type="Boolean"/>
				<set field="gridProductItemsId" from-field="gridProductItemsId"/>
			</actions>
			<widgets>
				<section>
					<condition>
						<or>
							<if-empty field="orderNewSearchProductSplit"/>
							<if-compare operator="equals" value="true" field="orderNewSearchProductSplit" type="Boolean"/>
						</or>
					</condition>
					<widgets>
						<platform-specific>
							<html><html-template location="component://basesales/webapp/basesales/product/productItemsSearchSplit.ftl"/></html>
						</platform-specific>
					</widgets>
					<fail-widgets>
						<platform-specific>
							<html><html-template location="component://basesales/webapp/basesales/product/productItemsPopup.ftl"/></html>
						</platform-specific>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>
	
	<screen name="FindProductPrice">
		<section>
			<actions>
				<set field="selectedMenuItem" value="quotation"/>
				<set field="selectedSubMenuItem" value="findProductPrice"/>
				<set field="titleProperty" value="BSGoodProductQuotation"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
                    		<condition>
                    			<if-olbius-has-permission/>
                    		</condition>
                    		<widgets>
								<screenlet title="${uiLabelMap.BSFind}">
									<platform-specific>
										<html><html-template location="component://basesales/webapp/basesales/product/productPriceFind.ftl"/></html>
									</platform-specific>
								</screenlet>
							</widgets>
	                   		<fail-widgets>
	                   			<container style="alert alert-info">
	                   				<label text="${uiLabelMap.BSYouHavenotViewPermission}"/>
	                   			</container>
	                   		</fail-widgets>
	                   	</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
