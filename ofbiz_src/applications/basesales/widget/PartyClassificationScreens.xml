<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
	<screen name="PartyClassificationCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<decorator-section-include name="body"/>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	
	<screen name="ListPartyClassificationGroup">
		<section>
			<actions>
				<set field="selectedMenuItem" value="settingSales"/>
				<set field="selectedSubMenuItem" value="listPartyClassificationGroup"/>
				<set field="titleProperty" value="BSListPartyClassificationGroup"/>
			</actions>
			<widgets>
				<decorator-screen name="PartyClassificationCommonDecorator">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<platform-specific>
									<html><html-template location="component://basesales/webapp/basesales/party_classification/partyClassificationGroupList.ftl"/></html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ListPartyClassificationGroupParties">
		<section>
			<actions>
				<set field="selectedMenuItem" value="settingSales"/>
				<set field="selectedSubMenuItem" value="listPartyClassificationGroup"/>
				<set field="titleProperty" value="BSListPartyClassificationGroupParties"/>
			</actions>
			<widgets>
				<decorator-screen name="PartyClassificationCommonDecorator">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<actions>
								<entity-one value-field="partyClassificationGroup" entity-name="PartyClassificationGroup">
									<field-map field-name="partyClassificationGroupId" from-field="parameters.partyClassificationGroupId"/>
								</entity-one>
							</actions>
							<widgets>
								<section>
									<condition><not><if-empty field="partyClassificationGroup"/></not></condition>
									<widgets>
										<platform-specific>
											<html><html-template location="component://basesales/webapp/basesales/party_classification/partyClassificationGroupPartiesList.ftl"/></html>
										</platform-specific>
									</widgets>
									<fail-widgets>
										<container style="alert alert-info">
											<label text="${uiLabelMap.BSRecordIsNotFound}"></label>
										</container>
									</fail-widgets>
								</section>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ListLoyaltyCustomer">
		<section>
			<actions>
				<set field="selectedMenuItem" value="customer"/>
				<set field="selectedSubMenuItem" value="listLoyaltyCustomer"/>
				<set field="titleProperty" value="BSListLoyaltyCustomer"/>
			</actions>
			<widgets>
				<decorator-screen name="PartyClassificationCommonDecorator">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<platform-specific>
									<html><html-template location="component://basesales/webapp/basesales/party_classification/loyaltyCustomerList.ftl"/></html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ListLoyaltyCustomerDetail">
		<section>
			<actions>
				<set field="selectedMenuItem" value="customer"/>
				<set field="selectedSubMenuItem" value="listLoyaltyCustomer"/>
				<set field="titleProperty" value="BSListLoyaltyCustomerDetail"/>
			</actions>
			<widgets>
				<decorator-screen name="PartyClassificationCommonDecorator">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<platform-specific>
									<html><html-template location="component://basesales/webapp/basesales/party_classification/loyaltyCustomerDetailList.ftl"/></html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>