	<screen name="ViewProductStoreGroup">
		<section>
			<actions>
				<set field="titleProperty" value="BSPSViewProductStoreGroup"/>
				<set field="selectedMenuItem" value="settingSales"/>
				<set field="selectedSubMenuItem" value="listProductStoreGroup"/>
				<entity-one value-field="productStoreGroup" entity-name="ProductStoreGroup">
					<field-map field-name="productStoreGroupId" from-field="parameters.productStoreGroupId"/>
				</entity-one>
			</actions>
			<widgets>
				<section>
					<condition>
						<not><if-empty field="productStoreGroup"/></not>
					</condition>
					<widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<screenlet title="${uiLabelMap.BSPSProductStoreGroup}: ${productStoreGroup.productStoreGroupName} (${productStoreGroup.productStoreGroupId})">
									<platform-specific>
										<html><html-template location="component://basesales/webapp/basesales/setting/product_store_group/productStoreGroupView.ftl"/></html>
									</platform-specific>
								</screenlet>
							</decorator-section>
						</decorator-screen>
					</widgets>
					<fail-widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSProductStoreGroupHasIdIsNotFound}"></label>
								</container>
							</decorator-section>
						</decorator-screen>
