<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="ProductStoreCommonDecorator">
		<section>
			<actions>
				<set field="tabBarName" value="ViewProductStoreSubTabBar" global="true"/>
				<set field="tabBarLocation" value="component://basesales/widget/BaseSalesTabBarMenus.xml" global="true"/>
				<set field="selectedMenuItem" from-field="selectedMenuItem" default-value="settingSales"/>
				<set field="selectedSubMenuItem" from-field="selectedSubMenuItem" default-value="listProductStores"/>
				<script location="component://basesales/webapp/basesales/WEB-INF/actions/navigator/nav_productStoreList.groovy"/>
				<script location="component://basesales/webapp/basesales/WEB-INF/actions/permission/productStoreView.groovy"/>
			</actions>
			<widgets>
				<section>
					<condition>
						<if-compare operator="equals" value="true" field="hasPermissionView"/>
					</condition>
					<actions>
						<entity-one value-field="productStore" entity-name="ProductStore">
							<field-map field-name="productStoreId" from-field="parameters.productStoreId"/>
						</entity-one>
					</actions>
					<widgets>
						<section>
							<condition>
								<not><if-empty field="productStore"/></not>
							</condition>
							<actions>
								<set field="titleHeaderValue" value="productStoreTitle" global="true"/>
								<set field="titleHeaderLocation" value="component://basesales/widget/ProductStoreScreens.xml" global="true"/>
								<set field="productStoreId" from-field="productStore.productStoreId"/>
								<set field="printTabBar" value="true"/>
							</actions>
							<widgets>
								<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
									<decorator-section name="body">
										<decorator-section-include name="body"/>
									</decorator-section>
								</decorator-screen>
							</widgets>
							<fail-widgets>
								<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
									<decorator-section name="body">
										<container style="alert alert-info">
											<label text="${uiLabelMap.BSNotFoundProductStoreHasProductStoreIdIs}"></label>
										</container>
									</decorator-section>
								</decorator-screen>
							</fail-widgets>
						</section>
					</widgets>
					<fail-widgets>
						<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
							<decorator-section name="body">
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
							</decorator-section>
						</decorator-screen>
					</fail-widgets>
				</section>
			</widgets>
		</section>
	</screen>
	<screen name="productStoreTitle">
		<section>
			<condition>
				<not><if-empty field="productStore"/></not>
			</condition>
			<widgets>
				<label style="ibefore-icon-angle-right" text="${uiLabelMap.BSId}: "></label>
				<link url-mode="plain" target="showProductStore?productStoreId=${productStore.productStoreId}" text="${productStore.productStoreId}"></link>
			</widgets>
		</section>
	</screen>
