<?xml version="1.0" encoding="UTF-8"?>
<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">
    
    <simple-method method-name="checkProcessPayment">
    	<set field="toProcess" value="true" type="Boolean"/>
    	<field-to-result field="toProcess" result-name="toProcess"/>
    	
    	<entity-one value-field="serviceName" entity-name="WorkFlowServiceAppl">
			<field-map field-name="serviceName" value="checkProcessPayment"/>
		</entity-one>
		<if-empty field="serviceName">
			<add-error>
				<fail-message message="Service name is not found"/>
			</add-error>
			<check-errors/>
		</if-empty>
		
		<set-service-fields service-name="${serviceName.serviceExecutive}" map="parameters" to-map="actionCtx"/>
		<call-service service-name="${serviceName.serviceExecutive}" in-map-name="actionCtx">
			<result-to-field result-name="toProcess"/>
		</call-service>
		
		<field-to-result field="toProcess" result-name="toProcess"/>
    </simple-method>
    
    <simple-method method-name="processActionApproveOrder">
    	<entity-one value-field="serviceName" entity-name="WorkFlowServiceAppl">
			<field-map field-name="serviceName" value="processActionApproveOrder"/>
		</entity-one>
		<if-empty field="serviceName">
			<add-error>
				<fail-message message="Service name is not found"/>
			</add-error>
			<check-errors/>
		</if-empty>
		
		<set-service-fields service-name="${serviceName.serviceExecutive}" map="parameters" to-map="actionCtx"/>
		<call-service service-name="${serviceName.serviceExecutive}" in-map-name="actionCtx">
		</call-service>
	</simple-method>
	
    <simple-method method-name="sendNotiChangeOrderStatus">
    	<entity-one value-field="serviceName" entity-name="WorkFlowServiceAppl">
			<field-map field-name="serviceName" value="sendNotiChangeOrderStatus"/>
		</entity-one>
		<if-empty field="serviceName">
			<add-error>
				<fail-message message="Service name is not found"/>
			</add-error>
			<check-errors/>
		</if-empty>
		
		<set-service-fields service-name="${serviceName.serviceExecutive}" map="parameters" to-map="actionCtx"/>
		<call-service service-name="${serviceName.serviceExecutive}" in-map-name="actionCtx">
		</call-service>
	</simple-method>
	
</simple-methods>