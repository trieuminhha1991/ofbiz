<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
    <description>BaseSales Component Site Configuration File</description>


	
	
    <!-- loyalty point -->
    <request-map uri="listLoyalty">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ListLoyalty"/>
    </request-map>
	<request-map uri="newLoyalty">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="NewLoyalty"/>
    </request-map>
    <request-map uri="viewLoyalty">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ViewLoyalty"/>
    </request-map>
    <request-map uri="editLoyalty">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="EditLoyalty"/>
    </request-map>
    <request-map uri="updateLoyaltyAdvance">
    	<security auth="true" https="true"/>
    	<event type="java" path="com.olbius.basesales.loyalty.LoyaltyEvents" invoke="updateLoyaltyAdvance"/>
    	<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
    </request-map>
    <request-map uri="createLoyaltyAdvance">
    	<security auth="true" https="true"/>
    	<event type="java" path="com.olbius.basesales.loyalty.LoyaltyEvents" invoke="createLoyaltyAdvance"/>
    	<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
    </request-map>
    <request-map uri="updateLoyaltyThruDate">
    	<security https="true" auth="true"/>
    	<event type="service" invoke="updateLoyaltyThruDate"/>
        <response name="success" type="request-redirect" value="viewLoyalty"><redirect-parameter name="loyaltyId"/></response>
        <response name="error" type="view" value="ViewLoyalty"/>
    </request-map>
    <request-map uri="changeLoyaltyStatus">
        <security https="true" auth="true"/>
        <event type="service" invoke="updateLoyaltyStatus"/>
        <response name="success" type="request-redirect" value="viewLoyalty"><redirect-parameter name="loyaltyId"/></response>
        <response name="error" type="view" value="ViewLoyalty"/>
    </request-map>
    <!-- end loyalty point -->
    
    <!-- party classification -->
    <request-map uri="listPartyClassificationGroup">
    	<security auth="true" https="true"/>
    	<response name="success" type="view" value="ListPartyClassificationGroup"/>
    </request-map>
    <request-map uri="createPartyClassificationGroupAjax">
        <security https="true" auth="true"/> 
        <event type="java" path="com.olbius.basesales.party.PartyClassificationServices" invoke="createPartyClassificationGroup"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <request-map uri="updatePartyClassificationGroupAjax">
        <security https="true" auth="true"/> 
        <event type="java" path="com.olbius.basesales.party.PartyClassificationServices" invoke="updatePartyClassificationGroup"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <request-map uri="deletePartyClassificationGroupAjax">
        <security https="true" auth="true"/> 
        <event type="java" path="com.olbius.basesales.party.PartyClassificationServices" invoke="deletePartyClassificationGroup"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <request-map uri="listPartyClassificationGroupParties">
    	<security auth="true" https="true"/>
    	<response name="success" type="view" value="ListPartyClassificationGroupParties"/>
    </request-map> 
    <request-map uri="createPartyClassificationAjax">
        <security https="true" auth="true"/> 
        <event type="java" path="com.olbius.basesales.party.PartyClassificationServices" invoke="createPartyClassification"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <request-map uri="deletePartyClassificationAjax">
        <security https="true" auth="true"/> 
        <event type="java" path="com.olbius.basesales.party.PartyClassificationServices" invoke="deletePartyClassification"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    <request-map uri="listLoyaltyCustomer">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ListLoyaltyCustomer"/>
    </request-map>
    
    <request-map uri="listLoyaltyCustomerDetail">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ListLoyaltyCustomerDetail"/>
    </request-map>
    <!-- party classification -->
    
    <!-- View Mappings -->
    <view-map name="ListPartyClassificationGroup" type="screen" page="component://basesales/widget/PartyClassificationScreens.xml#ListPartyClassificationGroup"/>
    <view-map name="ListLoyaltyCustomer" type="screen" page="component://basesales/widget/PartyClassificationScreens.xml#ListLoyaltyCustomer"/>
    <view-map name="ListLoyaltyCustomerDetail" type="screen" page="component://basesales/widget/PartyClassificationScreens.xml#ListLoyaltyCustomerDetail"/>
    <view-map name="ListPartyClassificationGroupParties" type="screen" page="component://basesales/widget/PartyClassificationScreens.xml#ListPartyClassificationGroupParties"/>
	<!-- Loyalty Point -->
	<view-map name="ListLoyalty" type="screen" page="component://basesales/widget/LoyaltyScreens.xml#ListLoyalty"/>
	<view-map name="EditLoyalty" type="screen" page="component://basesales/widget/LoyaltyScreens.xml#EditLoyalty"/>
	<view-map name="NewLoyalty" type="screen" page="component://basesales/widget/LoyaltyScreens.xml#NewLoyalty"/>
	<view-map name="ViewLoyalty" type="screen" page="component://basesales/widget/LoyaltyScreens.xml#ViewLoyalty"/>
</site-conf>