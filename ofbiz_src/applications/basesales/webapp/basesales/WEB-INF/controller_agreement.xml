<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">

	<request-map uri="CreateAgreement">
		<security https="true" auth="true" />
		<response name="success" type="view" value="CreateAgreement" />
	</request-map>
	<request-map uri="ListAgreements">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ListAgreements" />
	</request-map>

	<request-map uri="getInformationPartner">
		<security auth="true" https="true" />
		<event type="service" invoke="getInformationPartner"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>

	<request-map uri="getInformationPerson">
		<security auth="true" https="true" />
		<event type="service" invoke="getInformationPerson"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>

	<request-map uri="uploadFileScanAgreement">
		<security auth="true" https="true" />
		<event type="service" invoke="uploadFileScanAgreement"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="loadFileScanAgreement">
		<security auth="true" https="true" />
		<event type="service" invoke="loadFileScanAgreement"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="approveAgreement">
		<security auth="true" https="true" />
		<event type="service" invoke="approveAgreement"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="cancelAgreement">
		<security https="true" auth="true" />
		<event type="service" invoke="cancelAgreement" />
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="loadAgreementInformationAjax">
		<security auth="true" https="true" />
		<event type="service" invoke="loadAgreementInformationAjax"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>

	<request-map uri="DmsCreateAgreementAjax">
		<security auth="true" https="true" />
		<event type="service" invoke="DmsCreateAgreementAjax"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>

	<request-map uri="DmsUpdateAgreementAjax">
		<security auth="true" https="true" />
		<event type="service" invoke="DmsUpdateAgreementAjax"></event>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>

	<!-- product screen -->
	<view-map name="CreateAgreement" type="screen"
		page="component://basesales/widget/AgreementScreens.xml#CreateAgreement" />
	<view-map name="ListAgreements" type="screen"
		page="component://basesales/widget/AgreementScreens.xml#ListAgreements" />
</site-conf>