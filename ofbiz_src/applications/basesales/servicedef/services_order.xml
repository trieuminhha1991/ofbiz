<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Order Services</description>
    <vendor></vendor>
    <version>1.0</version>
    
    <service name="checkAndUpdateSalesOrderWhenPurchOrderModified" engine="java" auth="true" invoke="checkAndUpdateSalesOrderWhenPurchOrderModified" location="com.olbius.basesales.order.OrderServices">
		<description>Create or Update order items in the order</description>
		<attribute name="orderId" mode="INOUT" type="String" optional="true"/>
		<attribute name="salesOrderId" mode="OUT" type="String" optional="true"/>
	</service>
	<service name="sendNotifySOUpdateAfterPOModified" engine="java" auth="true" invoke="sendNotifySOUpdateAfterPOModified" location="com.olbius.basesales.order.OrderServices">
		<attribute name="salesOrderId" mode="IN" type="String" optional="false"/>
	</service>
	
	<!-- TODOCHANGE change name of service "updateOrderItemsPOToSO" -->
	<service name="updateOrderItemsNoActions" engine="java" auth="true"
            location="com.olbius.basesales.order.OrderServices" invoke="updateApprovedOrderItems" transaction-timeout="7200">
        <description>Update the quantities/prices for an existing order</description>
        <attribute name="orderId" type="String" mode="INOUT" optional="false"/>
        <attribute name="supplierPartyId" type="String" mode="IN" optional="true"/>
        <attribute name="orderTypeId" type="String" mode="IN" optional="true"/>
        <attribute name="calcTax" type="Boolean" mode="IN" optional="true" default-value="true"/>
        <attribute name="itemDescriptionMap" type="Map" mode="IN" optional="true"/>
        <attribute name="itemQtyMap" type="Map" mode="IN" optional="false"/>
        <attribute name="itemPriceMap" type="Map" mode="IN" optional="false"/>
        <attribute name="overridePriceMap" type="Map" mode="IN" optional="false"/>
        <attribute name="itemReasonMap" type="Map" mode="IN" optional="true"/>
        <attribute name="itemCommentMap" type="Map" mode="IN" optional="true"/>
        <attribute name="itemAttributesMap" type="Map" mode="IN" optional="true"/>
        <attribute name="itemShipDateMap" type="Map" mode="IN" optional="true"/>
        <attribute name="itemDeliveryDateMap" type="Map" mode="IN" optional="true"/>
        <attribute name="itemAlternativeQtyMap" type="Map" mode="IN" optional="true"/>
        <attribute name="itemExpireDateMap" type="Map" mode="IN" optional="true"/>
        <attribute name="itemQuantityUomIdMap" type="Map" mode="IN" optional="true"/>
        <attribute name="shoppingCart" type="org.ofbiz.order.shoppingcart.ShoppingCart" mode="OUT" optional="false"/>
    </service>
    
</services>