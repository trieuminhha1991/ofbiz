<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>AppBaseMtl Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="checkPermissionApproveOrder" engine="simple" invoke="checkPermissionApproveOrder" 
    		location="component://basesales/script/com/olbius/workflow/CheckPermissionServices.xml" auth="true">
    	<attribute name="orderId" mode="IN" type="String"/>
		<attribute name="hasPermission" mode="OUT" type="Boolean"/>
		<attribute name="nextStatusId" mode="OUT" type="String" optional="true"/>
    </service>
    <service name="processActionApproveOrder" engine="simple" invoke="processActionApproveOrder" 
    		location="component://basesales/script/com/olbius/workflow/ProcessActionServices.xml" auth="true">
    	<attribute name="orderId" mode="IN" type="String"/>
    </service>
    <service name="checkProcessPayment" engine="simple" invoke="checkProcessPayment" 
    		location="component://basesales/script/com/olbius/workflow/ProcessActionServices.xml" auth="true">
    	<attribute name="orderId" mode="IN" type="String"/>
    	<attribute name="toProcess" mode="OUT" type="Boolean"/>
    </service>
    <service name="sendNotiChangeOrderStatus" engine="simple" invoke="sendNotiChangeOrderStatus" 
    	location="component://basesales/script/com/olbius/workflow/ProcessActionServices.xml">
		<description>Create a notify when order created</description>
		<attribute name="orderId" mode="IN" type="String" optional="false"/>
	</service>
</services>