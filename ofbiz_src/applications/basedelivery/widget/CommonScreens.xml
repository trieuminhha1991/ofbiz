<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="BaseDeliveryUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="layoutSettings.companyName" from-field="uiLabelMap.BaseDeliveryCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.BaseDeliveryCompanySubtitle" global="true"/>

                <set field="activeApp" value="basedelivery" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://basedelivery/widget/BaseDeliveryMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.BaseDeliveryApplication}" global="true"/>
                <set field="componentResourceName" value="BaseDelivery" global="true"/>
                <set field="componentNameSc" value="basedelivery" global="true"/>
            </actions>
            <widgets>
                <include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="BaseDeliveryCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="BASEDELIVERY" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.BaseDeliveryViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="basedelivery">
        <section>
            <widgets>
                <include-menu name="MainAppBar" location="component://basedelivery/widget/BaseDeliveryMenus.xml" />
            </widgets>
        </section>
    </screen>
</screens>