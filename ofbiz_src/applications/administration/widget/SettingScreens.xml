<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="VisualThemesSetting">
		<section>
			<actions>
				<set field="titleProperty" value="CommonVisualThemes" />
				<set field="selectedMenuItem" value="WebtoolsSetting" />
				<set field="selectedSubMenuItem" value="VisualThemes" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<screenlet title="${uiLabelMap.VisualThemesSetting}">
									<platform-specific>
										<html>
											<html-template location="component://administration/webapp/administration/setting/visualThemesSetting.ftl" />
										</html>
									</platform-specific>
								</screenlet>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

