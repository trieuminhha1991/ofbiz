<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="Module">
		<section>
			<actions>
				<set field="titleProperty" value="ADModule" />
				<set field="selectedMenuItem" value="Security" />
				<set field="selectedSubMenuItem" value="Module" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<screenlet title="${uiLabelMap.ADModule}">
									<platform-specific>
										<html>
											<html-template location="component://administration/webapp/administration/security/Module.ftl" />
										</html>
									</platform-specific>
								</screenlet>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="ModuleTitle">
		<section>
			<condition>
				<not>
					<if-empty field="parameters.moduleId" />
				</not>
			</condition>
			<widgets>
				<label style="ibefore-icon-angle-right" text="${uiLabelMap.BSId}: "></label>
				<link url-mode="plain" target="ModuleDetail?moduleId=${parameters.moduleId}" text="${parameters.moduleId}"></link>
			</widgets>
		</section>
	</screen>
	<screen name="ModuleDetail">
		<section>
			<actions>
				<set field="titleProperty" value="ADModuleDetail" />
				<set field="selectedMenuItem" value="Security" />
				<set field="selectedSubMenuItem" value="Module" />
				<set field="titleHeaderValue" value="ModuleTitle" global="true" />
				<set field="titleHeaderLocation" value="component://administration/widget/SecurityScreens.xml" global="true" />
				<script location="component://administration/webapp/administration/WEB-INF/actions/security/Module.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<screenlet title="${uiLabelMap.ADModuleDetail}">
									<platform-specific>
										<html>
											<html-template location="component://administration/webapp/administration/security/ModuleDetail.ftl" />
										</html>
									</platform-specific>
								</screenlet>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="User">
		<section>
			<actions>
				<set field="titleProperty" value="ADUser" />
				<set field="selectedMenuItem" value="Security" />
				<set field="selectedSubMenuItem" value="User" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<screenlet>
									<platform-specific>
										<html>
											<html-template location="component://administration/webapp/administration/security/User.ftl" />
										</html>
									</platform-specific>
								</screenlet>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="UserGroup">
		<section>
			<actions>
				<set field="titleProperty" value="ADUserGroup" />
				<set field="selectedMenuItem" value="Security" />
				<set field="selectedSubMenuItem" value="UserGroup" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<screenlet>
									<platform-specific>
										<html>
											<html-template location="component://administration/webapp/administration/security/UserGroup.ftl" />
										</html>
									</platform-specific>
								</screenlet>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

</screens>