<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="main">
		<section>
			<actions>
				<set field="headerItem" value="main" /><!-- this highlights the selected  menu-item with name "main" -->
			</actions>
			<widgets>
				<decorator-screen name="AdministrationCommonDecorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body"></decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="SystemLogView">
		<section>
			<actions>
				<set field="selectedMenuItem" value="Webtools" />
				<set field="selectedSubMenuItem" value="logging" />
				<set field="titleProperty" value="WebtoolsLogging" />
				<property-to-field resource="debug" property="log4j.appender.css.File" field="logFileName" default="runtime/logs/ofbiz.log" no-locale="true" />
				<script location="component://administration/webapp/administration/WEB-INF/actions/logging/LogView.groovy" />
				<set field="tabBarName" value="LoggingTabBar" global="true" />
				<set field="tabBarLocation" value="component://administration/widget/AdministrationMenus.xml" global="true" />
				<set field="tabButtonItem" from-field="parameters.loggingType" global="true" default-value="ERROR" />
				<set field="printTabBar" value="true" />
			</actions>
			<widgets>
				<decorator-screen name="AdministrationCommonDecorator"
					location="component://administration/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<screenlet title="${uiLabelMap.WebtoolsLogging}">
									<platform-specific>
										<html>
											<html-template location="component://administration/webapp/administration/webtools/logging.ftl" />
										</html>
									</platform-specific>
								</screenlet>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="SystemFindUtilCache">
		<section>
			<actions>
				<set field="selectedMenuItem" value="Webtools" />
				<set field="selectedSubMenuItem" value="cache" />
				<set field="titleProperty" value="WebtoolsLogging" />
				<script location="component://webtools/webapp/webtools/WEB-INF/actions/cache/FindUtilCache.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="AdministrationCommonDecorator" location="component://administration/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<screenlet title="${uiLabelMap.WebtoolsMemory}">
									<include-form name="MemoryInfo" location="component://webtools/widget/CacheForms.xml" />
								</screenlet>
								<screenlet title="${uiLabelMap.PageTitleFindUtilCache}" navigation-menu-name="FindCache">
									<include-menu name="FindCache" location="component://webtools/widget/Menus.xml" />
									<container id="table-container">
										<include-form name="ListCache" location="component://webtools/widget/CacheForms.xml" />
									</container>
								</screenlet>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="ImportDataProduct">
