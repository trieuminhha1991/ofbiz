<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">

	<request-map uri="VisualThemesSetting">
		<security https="true" auth="true" />
		<response name="success" type="view" value="VisualThemesSetting" />
	</request-map>
	<request-map uri="GroupBrandLogo">
		<security https="true" auth="true" />
		<response name="success" type="view" value="GroupBrandLogo" />
	</request-map>
	<request-map uri="TemplateFiles">
		<security https="true" auth="true" />
		<response name="success" type="view" value="TemplateFiles" />
	</request-map>

	<request-map uri="updateApplicationSettings">
		<security https="true" auth="true" />
		<event type="service" invoke="updateApplicationSettings" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	<request-map uri="getValueApplicationSetting">
		<security https="true" auth="true" />
		<event type="service" invoke="getValueApplicationSetting" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<request-map uri="updateVisualThemeResources">
		<security https="true" auth="true" />
		<event type="service" invoke="updateVisualThemeResources" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<request-map uri="getBrandLogo">
		<security https="true" auth="true" />
		<event type="service" invoke="getBrandLogo" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	<request-map uri="getBrandLogoBase64">
		<security https="true" auth="true" />
		<event type="service" invoke="getBrandLogoBase64" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	<request-map uri="storeBrandLogo">
		<security https="true" auth="true" />
		<event type="service" invoke="storeBrandLogo" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	
	<!-- System config -->
	<request-map uri="listSystemConfig">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="SystemConfigList"/>
	</request-map>
	<request-map uri="systemConfigWeightBarcode">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="SystemConfigWeightBarcode"/>
	</request-map>
	<request-map uri="updateSystemConfigWB">
		<security https="true" auth="true"/>
		<event type="service" invoke="updateSystemConfigWB"/>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	<request-map uri="logoDocumentConfig">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="LogoDocumentConfig"/>
	</request-map>
	<request-map uri="changeDocumentLogo">
		<security https="true" auth="true"/>
		<event type="service" invoke="changeDocumentLogo"/>
		<response name="success" type="view" value="LogoDocumentConfigInner"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	
	<request-map uri="checkUserLoginId">
		<security https="true" auth="false"/>
		<event type="service" invoke="checkUserLoginId"/>
		<response name="success" type="request" value="json"></response>
		<response name="error" type="request" value="json"></response>
	</request-map>

	<!-- View Mappings -->
	<view-map name="SystemConfigList" type="screen" page="component://administration/widget/SettingScreens.xml#SystemConfigList"/>
	<view-map name="SystemConfigWeightBarcode" type="screen" page="component://administration/widget/SettingScreens.xml#SystemConfigWeightBarcode"/>
	<view-map name="LogoDocumentConfig" type="screen" page="component://administration/widget/SettingScreens.xml#LogoDocumentConfig"/>
	<view-map name="LogoDocumentConfigInner" type="screen" page="component://administration/widget/SettingScreens.xml#LogoDocumentConfigInner"/>
	
	<view-map name="VisualThemesSetting" type="screen"
		page="component://administration/widget/SettingScreens.xml#VisualThemesSetting" />
	<view-map name="GroupBrandLogo" type="screen"
		page="component://administration/widget/SettingScreens.xml#GroupBrandLogo" />
	<view-map name="TemplateFiles" type="screen"
		page="component://administration/widget/SettingScreens.xml#TemplateFiles" />
</site-conf>