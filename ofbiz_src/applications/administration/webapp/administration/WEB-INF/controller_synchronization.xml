<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">

	<request-map uri="ScheduleSynchronization">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ScheduleSynchronization" />
	</request-map>
	<request-map uri="StatusSynchronization">
		<security https="true" auth="true" />
		<response name="success" type="view" value="StatusSynchronization" />
	</request-map>
	<request-map uri="SynchronizationHistory">
		<security https="true" auth="true" />
		<response name="success" type="view" value="SynchronizationHistory" />
	</request-map>
	<request-map uri="WhatToSync">
		<security https="true" auth="true" />
		<response name="success" type="view" value="WhatToSync" />
	</request-map>
	<request-map uri="POSOffline">
		<security https="true" auth="true" />
		<response name="success" type="view" value="POSOffline" />
	</request-map>


	<request-map uri="loadEntityGroupId">
		<security https="false" auth="true" />
		<event type="service" invoke="loadEntityGroupId" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	<request-map uri="loadEntitiesNotInGroup">
		<security https="false" auth="true" />
		<event type="service" invoke="loadEntitiesNotInGroup" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>


	<!-- View Mappings -->
	<view-map name="ScheduleSynchronization" type="screen"
		page="component://administration/widget/SynchronizationScreens.xml#ScheduleSynchronization" />
	<view-map name="StatusSynchronization" type="screen"
		page="component://administration/widget/SynchronizationScreens.xml#StatusSynchronization" />
	<view-map name="SynchronizationHistory" type="screen"
		page="component://administration/widget/SynchronizationScreens.xml#SynchronizationHistory" />
	<view-map name="WhatToSync" type="screen"
		page="component://administration/widget/SynchronizationScreens.xml#WhatToSync" />
	<view-map name="POSOffline" type="screen"
		page="component://administration/widget/SynchronizationScreens.xml#POSOffline" />
</site-conf>