<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">

	<request-map uri="Module">
		<security https="true" auth="true" />
		<response name="success" type="view" value="Module" />
	</request-map>
	<request-map uri="ModuleDetail">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ModuleDetail" />
	</request-map>
	<request-map uri="User">
		<security https="true" auth="true" />
		<response name="success" type="view" value="User" />
	</request-map>
	<request-map uri="UserGroup">
		<security https="true" auth="true" />
		<response name="success" type="view" value="UserGroup" />
	</request-map>


	<request-map uri="loadApplicationModuleTree">
		<security https="false" auth="true" />
		<event type="service" invoke="loadApplicationModuleTree" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<request-map uri="updateOlbiusApplication">
		<security https="true" auth="true" />
		<event type="service" invoke="updateOlbiusApplication" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<request-map uri="loadPermissionOfPartyInApplication">
		<security https="false" auth="true" />
		<event type="service" invoke="loadPermissionOfPartyInApplication" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<request-map uri="addUsersToModule">
		<security https="true" auth="true" />
		<event type="service" invoke="addUsersToModule" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<request-map uri="loadModuleDiagram">
		<security https="true" auth="true" />
		<event type="service" invoke="loadModuleDiagram" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<request-map uri="addUserToGroup">
		<security https="true" auth="true" />
		<event type="service" invoke="addUserToGroup" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>
	<request-map uri="deleteUserInGroup">
		<security https="true" auth="true" />
		<event type="service" invoke="deleteUserInGroup" />
		<response name="success" type="request" value="json" />
		<response name="error" type="request" value="json" />
	</request-map>

	<!-- View Mappings -->
	<view-map name="Module" type="screen"
		page="component://administration/widget/SecurityScreens.xml#Module" />
	<view-map name="ModuleDetail" type="screen"
		page="component://administration/widget/SecurityScreens.xml#ModuleDetail" />
	<view-map name="User" type="screen"
		page="component://administration/widget/SecurityScreens.xml#User" />
	<view-map name="UserGroup" type="screen"
		page="component://administration/widget/SecurityScreens.xml#UserGroup" />
</site-conf>