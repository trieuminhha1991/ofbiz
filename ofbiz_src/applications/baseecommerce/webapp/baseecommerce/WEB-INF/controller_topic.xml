<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
        
	<request-map uri="ListTopic">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="ListTopic"/>
    </request-map>
    
    <request-map uri="ListTopicContent">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="ListTopicContent"/>
    </request-map>
    
    <request-map uri="JQGetCommentsByTopic">
		<security https="false" auth="true"/>
		<event type="service" invoke="JQGetCommentsByTopic"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    <request-map uri="JQGetRepliesByComment">
		<security https="false" auth="true"/>
		<event type="service" invoke="JQGetRepliesByComment"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	
	<view-map name="ListTopic" type="screen" page="component://baseecommerce/widget/TopicScreens.xml#ListTopic"/>
	<view-map name="ListTopicContent" type="screen" page="component://baseecommerce/widget/TopicScreens.xml#ListTopicContent"/>
</site-conf>