<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
        
    <request-map uri="ContentEditorEngine">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="ContentEditorEngine"/>
    </request-map>
	
    <request-map uri="quickUpload">
		<security https="true" auth="true"/>
		<event type="service" invoke="quickUpload"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>

    <request-map uri="browserImageUpload">
		<security https="true" auth="true"/>
		<event type="service" invoke="quickUpload"/>
		<response name="success" type="view" value="BrowserImageUpload"/>
		<response name="error" type="view" value="BrowserImageUpload"/>
	</request-map>
	
    <request-map uri="saveContent">
		<security https="true" auth="true"/>
		<event type="service" invoke="saveContent"/>
		<response name="success" type="view" value="ListContent"/>
		<response name="error" type="view" value="ContentEditorEngine"/>
	</request-map>

    <request-map uri="renovateContent">
		<security https="true" auth="true"/>
		<event type="service" invoke="renovateContent"/>
		<response name="success" type="view" value="ListContent"/>
		<response name="error" type="view" value="ContentEditorEngine"/>
	</request-map>

    <request-map uri="updateContent">
		<security https="false" auth="true"/>
		<event type="service" invoke="updateContent"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	
    <view-map name="ContentEditorEngine" type="screen" page="component://baseecommerce/widget/ContentScreens.xml#ContentEditorEngine"/>
    <view-map name="BrowserImageUpload" type="screen" page="component://baseecommerce/widget/ContentScreens.xml#BrowserImageUpload"/>
    <view-map name="ListContent" type="screen" page="component://baseecommerce/widget/ContentScreens.xml#ListContent"/>
    <view-map name="viewcontent" type="screen" page="component://obb/widget/ContentScreens.xml#viewcontent"/>
        
</site-conf>