<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
        
    <request-map uri="ListWebsites">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="ListWebsites"/>
    </request-map>
    
    <request-map uri="ImageManager">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="ImageManager"/>
    </request-map>
	<request-map uri="SlideManager">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="SlideManager"/>
    </request-map>
	<request-map uri="HorizontalBannerManager">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="HorizontalBannerManager"/>
    </request-map>
	<request-map uri="VerticalBannerManager">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="VerticalBannerManager"/>
    </request-map>
	<request-map uri="BannerOfPartner">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="BannerOfPartner"/>
    </request-map>
	<request-map uri="StoresManager">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="StoresManager"/>
    </request-map>
    
    <request-map uri="Background">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="Background"/>
    </request-map>
    <request-map uri="HeaderManager">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="HeaderManager"/>
    </request-map>
	<request-map uri="FooterManager">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="FooterManager"/>
    </request-map>
	<request-map uri="ConfigFooter">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="ConfigFooter"/>
    </request-map>
    
	<request-map uri="ContentEditor">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="ContentEditor"/>
    </request-map>
    
    <request-map uri="FacebookSetting">
		<security auth="true" https="true"/>
		<response name="success" type="view" value="FacebookSetting"/>
    </request-map>
    
    <request-map uri="updateContents">
        <security https="true" auth="true"/>
        <event type="service-multi" invoke="updateContent"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    
    <request-map uri="updateConfigFooter">
		<security https="true" auth="true"/>
		<event type="service" invoke="updateFooter"/>
		<response name="success" type="request-redirect-noparam" value="ConfigFooter"/>
		<response name="error" type="request-redirect-noparam" value="ConfigFooter"/>
	</request-map>
    <request-map uri="updateStores">
		<security https="true" auth="true"/>
		<event type="service" invoke="updateStores"/>
		<response name="success" type="view" value="StoresManager"/>
		<response name="error" type="view" value="StoresManager"/>
	</request-map>
	
    <request-map uri="updateHeader">
		<security https="true" auth="true"/>
		<event type="service" invoke="updateHeader"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	
	<request-map uri="JQGetMainSlide">
		<security https="false" auth="true"/>
		<event type="service" invoke="JQGetMainSlide"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    <request-map uri="addImageToMainSlide">
		<security https="false" auth="true"/>
		<event type="service" invoke="addImageToMainSlide"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	
    <request-map uri="JQGetVerticalBanners">
		<security https="false" auth="true"/>
		<event type="service" invoke="JQGetVerticalBanners"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    <request-map uri="addVerticalBanner">
		<security https="false" auth="true"/>
		<event type="service" invoke="addVerticalBanner"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	
    <request-map uri="JQGetHorizontalBanners">
		<security https="false" auth="true"/>
		<event type="service" invoke="JQGetHorizontalBanners"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    <request-map uri="addHorizontalBanner">
		<security https="false" auth="true"/>
		<event type="service" invoke="addHorizontalBanner"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	
    <request-map uri="JQGetPartnerBanners">
		<security https="false" auth="true"/>
		<event type="service" invoke="JQGetPartnerBanners"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    <request-map uri="addPartnerBanner">
		<security https="false" auth="true"/>
		<event type="service" invoke="addPartnerBanner"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	
	<request-map uri="activeWebsite">
		<security https="false" auth="true"/>
		<event type="service" invoke="activeWebsite"/>
		<response name="success" type="view" value="main"/>
		<response name="error" type="view" value="main"/>
	</request-map>
    
	<request-map uri="loadBackGround">
		<security https="true" auth="true"/>
		<event type="service" invoke="loadBackGround"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
	<request-map uri="configBackGround">
		<security https="true" auth="true"/>
		<event type="service" invoke="configBackGround"/>
		<response name="success" type="request" value="json"></response>
        <response name="error" type="request" value="json"></response>
	</request-map>
    
	<view-map name="ImageManager" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#ImageManager"/>
    <view-map name="SlideManager" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#SlideManager"/>
    <view-map name="VerticalBannerManager" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#VerticalBannerManager"/>
    <view-map name="HorizontalBannerManager" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#HorizontalBannerManager"/>
    <view-map name="BannerOfPartner" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#BannerOfPartner"/>
    <view-map name="StoresManager" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#StoresManager"/>
    <view-map name="Background" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#Background"/>
    <view-map name="HeaderManager" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#HeaderManager"/>
    <view-map name="FooterManager" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#FooterManager"/>
    <view-map name="ConfigFooter" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#ConfigFooter"/>
    <view-map name="ContentEditor" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#ContentEditor"/>
    <view-map name="FacebookSetting" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#FacebookSetting"/>
    <view-map name="ListWebsites" type="screen" page="component://baseecommerce/widget/ConfigWebSiteScreens.xml#ListWebsites"/>
</site-conf>