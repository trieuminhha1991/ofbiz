<entity-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entity-eca.xsd">
	<!-- update product all info -->
	<eca entity="Product" operation="create-store" event="return">
		<!-- <condition operator="is-not-empty" field-name="productStoreId" /> -->
		<action service="synchronizeProduct" mode="sync" />
	</eca>
	<eca entity="Product" operation="remove" event="return">
		<action service="deleteListProductCacheData" mode="sync" />
	</eca>

	<!-- <eca entity="ProductContent" operation="create-store" event="return"> -->
	<!-- <action service="synchronizeProduct" mode="sync"/> -->
	<!-- </eca> -->
	<!-- <eca entity="ProductContent" operation="remove" event="return"> -->
	<!-- <action service="synchronizeProduct" mode="sync"/> -->
	<!-- </eca> -->

	<eca entity="ProductCategoryMember" operation="create-store" event="return">
		<!-- <condition operator="is-not-empty" field-name="productStoreId" /> -->
		<action service="synchronizeProduct" mode="sync" />
	</eca>
	<!-- update product keywords -->

	<eca entity="ProductKeywordNew" operation="store" event="return">
		<action service="synchronizeProductKeywords" mode="sync" />
	</eca>
	<eca entity="ProductKeywordNew" operation="remove" event="return">
		<action service="synchronizeProductKeywords" mode="sync" />
	</eca>

	<!-- update price -->
	<eca entity="ProductPrice" operation="create-store" event="return">
		<action service="synchronizeProductPrice" mode="sync" />
	</eca>
	<eca entity="ProductPrice" operation="remove" event="return">
		<action service="synchronizeProductPrice" mode="sync" />
	</eca>

	<eca entity="ProductPriceChange" operation="store" event="return">
		<action service="synchronizeProductPrice" mode="sync" />
	</eca>
	<eca entity="ProductPriceChange" operation="remove" event="return">
		<action service="synchronizeProductPrice" mode="sync" />
	</eca>

	<!-- update review -->
	<eca entity="ProductReview" operation="create-store" event="return">
		<action service="synchronizeProductReview" mode="sync" />
	</eca>

	<eca entity="ProductReview" operation="remove" event="return">
		<action service="synchronizeProductReview" mode="sync" />
	</eca>
</entity-eca>
