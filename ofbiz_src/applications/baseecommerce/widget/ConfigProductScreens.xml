			</actions>
			<widgets>
				<decorator-screen name="EcommerceBackEndDecorator" location="component://baseecommerce/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission />
							</condition>
							<widgets>
								<screenlet title="${uiLabelMap.DmsProductCatalogs}">
									<platform-specific>
										<html>
											<html-template location="component://baseecommerce/webapp/baseecommerce/backend/configproduct/catalog/listCategories.ftl" />
										</html>
									</platform-specific>
								</screenlet>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

