<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="ListCatalogs">
		<section>
			<actions>
				<set field="selectedMenuItem" value="product" />
				<set field="selectedSubMenuItem" value="ListCatalogs" />
				<set field="titleProperty" value="DmsListCatalog" />
			</actions>
			<widgets>
				<decorator-screen name="EcommerceBackEndDecorator" location="component://baseecommerce/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission />
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://baseecommerce/webapp/baseecommerce/backend/configproduct/catalog/listCatalogs.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>


	<screen name="categoriesTitle">
		<section>
			<actions>
				<script location="component://baseecommerce/webapp/baseecommerce/WEB-INF/actions/backend/product/Catalog.groovy" />
			</actions>
			<widgets>
				<label style="ibefore-icon-angle-right" text="Catalogs: "></label>
				<link url-mode="plain" target="ProductCategories" text="${catalogs}"></link>
			</widgets>
		</section>
	</screen>
	<screen name="ProductCategories">
		<section>
			<actions>
				<set field="titleHeaderValue" value="categoriesTitle" global="true" />
				<set field="titleHeaderLocation" value="component://baseecommerce/widget/ConfigProductScreens.xml" global="true" />
				<set field="selectedMenuItem" value="product" />
				<set field="selectedSubMenuItem" value="ProductCategories" />
