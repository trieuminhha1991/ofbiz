	<screen name="ConfigProductAndCategories">
		<section>
			<actions>
				<entity-one value-field="product" entity-name="Product"></entity-one>
				<set field="titleHeaderValue" value="productTitle" global="true" />
				<set field="titleHeaderLocation" value="component://basepo/widget/ProductScreens.xml" global="true" />
				<set field="selectedMenuItem" value="product" />
				<set field="selectedSubMenuItem" value="ProductCategories" />
				<set field="titleProperty" value="BSConfigProduct" />
				<script location="component://baseecommerce/webapp/baseecommerce/WEB-INF/actions/navigator/nav_configProduct.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
