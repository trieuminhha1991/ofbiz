<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

	<screen name="ListTopic">
		<section>
			<actions>
				<set field="selectedMenuItem" value="topic" />
				<set field="selectedSubMenuItem" value="ListTopic" />
				<set field="titleProperty" value="BSListTopic" />
			</actions>
			<widgets>
				<decorator-screen name="EcommerceBackEndDecorator" location="component://baseecommerce/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission />
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://baseecommerce/webapp/baseecommerce/backend/topic/listTopic.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="contentTitle">
		<section>
			<condition>
				<not>
					<if-empty field="parameters.contentCategoryId" />
				</not>
			</condition>
			<widgets>
				<label style="ibefore-icon-angle-right" text="${uiLabelMap.Topic}: "></label>
				<link url-mode="plain" target="ListTopicContent?contentCategoryId=${parameters.contentCategoryId}" text="${parameters.contentCategoryId}"></link>
			</widgets>
		</section>
	</screen>
	<screen name="ListTopicContent">
		<section>
			<actions>
				<set field="titleHeaderValue" value="contentTitle" global="true" />
				<set field="titleHeaderLocation" value="component://baseecommerce/widget/TopicScreens.xml" global="true" />
				<set field="selectedMenuItem" value="content" />
				<set field="selectedSubMenuItem" value="ListTopicContent" />
				<set field="titleProperty" value="BSListTopicContent" />
			</actions>
			<widgets>
				<decorator-screen name="EcommerceBackEndDecorator" location="component://baseecommerce/widget/CommonScreens.xml">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission />
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://baseecommerce/webapp/baseecommerce/backend/topic/listTopicContent.ftl" />
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}" />
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

</screens>