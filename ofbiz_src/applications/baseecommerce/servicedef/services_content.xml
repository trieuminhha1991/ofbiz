<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
	<description>baseecommerce Backend Services</description>
	<vendor></vendor>
	<version>1.0</version>

	<service name="noSyntaxError" engine="interface">
		<description>
			Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here
		</description>
	</service>

	<service name="quickUpload" engine="java" invoke="quickUpload" location="com.olbius.baseecommerce.backend.ContentServices">
		<attribute name="upload" mode="IN" type="java.nio.ByteBuffer" optional="true" />
		<attribute name="fileName" mode="OUT" type="String" />
		<attribute name="uploaded" mode="OUT" type="String" />
		<attribute name="error" mode="OUT" type="Map" />
		<attribute name="url" mode="OUT" type="String" />
	</service>

	<service name="saveContent" engine="java" invoke="saveContent" location="com.olbius.baseecommerce.backend.ContentServices">
		<attribute name="productId" mode="INOUT" type="String" optional="true" />
		<attribute name="productContentTypeId" mode="INOUT" type="String" optional="true" />
		<attribute name="contentCategoryId" mode="INOUT" type="String" optional="true" />
		<attribute name="contentTypeId" mode="IN" type="String" optional="true" />
		<attribute name="type" mode="INOUT" type="String" />
		<attribute name="contentName" mode="IN" type="String" optional="true" />
		<attribute name="description" mode="IN" type="String" optional="true" allow-html="any" />
		<attribute name="editor" mode="IN" type="String" optional="true" allow-html="any" />
		<attribute name="titleImage" mode="IN" type="java.nio.ByteBuffer" optional="true" />
	</service>

	<service name="renovateContent" engine="java" invoke="renovateContent" location="com.olbius.baseecommerce.backend.ContentServices">
		<attribute name="productId" mode="INOUT" type="String" optional="true" />
		<attribute name="contentTypeId" mode="INOUT" type="String" optional="true" />
		<attribute name="contentId" mode="IN" type="String" />
		<attribute name="type" mode="INOUT" type="String" />
		<attribute name="contentName" mode="IN" type="String" optional="true" />
		<attribute name="description" mode="IN" type="String" optional="true" allow-html="any" />
		<attribute name="editor" mode="IN" type="String" optional="true" allow-html="any" />
		<attribute name="titleImage" mode="IN" type="java.nio.ByteBuffer" optional="true" />
	</service>

	<service name="createContentCategory" engine="java" invoke="createContentCategory" location="com.olbius.baseecommerce.backend.ContentServices"
		default-entity-name="ContentCategory">
		<auto-attributes mode="IN" include="all" optional="true"></auto-attributes>
	</service>
	<service name="updateContentCategory" engine="java" invoke="updateContentCategory" location="com.olbius.baseecommerce.backend.ContentServices"
		default-entity-name="ContentCategory">
		<auto-attributes mode="IN" include="pk"></auto-attributes>
		<auto-attributes mode="IN" include="nonpk" optional="true"></auto-attributes>
	</service>

	<service name="createWebsiteContentCategory" engine="java" invoke="createWebsiteContentCategory" location="com.olbius.baseecommerce.backend.ContentServices"
		default-entity-name="WebsiteContentCategory">
		<auto-attributes mode="IN" include="all" optional="true"></auto-attributes>
	</service>
	<service name="updateWebsiteContentCategory" engine="java" invoke="updateWebsiteContentCategory" location="com.olbius.baseecommerce.backend.ContentServices"
		default-entity-name="WebsiteContentCategory">
		<auto-attributes mode="IN" include="pk"></auto-attributes>
		<auto-attributes mode="IN" include="nonpk" optional="true"></auto-attributes>
	</service>

	<service name="createContentCategoryMember" engine="java" invoke="createContentCategoryMember" location="com.olbius.baseecommerce.backend.ContentServices"
		default-entity-name="ContentCategoryMember">
		<auto-attributes mode="IN" include="all" optional="true"></auto-attributes>
	</service>
	<service name="updateContentCategoryMember" engine="java" invoke="updateContentCategoryMember" location="com.olbius.baseecommerce.backend.ContentServices"
		default-entity-name="ContentCategoryMember">
		<auto-attributes mode="IN" include="pk"></auto-attributes>
		<auto-attributes mode="IN" include="nonpk" optional="true"></auto-attributes>
	</service>

</services>