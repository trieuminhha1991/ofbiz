<?xml version="1.0" encoding="UTF-8"?>
<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entitymodel.xsd">
	<extend-entity entity-name="Invoice">
		<field name="isVerified" type="indicator"></field>
		<field name="verifiedDate" type="date-time"></field>
		<field name="productStoreId" type="id-ne"></field>
		<!-- add by dunglv -->
		<field name="glAccountTypeId" type="id-ne"></field>
        <!--added by thaint-->
        <field name="conversionFactor" type="currency-amount"></field>
        <field name="facilityId" type="id"/>
    </extend-entity>
	<!--<extend-entity entity-name="PosTerminal">-->
   		<!--<field name="isCashHandover" type="boolean"></field>-->
   		<!--<field name="cashHandoverAmount" type="currency-amount"></field>-->
   	<!--</extend-entity>-->
   	<extend-entity entity-name="Payment">
   		<field name="organizationName" type="long-varchar"></field>
   		<field name="identifyCard" type="short-varchar"></field>
        <field name="issuedDate" type="date"></field>
        <field name="paidDate" type="date-time"></field> <!--Ngay thanh toan-->
   		<field name="issuedPlace" type="long-varchar"></field>
        <!--added by ThaiNT-->
        <field name="conversionFactor" type="currency-amount"/> <!-- Tỉ giá quy đổi, áp dụng với các thanh toán ngoại tệ -->
   	</extend-entity>
   	<extend-entity entity-name="Invoice">
   		<field name="newStatusId" type="id-ne"></field>
		<relation rel-entity-name="StatusItem" type="one" title="extend status" fk-name="INV_NEW_STT">
   			<key-map field-name="newStatusId" rel-field-name="statusId"/>
   		</relation>
   	</extend-entity>
   	<extend-entity entity-name="FinAccount">
   		<field name="stateProvinceGeoId" type="id-ne"></field>
   		<field name="countryGeoId" type="id-ne"></field>
		<relation rel-entity-name="Geo" type="one" title="state" fk-name="FIN_ACC_STATE_GEO">
   			<key-map field-name="stateProvinceGeoId" rel-field-name="geoId"/>
   		</relation>
		<relation rel-entity-name="Geo" type="one" title="country" fk-name="FIN_ACC_COUNTRY_GEO">
   			<key-map field-name="countryGeoId" rel-field-name="geoId"/>
   		</relation>
   	</extend-entity>
   	<extend-entity entity-name="Payment">
   		<field name="paymentCode" type="id-long"></field>
   		<field name="productIdTaxCode" type="id-ne"></field>
   		<field name="taxAmount" type="currency-amount"></field>
   		<field name="taxAuthPartyId" type="id-ne"></field>
   		<field name="taxAuthGeoId" type="id-ne"></field>
   		<field name="taxAuthorityRateSeqId" type="id-ne"></field>
   		<relation rel-entity-name="Product" type="one" fk-name="PMNT_PROD_TAX_CODE">
   			<key-map field-name="productIdTaxCode" rel-field-name="productId"/>
   		</relation>
   		<relation rel-entity-name="TaxAuthorityRateProduct" type="one" fk-name="PMNT_TAX_AUTH_RATE">
   			<key-map field-name="taxAuthorityRateSeqId"/>
   		</relation>
   	</extend-entity>
   	
   	<extend-entity entity-name="FixedAsset">
    	<field name="statusId" type="id-ne"></field>
    	<field name="dateOfIncrease" type="date-time"></field>
    	<field name="quantity" type="numeric"></field>
    	<field name="yearMade" type="int"></field>
    	<field name="warrantyPeriod" type="long-varchar"></field>
    	<field name="warrantyCondition" type="long-varchar"></field>
    	<field name="supplierId" type="id-ne"></field>
    	<field name="countryOrigin" type="long-varchar"></field>
    	<field name="description" type="long-varchar"></field>
    	<field name="productStoreId" type="id-ne"></field>
    	<field name="isIncrease" type="indicator"></field>
    	<field name="receiptNumber" type="long-varchar"></field>
    	<field name="receiptDate" type="date-time"></field>
    	<relation rel-entity-name="StatusItem" type="one" fk-name="FIXEDAST_STTITEM">
    		<key-map field-name="statusId"/>
    	</relation>
    	<relation rel-entity-name="Party" type="one" fk-name="FIXEDAST_PTY">
    		<key-map field-name="supplierId" rel-field-name="partyId"/>
    	</relation>
    	<relation rel-entity-name="ProductStore" type="one" fk-name="FIXEDAST_PSTORE">
    		<key-map field-name="productStoreId"/>
    	</relation>
    </extend-entity>
   	
   	<extend-entity entity-name="Party">
        <field name="isInvoiceVat" type="indicator"></field>
    </extend-entity>
    
    <extend-entity entity-name="Payment">
    	<field name="partyName" type="long-varchar"></field>
    	<field name="taxCode" type="long-varchar"></field>
    	<field name="address" type="long-varchar"></field>
    	<field name="countryGeoId" type="id-ne"></field>
    	<field name="stateGeoId" type="id-ne"></field>
    	<field name="phoneNbr" type="long-varchar"></field>
    	<field name="finAccountCode" type="long-varchar"></field>
    	<field name="finAccountName" type="long-varchar"></field>
    	<field name="posTerminalStateId" type="id-ne"></field>
    	<relation rel-entity-name="PosTerminalState" type="one" fk-name="PMT_POS_TERM_STATE">
    		<key-map field-name="posTerminalStateId"/>
    	</relation>
    </extend-entity> 
    
   	<extend-entity entity-name="AcctgTrans">
      <field name="posTerminalStateId" type="id-ne"></field>
      <field name="organizationPartyId" type="id-ne"></field>
      <field name="isCanceled" type="indicator"></field>
      <relation type="one" fk-name="ACCTTX_POSTERMINAL" rel-entity-name="PosTerminalState">
        <key-map field-name="posTerminalStateId"/>
      </relation>
      <relation type="one" fk-name="ACCTTXENT_ORGPARTY" rel-entity-name="Party">
        <key-map field-name="organizationPartyId" rel-field-name="partyId" />
      </relation>              
    </extend-entity>

   	<extend-entity entity-name="AcctgTransEntry">
        <field name="productStoreId" type="id-ne"></field>
        <relation type="one" fk-name="ACCTTE_PRDS" rel-entity-name="ProductStore">
        	<key-map field-name="productStoreId"/>
      	</relation>
    </extend-entity>
       
    <extend-entity entity-name="InvoiceItemType">
    	<field name="invoiceTypeId" type="id-ne"></field>
    	<relation rel-entity-name="InvoiceType" type="one" fk-name="FK_II_TYP_INV_TYPE">
    		<key-map field-name="invoiceTypeId"/>
    	</relation>
    </extend-entity>  
    <extend-entity entity-name="PaymentType">
    	<field name="isAppliedInvoice" type="boolean"></field>
    </extend-entity>  
    
    <extend-entity entity-name="Payment">
    	<field name="voucherForm" type="long-varchar"></field>
    	<field name="voucherSerial" type="long-varchar"></field>
    	<field name="voucherNumber" type="long-varchar"></field>
    	<field name="issuedDateVoucher" type="date-time"></field>
    	<field name="paymentApplied" type="currency-amount"></field>
    </extend-entity>
</entitymodel>	