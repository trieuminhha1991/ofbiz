	<screen name="OrderPayment">
    	<section>
    		<actions>
                <set field="enableQuickCreate" value="true"/>
                <set field="activeTab" from-field="parameters.activeTab"/>
                <set field="currencyUomId" from-field="defaultOrganizationPartyCurrencyUomId" />
                <entity-one value-field="orderHeader" entity-name="OrderHeader">
                    <field-map field-name="orderId" from-field="parameters.orderId"/>
                </entity-one>
                <script location="component://baseaccounting/webapp/baseaccounting/WEB-INF/actions/payment/getRemainAmountOrderToPay.groovy"/>
            </actions>
			<widgets>
				<section>
					<condition>
						<if-has-permission permission="PMN_SOVER" action="_VIEW"/>
					</condition>
					<widgets>
						<platform-specific>
							<html>
								<html-template location="component://baseaccounting/webapp/baseaccounting/payment/orderViewPayment.ftl"/>
							</html>
						</platform-specific>
					</widgets>
				</section>
			</widgets>
       </section>
    </screen>
</screens>