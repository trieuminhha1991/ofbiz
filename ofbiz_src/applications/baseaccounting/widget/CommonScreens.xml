<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="BaseAccountingUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="layoutSettings.companyName" from-field="uiLabelMap.BaseAccountingCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.BaseAccountingCompanySubtitle" global="true"/>
                <set field="activeApp" value="baseaccounting" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://baseaccounting/widget/BaseAccountingMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.BaseAccountingApplication}" global="true"/>
            	<set field="componentResourceName" value="BaseAccounting" global="true"/>
                <set field="componentNameSc" value="baseaccounting" global="true"/>
            </actions>
            <widgets>
                <include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="BaseAccountingCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="CommonOrganizationAccountingReportsDecorator">
        <section>
            <actions>
                <set field="selectedMenuItem" value="Report"/>
                <entity-one entity-name="PartyNameView" value-field="currentOrganization" auto-field-map="false">
                    <field-map field-name="partyId" from-field="organizationPartyId"/>
                </entity-one>
            </actions>
            <widgets>
                <decorator-screen name="BaseAccountingCommonDecorator" location="component://baseaccounting/widget/CommonScreens.xml">
                    <decorator-section name="body">
                        <decorator-section-include name="body"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="ErrorPermissionAccountingCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>    
    
    <screen name="baseaccounting">
		<section>
			<widgets>
				 <include-menu name="MainAppBar" location="component://baseaccounting/widget/BaseAccountingMenus.xml" />
			</widgets>
		</section>
	</screen>
</screens>