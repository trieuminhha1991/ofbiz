    <screen name="ViewFixedAssetIncrease">
        <section>
            <actions>
                <set field="titleProperty" value="ViewFixedAssetIncreaseTitle"/>
                <set field="selectedSubMenuItem" value="FixedAssetIncrease"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonAssetDecorator">
                    <decorator-section name="body">
                        <section>
                        	<condition>
								<if-olbius-has-permission/>
							</condition>
							<actions>
								<entity-condition list="paymentMethodTypeEnumList" entity-name="Enumeration">
									<condition-expr field-name="enumTypeId" value="PAYMENT_METHOD_TYPE"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="finAccountListActive" entity-name="FinAccount" filter-by-date="true">
									<condition-list>
										<condition-expr field-name="finAccountName" operator="not-equals" value=""/>
										<condition-expr field-name="finAccountCode" operator="not-equals" value=""/>
										<condition-expr field-name="statusId" value="FNACT_ACTIVE"/>
									</condition-list>
								</entity-condition>
							</actions>
                            <widgets>
                                <platform-specific>
                                    <html>
		                        		<html-template location="component://baseaccounting/webapp/baseaccounting/asset/ViewFixedAssetIncrease.ftl"/>
		                        	</html>
                                </platform-specific>
                            </widgets>
                            <fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
							</fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="FixedAssetTitle">
        <section>
            <condition>
                <not><if-empty field="fixedAsset"/></not>
            </condition>
            <widgets>
                <label style="ibefore-icon-angle-right" text="${uiLabelMap.BACCFixedAssetIdShort}: "></label>
                <link url-mode="plain" target="ViewFixedAsset?fixedAssetId=${fixedAsset.fixedAssetId}" text="${fixedAsset.fixedAssetId}"></link>
            </widgets>
        </section>
    </screen>
    
    <screen name="ViewFixedAsset">
        <section>
            <actions>
                <set field="titleProperty" value="BACCViewFixedAsset"/>
                <set field="selectedSubMenuItem" value="ListFixedAssets"/>
                <set field="titleHeaderValue" value="FixedAssetTitle" global="true"/>
                <set field="titleHeaderLocation" value="component://baseaccounting/widget/AssetScreens.xml" global="true"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <if-olbius-has-permission/>
                    </condition>
                    <actions>
                        <entity-condition list="fixedAssetList" entity-name="FixedAssetAndDetail">
                            <condition-expr field-name="fixedAssetId" from-field="parameters.fixedAssetId"/>
                        </entity-condition>
                        <set field="fixedAsset" from-field="fixedAssetList[0]"/>
                    </actions>
                    <widgets>
                        <section>
                            <condition>
                                <not>
                                    <if-empty field="fixedAsset"/>
                                </not>
                            </condition>
                            <actions>
                                <entity-condition list="fixedAssetAssignRoleList" entity-name="RoleType">
                                    <condition-expr field-name="parentTypeId" value="FAM_ASSIGNEE"/>
                                    <order-by field-name="description"/>
                                </entity-condition>
                                <entity-condition list="fixedAssetAssignStatusList" entity-name="StatusItem">
                                    <condition-expr field-name="statusTypeId" value="FA_ASGN_STATUS"/>
                                    <order-by field-name="sequenceId"/>
                                </entity-condition>
                            </actions>
                            <widgets>
                                <decorator-screen name="CommonAssetDecorator">
                                    <decorator-section name="body">
                                        <platform-specific>
                                            <html>
                                                <!-- <html-template location="component://baseaccounting/webapp/baseaccounting/asset/fixedAssetView.ftl"/> -->
                                                <html-template location="component://baseaccounting/webapp/baseaccounting/asset/fixedAssetView2.ftl"/>
                                            </html>
                                        </platform-specific>
                                    </decorator-section>
                                </decorator-screen>
                            </widgets>
                            <fail-widgets>
                                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                                    <decorator-section name="body">
                                        <container style="alert alert-info">
                                            <label text="${uiLabelMap.FixedAssetNotFoundFixedAssetId}"></label>
                                        </container>
                                    </decorator-section>
                                </decorator-screen>
                            </fail-widgets>
                        </section>
                    </widgets>
                    <fail-widgets>
                        <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                            <decorator-section name="body">
                                <container style="alert alert-info">
                                    <label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
                                </container>
                            </decorator-section>
                        </decorator-screen>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
    </screen>
    
