	<screen name="ListOrder">
		<section>
			<actions>
				<set field="selectedMenuItem" value="AR"/>
                <set field="selectedSubMenuItem" value="salesOrderList"/>
				<set field="titleProperty" value="BSListOrder" global="true"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
								<!-- <or>
									<if-has-permission permission="SALESORDER" action="_VIEW"/>
									<if-has-permission permission="ACC_SOAPPROVED" action="_VIEW"/>
								</or> -->
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<platform-specific>
									<html>
										<html-template location="component://basesales/webapp/basesales/order/orderList.ftl"/>
									</html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
    </screen>
    
    <screen name="ListOrderReceiptNote">
		<section>
			<actions>
				<set field="selectedMenuItem" value="AR" />
				<set field="selectedSubMenuItem" value="ListOrderReceiptNote" />
				<set field="titleProperty" value="BACCTakeMoneyFromBank" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<condition>
	                    		<if-olbius-has-permission/>
	                    	</condition>
	                    	<actions>
								<entity-condition list="statusList" entity-name="StatusItem">
									<condition-expr field-name="statusTypeId" value="INVOICE_NEW_STATUS"/>
									<order-by field-name="sequenceId"/>
								</entity-condition>
								<entity-condition list="paymentARTypeList" entity-name="PaymentType">
									<condition-expr field-name="parentTypeId" value="RECEIPT"/>
									<order-by field-name="paymentTypeId"/>
								</entity-condition>
								<entity-condition list="paymentAPTypeList" entity-name="PaymentType">
									<condition-expr field-name="parentTypeId" value="DISBURSEMENT"/>
									<order-by field-name="paymentTypeId"/>
								</entity-condition>
								<entity-condition list="uomList" entity-name="Uom">
									<condition-expr field-name="uomTypeId" value="CURRENCY_MEASURE"/>
									<order-by field-name="uomId"/>
								</entity-condition>
								<entity-condition list="invoiceTypeList" entity-name="InvoiceType">
									<order-by field-name="invoiceTypeId"/>
								</entity-condition>
								<property-to-field field="defaultCurrencyUomId" resource="general" property="currency.uom.id.default" default="USD"/>
							</actions>
	                        <widgets>
	                            <platform-specific>
	                                <html>
	                      				<html-template location="component://baseaccounting/webapp/baseaccounting/payment/listOrderReceiptNote.ftl"/>
	                      			</html>
	                            </platform-specific>
	                        </widgets>
	                        <fail-widgets>
								<container style="alert alert-danger">
									<label text="${uiLabelMap.BACCYouHavenotViewPermission}"/>
								</container>
							</fail-widgets>
						</section>	
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
