<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="AccountsReceivableDecorator">
        <section>
            <actions>
            	<set field="selectedMenuItem" value="AR" global="true"/>
            	<set field="businessType" value="AR" global="true"/>
            </actions>
            <widgets>
                <decorator-section-include name="body"/>
            </widgets>
        </section>
    </screen>
	
	<screen name="ListInvoices">
        <section>
	        <actions>
	        	<set field="titleProperty" value="BACCInvoiceList"/>
	        	<set field="selectedSubMenuItem" value="ARInvoiceList"/>
	        	<set field="organizationPartyId" from-field="parameters.organizationPartyId"/>
	        	<entity-condition list="listInvoiceType" entity-name="InvoiceType">
	        		<condition-expr field-name="invoiceTypeId" value="SALES_INVOICE"/>
	        	</entity-condition>
	        	<entity-condition list="listStatusItem" entity-name="StatusItem">
	        		<condition-expr field-name="statusTypeId" value="INVOICE_STATUS"/>
	        	</entity-condition>
	        </actions>	
			<widgets>
	        	<decorator-screen name="AccountsReceivableDecorator">
	        		<decorator-section name="body">
						<section>
	        			   	<condition>
								<!-- <if-has-permission permission="VIEW_SINV" action="_VIEW"/> -->
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<include-screen location="component://baseaccounting/widget/InvoiceScreens.xml" name="ListInvoices"/>
							</widgets>	        		
							<fail-widgets>
								<include-screen location="component://baseaccounting/widget/CommonScreens.xml" name="ErrorPermissionAccountingCommonDecorator"/>
							</fail-widgets>	
						</section>   	        					
	        		</decorator-section>
	        	</decorator-screen>
	        </widgets>
	    </section>
	</screen>

    <screen name="ListArInvoiceDueReceivable">
        <section>
            <actions>
                <set field="selectedMenuItem" value="AR" global="true"/>
                <set field="businessType" value="AR" global="true"/>
                <set field="titleProperty" value="BACCListInvoiceDueReceivable"/>
                <set field="selectedSubMenuItem" value="ARInvoiceListDueReceivable"/>
                <set field="organizationPartyId" from-field="parameters.organizationPartyId"/>
                <entity-condition list="listInvoiceType" entity-name="InvoiceType">
                    <condition-expr field-name="invoiceTypeId" value="SALES_INVOICE"/>
                </entity-condition>
                <entity-condition list="listStatusItem" entity-name="StatusItem">
                    <condition-expr field-name="statusTypeId" value="INVOICE_STATUS"/>
                </entity-condition>
                <entity-condition list="newStatusList" entity-name="StatusItem">
                    <condition-expr field-name="statusTypeId" value="INVOICE_NEW_STATUS"/>
                    <order-by field-name="sequenceId"/>
                </entity-condition>
            </actions>
            <widgets>
                <decorator-screen name="BaseAccountingCommonDecorator" location="component://baseaccounting/widget/CommonScreens.xml">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <!-- <if-has-permission permission="VIEW_SINV" action="_VIEW"/> -->
                                <if-olbius-has-permission/>
                            </condition>
                            <widgets>
                                <platform-specific>
                                    <html>
                                        <html-template location="component://baseaccounting/webapp/baseaccounting/invoice/invoiceListDueReceivable.ftl"/>
                                    </html>
                                </platform-specific>
                            </widgets>
                            <fail-widgets>
                                <include-screen location="component://baseaccounting/widget/CommonScreens.xml" name="ErrorPermissionAccountingCommonDecorator"/>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>


    <screen name="NewInvoice">
        <section>
	        <actions>
	        	<set field="titleProperty" value="BACCNewInvoice"/>
	        	<set field="selectedSubMenuItem" value="NewARInvoice"/>
	        	<set field="organizationPartyId" from-field="parameters.organizationPartyId"/>
	        	<entity-condition entity-name="InvoiceType" list="listInvoiceTypes">
	        		<condition-list combine="and">
	        			<condition-expr field-name="parentTypeId" value="SALES_INVOICE"/>
	        		</condition-list>
	        		<order-by field-name="invoiceTypeId"/>
	        	</entity-condition>
	        </actions>
			<widgets>
	        	<decorator-screen name="AccountsReceivableDecorator">
	        		<decorator-section name="body">
	        			<section>
	        			   	<condition>
								<!-- <if-has-permission permission="CREATE_SINV" action="_VIEW"/> -->
								<if-olbius-has-permission/>
							</condition>
							<widgets>
								<include-screen location="component://baseaccounting/widget/InvoiceScreens.xml" name="NewInvoice"/>                            
							</widgets>
							<fail-widgets>
								<include-screen location="component://baseaccounting/widget/CommonScreens.xml" name="ErrorPermissionAccountingCommonDecorator"/>
							</fail-widgets>	        			
	        			</section>	        		
	        		</decorator-section>
	        	</decorator-screen>
	        </widgets>
	    </section>
	</screen>

    <screen name="ARInvoiceTitle">
        <section>
            <condition>
                <not><if-empty field="invoice"/></not>
            </condition>
            <widgets>
                <label style="ibefore-icon-angle-right" text="${uiLabelMap.BACCInvoiceId}: "></label>
                <link url-mode="plain" target="ViewARInvoice?invoiceId=${invoice.invoiceId}" text="${invoice.invoiceId}"></link>
            </widgets>
        </section>
    </screen>
	
