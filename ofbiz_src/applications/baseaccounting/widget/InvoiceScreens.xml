	                        </widgets>
	                    </section>
	                </decorator-section>
	            </decorator-screen>
	        </widgets>
	    </section>
	</screen>
	
	<screen name="ViewInvoice">
        <section>
	        <actions>
	        	
	        	<entity-condition entity-name="InvItemAndOrdItem" list="invItemAndOrdItems">
                    <condition-expr field-name="invoiceId" operator="equals" from-field="parameters.invoiceId" />
                    <order-by field-name="invoiceItemSeqId" />
                </entity-condition>
	        	<entity-one value-field="invoice" entity-name="Invoice">
	        		<field-map field-name="invoiceId" from-field="parameters.invoiceId"/>
	        	</entity-one>
	        	<entity-condition entity-name="AcctgTrans" list="acctgTrans">                    
                    <condition-list combine="and">
                    	<condition-expr field-name="invoiceId" from-field="parameters.invoiceId"/>
                    	<condition-expr field-name="invoiceId" operator="not-equals" from-field="nullField"/>
                    </condition-list>
                    <order-by field-name="acctgTransId"/>
                </entity-condition>
                <entity-condition list="voucherTotalList" entity-name="VoucherInvoiceAndTotal">
					<condition-list combine="and">
                    	<condition-expr field-name="invoiceId" from-field="parameters.invoiceId"/>
                    	<condition-expr field-name="invoiceId" operator="not-equals" from-field="nullField"/>
                    </condition-list>                
                </entity-condition>
                <entity-condition list="enumPartyTypeList" entity-name="Enumeration">
	        		<condition-expr field-name="enumTypeId" value="PARTY_TYPE"/>
	        		<order-by field-name="sequenceId"/>
	        	</entity-condition>	
	        	<property-to-field field="defaultCountryGeoId" resource="general" property="country.geo.id.default" default="VNM"/>
	        	<property-to-field field="invoiceVoucerDiffValueId" resource="baseaccounting" property="invoice.voucher.diff.value.system.id"/>
	        	<entity-condition list="countryGeoList" entity-name="Geo">
	        		<condition-expr field-name="geoTypeId" value="COUNTRY"/>
	        		<order-by field-name="geoName"/>
	        	</entity-condition>
	        	<set field="invoiceAmount" value="${bsh:org.ofbiz.accounting.invoice.InvoiceWorker.getInvoiceTotal(invoice)}" type="BigDecimal" />
                <set field="payInvoiceAmount" value="${bsh:org.ofbiz.accounting.invoice.InvoiceWorker.getPayrollInvoiceTotal(invoice)}" type="BigDecimal" />
                <set field="notAppliedAmount" value="${bsh:org.ofbiz.accounting.invoice.InvoiceWorker.getInvoiceNotApplied(invoice)}" type="BigDecimal" />
                <set field="appliedAmount" value="${bsh:org.ofbiz.accounting.invoice.InvoiceWorker.getInvoiceApplied(invoice)}" type="BigDecimal" />
                <script location="component://baseaccounting/webapp/baseaccounting/WEB-INF/actions/invoice/getApplicationList.groovy" />
	        </actions>
	
	        <widgets>
	            <decorator-screen name="BaseAccountingCommonDecorator" location="component://baseaccounting/widget/CommonScreens.xml">
	                <decorator-section name="body">
	                    <section>
	                    	<condition>
								<not>
									<if-empty field="invoice" />
								</not>
							</condition>	                    
	                        <widgets>
	                            <platform-specific>
	                                <html>
	                      				<html-template location="component://baseaccounting/webapp/baseaccounting/invoice/invoiceView.ftl"/>
	                      			</html>
	                            </platform-specific>
	                        </widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BACCInvoiceNoInvoiceFound}"></label>
								</container>
							</fail-widgets>	                        
	                    </section>
	                </decorator-section>
	            </decorator-screen>
	        </widgets>
	    </section>
	</screen>
	
