	<screen name="AgreementOrder">
		<section>
			<actions>
				<set field="activeTab" from-field="parameters.activeTab"/>
			</actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://baseimex/webapp/baseimex/import/agreementOrder.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>

    <screen name="ListDiscountAndPromotionCustomer">
        <section>
            <actions>
                <set field="titleProperty" value="BACCDiscountAndPromoCustomer"/>
                <set field="selectedMenuItem" value="DiscountPromo"/>
                <set field="selectedSubMenuItem" value="ListDiscountAndPromoCustomer"/>
                <entity-condition list="listStatusItem" entity-name="StatusItem">
                    <condition-expr field-name="statusTypeId" value="INVOICE_STATUS"/>
                </entity-condition>
                <entity-condition list="newStatusList" entity-name="StatusItem">
                    <condition-expr field-name="statusTypeId" value="INVOICE_NEW_STATUS"/>
                    <order-by field-name="sequenceId"/>
                </entity-condition>
            </actions>
            <widgets>
                <decorator-screen name="BaseAccountingCommonDecorator" location="component://baseaccounting/widget/CommonScreens.xml">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-olbius-has-permission/>
                            </condition>
                            <widgets>
                                <platform-specific>
                                    <html>
                                        <html-template location="component://baseaccounting/webapp/baseaccounting/invoice/listDiscountAndPromotionCustomer.ftl"/>
                                    </html>
                                </platform-specific>
                            </widgets>
                            <fail-widgets>
                                <include-screen location="component://baseaccounting/widget/CommonScreens.xml" name="ErrorPermissionAccountingCommonDecorator"/>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="ViewDetailDiscountAndPromoCustomer">
        <section>
            <actions>
                <set field="titleProperty" value="BACCViewDetailDiscount"/>
                <set field="selectedMenuItem" value="DiscountPromo"/>
                <set field="selectedSubMenuItem" value="ListDiscountAndPromoCustomer"/>
            </actions>
            <widgets>
                <decorator-screen name="BaseAccountingCommonDecorator" location="component://baseaccounting/widget/CommonScreens.xml">
                    <decorator-section name="body">
                        <section>
                            <!--<condition>-->
                                <!--<if-olbius-has-permission/>-->
                            <!--</condition>-->
                            <widgets>
                                <platform-specific>
                                    <html>
                                        <html-template location="component://baseaccounting/webapp/baseaccounting/invoice/viewDetailDiscountAndPromoCustomer.ftl"/>
                                    </html>
                                </platform-specific>
                            </widgets>
                            <fail-widgets>
                                <include-screen location="component://baseaccounting/widget/CommonScreens.xml" name="ErrorPermissionAccountingCommonDecorator"/>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>