<!-- These screens are for generating printed documents, such as invoices, bills, statements, etc. -->

<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="CommonLiabilityDecorator">
        <section>
            <actions>
                <set field="selectedMenuItem" from-field="selectedMenuItem" default-value="Report"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="CustomerLiability">
        <section>
            <actions>
                <set field="titleProperty" value="BACCCustomerLiability"/>
                <set field="selectedSubMenuItem" value="liabilityGlParty"/>
                <set field="organizationPartyId" from-field="${userLogin.lastOrg}"/>
            </actions>
            <widgets>               
                <decorator-screen name="CommonLiabilityDecorator">
                    <decorator-section name="body">
                        <section>
<!-- 	                        <condition> -->
<!-- 	                                <if-has-permission permission="ACC_LIACUST" action="_VIEW"/> -->
<!-- 	                        </condition>                         -->
                            <widgets>
                                <platform-specific>
                                    <html>
		                        		<html-template location="component://baseaccounting/webapp/baseaccounting/liability/LiabilitiesList.ftl"/>
		                        	</html>
                                </platform-specific>
                            </widgets>
							<fail-widgets>
					            <include-screen location="component://baseaccounting/widget/CommonScreens.xml" name="ErrorPermissionAccountingCommonDecorator"/>
				            </fail-widgets>	                            
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="DistributorLiabilityDetail">
        <section>
            <actions>
                <set field="organizationPartyId" from-field="${userLogin.lastOrg}"/>
                <entity-condition list="listInvoiceTypeP" entity-name="InvoiceType">
                	<condition-expr field-name="parentTypeId" operator="equals" value="PURCHASE_INVOICE"/>
                </entity-condition>
                 <entity-condition list="listInvoiceTypeS" entity-name="InvoiceType">
                	<condition-expr field-name="parentTypeId" operator="equals" value="SALES_INVOICE"/>
                </entity-condition>
                <entity-condition list="listStatusItem" entity-name="StatusItem">
                	<condition-expr field-name="statusTypeId" operator="equals" value="INVOICE_STATUS"/>
                </entity-condition>    
                <script location="component://baseaccounting/webapp/baseaccounting/WEB-INF/actions/liability/nav_liabilityDistributor.groovy"/>
                <!-- <set field="selectedSubMenuItem" from-field="${selectedSubMenuItem}"/>
                <set field="selectedMenuItem" from-field="${selectedMenuItem}"/> -->
                 <set field="titleProperty" value="${titleProperty}"/>
            </actions>
            <widgets>               
                <decorator-screen name="CommonLiabilityDecorator">
                    <decorator-section name="body">
                        <section>
<!-- 	                        <condition> -->
<!-- 	                                <if-has-permission permission="ACC_LIACUST" action="_VIEW"/> -->
<!-- 	                        </condition>                         -->
                            <widgets>
                                <platform-specific>
                                    <html>
		                        		<html-template location="component://baseaccounting/webapp/baseaccounting/liability/DistributorLiabilityView.ftl"/>
		                        	</html>
                                </platform-specific>
                            </widgets>
							<fail-widgets>
					            <include-screen location="component://baseaccounting/widget/CommonScreens.xml" name="ErrorPermissionAccountingCommonDecorator"/>
				            </fail-widgets>	                            
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>
