        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="CommonEquipmentDecorator">
        <section>
            <actions>
                <set field="selectedMenuItem" value="Equipment"/>
            </actions>
            <widgets>
                <decorator-screen name="BaseAccountingCommonDecorator" location="component://baseaccounting/widget/CommonScreens.xml">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="ListEquipments">
        <section>
            <actions>
                <set field="titleProperty" value="BACCListEquipments"/>
                <set field="selectedSubMenuItem" value="ListEquipments"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonEquipmentDecorator">
                    <decorator-section name="body">
                        <section>
                        	<condition>
								<if-olbius-has-permission/>
							</condition>
							<actions>
								<property-to-field field="defaultCurrencyUomId" resource="general" property="currency.uom.id.default" default="USD"/>
								<entity-condition list="listCurrencyUom" entity-name="Uom">
									<condition-expr field-name="uomTypeId" value="CURRENCY_MEASURE"/>
									<order-by field-name="abbreviation"/>
								</entity-condition>
								<entity-condition list="listEquipmentType" entity-name="EquipmentType">
									<order-by field-name="description"/>
								</entity-condition>
							</actions>
                            <widgets>
                                <platform-specific>
                                    <html>
		                        		<!-- <html-template location="component://baseaccounting/webapp/baseaccounting/equipment/equipList$tmp.ftl"/> -->
		                        		<html-template location="component://baseaccounting/webapp/baseaccounting/equipment/ViewEquipmentList.ftl"/>
		                        	</html>
                                </platform-specific>
                            </widgets>
                            <fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
							</fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
