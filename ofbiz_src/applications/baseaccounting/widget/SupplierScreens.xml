<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">
	<screen name="ViewSupplierList">
		<section>
			<actions>
				<set field="selectedMenuItem" value="SupplierManager"/>
                <set field="selectedSubMenuItem" value="supplierManager"/>
				<set field="titleProperty" value="POListSuppilerProduct"/>
				<property-to-field field="defaultCountryGeoId" resource="general" property="country.geo.id.default" default="VNM"/>
			</actions>
			<widgets>
                <decorator-screen name="BaseAccountingCommonDecorator" location="component://baseaccounting/widget/CommonScreens.xml">
                    <decorator-section name="body">
                        <section>
                        	<condition>
								<if-olbius-has-permission/>
							</condition>
                            <widgets>
                                <platform-specific>
									<html>
										<html-template location="component://basepo/webapp/basepo/supplier/supplierViewSupplierParty.ftl" />
									</html>
								</platform-specific>
                            </widgets>
                            <fail-widgets>
                            	<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
		</section>
	</screen>	 
</screens>	