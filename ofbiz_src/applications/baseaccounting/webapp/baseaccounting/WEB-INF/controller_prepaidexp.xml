<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
    <!-- The controller elements that are common to all OFBiz components
         can be found in the following xml file. A component can override the
         elements found in the common-controller.xml file. -->

    <!-- Request Mappings -->
    <request-map uri="NewPrepaidExp">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="NewPrepaidExp"/>
   	</request-map>
   	<request-map uri="ListPrepaidExps">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ListPrepaidExps"/>
   	</request-map>
   	<request-map uri="ListPEAllocPeriods">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ListPEAllocPeriods"/>
   	</request-map>
   	<request-map uri="ListAllocatedPE">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ListAllocatedPE"/>
   	</request-map>
   	<request-map uri="PECostAlloc">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="PECostAlloc"/>
   	</request-map>
   	<request-map uri="createPrepaidExpAndAlloc">
    	<security https="true" auth="true"/>
    	<event type="java" invoke="createPrepaidExpAndAlloc" path="com.olbius.acc.prepaidexp.PrepaidExpEvents"></event>
    	<response name="success" type="request" value="json"/>
    	<response name="error" type="request" value="json"/>
   	</request-map>
   	<request-map uri="addPEToPeriod">
    	<security https="true" auth="true"/>
    	<event type="java" invoke="addPEToPeriod" path="com.olbius.acc.prepaidexp.PrepaidExpEvents"></event>
    	<response name="success" type="request" value="json"/>
    	<response name="error" type="request" value="json"/>
   	</request-map>
   	<request-map uri="postPEAllocTrans">
    	<security https="true" auth="true"/>
    	<event type="service" invoke="postPEAllocTrans"></event>
    	<response name="success" type="request" value="json"/>
    	<response name="error" type="request" value="json"/>
   	</request-map>
   	<request-map uri="getPECostAlloc">
    	<security https="true" auth="true"/>
    	<event type="service" invoke="getPECostAlloc"></event>
    	<response name="success" type="request" value="json"/>
    	<response name="error" type="request" value="json"/>
   	</request-map>
   	<view-map name="ListPEAllocPeriods" type="screen" page="component://baseaccounting/widget/PrepaidExpenseScreens.xml#ListPEAllocPeriods"/>
   	<view-map name="PECostAlloc" type="screen" page="component://baseaccounting/widget/PrepaidExpenseScreens.xml#PECostAlloc"/>
   	<view-map name="ListAllocatedPE" type="screen" page="component://baseaccounting/widget/PrepaidExpenseScreens.xml#ListAllocatedPE"/>
   	<view-map name="ListPrepaidExps" type="screen" page="component://baseaccounting/widget/PrepaidExpenseScreens.xml#ListPrepaidExps"/>
   	<view-map name="NewPrepaidExp" type="screen" page="component://baseaccounting/widget/PrepaidExpenseScreens.xml#NewPrepaidExp"/>
</site-conf>