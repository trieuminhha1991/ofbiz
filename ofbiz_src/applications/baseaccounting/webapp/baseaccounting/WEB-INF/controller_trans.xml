<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
    <!-- The controller elements that are common to all OFBiz components
         can be found in the following xml file. A component can override the
         elements found in the common-controller.xml file. -->
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>

    <description>BaseAccounting Component Site Configuration File</description>
	
    <!-- Request Mappings -->
    <request-map uri="ListTrans">
		<security https="true" auth="true"/>
		<response name="success" type="view" value="ListTrans"/>
	</request-map>
	<request-map uri="createAcctgTransAndEntriesOlbius">
		<security https="true" auth="true"/>
		<event type="java" invoke="createAcctgTransAndEntries" path="com.olbius.acc.trans.AcctgTransEvents"></event>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	<request-map uri="cancelAcctgTransOlbius">
		<security https="true" auth="true"/>
		<event type="java" invoke="cancelAcctgTransOlbius" path="com.olbius.acc.trans.AcctgTransEvents"></event>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	<request-map uri="getAcctgTransEntry">
		<security https="true" auth="true"/>
		<event type="java" invoke="getAcctgTransEntry" path="com.olbius.acc.trans.AcctgTransEvents"></event>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	<request-map uri="getAcctgTransHistoryLast">
		<security https="true" auth="true"/>
		<event type="java" invoke="getAcctgTransHistoryLast" path="com.olbius.acc.trans.AcctgTransEvents"></event>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	<request-map uri="getGlAccountByAccountCode">
		<security https="true" auth="true"/>
		<event type="java" invoke="getGlAccountByAccountCode" path="com.olbius.acc.trans.AcctgTransEvents"></event>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
	<request-map uri="updateAcctgTransEntryOlb">
		<security https="true" auth="true"/>
		<event type="java" invoke="updateAcctgTransEntry" path="com.olbius.acc.trans.AcctgTransEvents"></event>
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>
   	
   	<request-map uri="postAcctgTransOlb">
    	<security https="true" auth="true"/>
    	<event type="service" invoke="postAcctgTrans"></event>
    	<response name="success" type="request" value="json"/>
    	<response name="error" type="request" value="json"/>
   	</request-map>	

	<!-- PQD for testing -->   	
   	<request-map uri="createRandomAcctgTransAndEntriesSalesOrderInvoiceForTesting">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ViewcreateRandomAcctgTransAndEntriesSalesOrderInvoiceForTesting"/>
    	<response name="error" type="view" value="ViewcreateRandomAcctgTransAndEntriesSalesOrderInvoiceForTesting"/>
   	</request-map>	
   	
   	<request-map uri="createRandomAcctgTransAndEntriesPurchaseOrderInvoiceForTesting">
    	<security https="true" auth="true"/>
    	<response name="success" type="view" value="ViewcreateRandomAcctgTransAndEntriesPurchaseOrderInvoiceForTesting"/>
    	<response name="error" type="view" value="ViewcreateRandomAcctgTransAndEntriesPurchaseOrderInvoiceForTesting"/>
   	</request-map>	

   	
    <!-- View Mappings -->
    <view-map name="ListTrans" type="screen" page="component://baseaccounting/widget/TransactionScreens.xml#ListTrans"/>
    <view-map name="ViewcreateRandomAcctgTransAndEntriesSalesOrderInvoiceForTesting" type="screen" page="component://baseaccounting/widget/TransactionScreens.xml#ViewcreateRandomAcctgTransAndEntriesSalesOrderInvoiceForTesting"/>
    <view-map name="ViewcreateRandomAcctgTransAndEntriesPurchaseOrderInvoiceForTesting" type="screen" page="component://baseaccounting/widget/TransactionScreens.xml#ViewcreateRandomAcctgTransAndEntriesPurchaseOrderInvoiceForTesting"/>    
    
</site-conf>