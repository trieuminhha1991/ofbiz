<?xml version="1.0" encoding="UTF-8"?>
<ofbiz-component name="baseaccounting"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">
    <!-- define resource loaders; most common is to use the component resource loader -->
    <resource-loader name="main" type="component"/>

    <!-- place the config directory on the classpath to access configuration files -->
    <classpath type="dir" location="config"/>
    <classpath type="dir" location="dtd"/>

    <!-- load single or multiple external libraries -->
    <classpath type="jar" location="build/lib/*"/>
    <classpath type="jar" location="lib/*"/>

    <!-- entity resources: model(s), eca(s), group, and data definitions -->
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_setting.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_payment.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_report.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_fixedasset.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_equipment.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_olap.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_prepaidexp.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_invoice.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_extend.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_view.xml"/>
    <!-- <entity-resource type="eca" reader-name="main" loader="main" location="entitydef/eecas.xml"/> -->
    <entity-resource type="data" reader-name="coreseed" loader="main" location="data/BaseAccountingTypeData.xml"/>
    <entity-resource type="data" reader-name="coreseed" loader="main" location="data/BaseAccountingSecurityPermissionSeedData.xml"/>
    <entity-resource type="data" reader-name="coreseed" loader="main" location="data/accounting/1.AccountingTypeSeedData.xml"/>
    <entity-resource type="data" reader-name="coreseed" loader="main" location="data/accounting/3.1.PaymentGatewayConfSeedData.xml"/>
	<entity-resource type="data" reader-name="coreseed" loader="main" location="data/accounting/3.2.PaymentGatewayConfigSeedData.xml"/>
	<entity-resource type="data" reader-name="coreseed" loader="main" location="data/accounting/5.GlAccountSeedData.xml"/>	
	<entity-resource type="data" reader-name="coreseed" loader="main" location="data/accounting/6.PaymentMethodTypeSeedData.xml"/>
	<entity-resource type="data" reader-name="coreseed" loader="main" location="data/accounting/7.InvoiceItemTypeSeedData.xml"/>
	<entity-resource type="data" reader-name="coreseed" loader="main" location="data/accounting/8.EnumerationInvoiceItemTypeSeedData.xml"/>
    <entity-resource type="data" reader-name="coreseed" loader="main" location="data/accounting/seednq/30.ProductTaxSeedData.xml"/>
    <entity-resource type="data" reader-name="coredemo" loader="main" location="data/BaseAccountingDemoData.xml"/>

    <!-- service resources: model(s), eca(s) and group definitions -->
    <service-resource type="model" loader="main" location="servicedef/services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/invoice_services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/payment_services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_setting.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_report.xml"/>
    <service-resource type="model" loader="main" location="servicedef/liability_services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/trans_services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/asset_services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/equipment_services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/prepaidexp_services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_job.xml"/>
    <!--
    <service-resource type="eca" loader="main" location="servicedef/secas.xml"/>
    <service-resource type="group" loader="main" location="servicedef/groups.xml"/>
    -->
	<service-resource type="eca" loader="main" location="servicedef/secas_invoice.xml"/>
	<service-resource type="eca" loader="main" location="servicedef/secas_payment.xml"/>
	
    <test-suite loader="main" location="testdef/BaseAccountingTests.xml"/>

    <!-- web applications; will be mounted when using the embedded container -->
    <webapp name="baseaccounting"
        title="BaseAccounting"
        server="default-server"
        location="webapp/baseaccounting"
        base-permission="OFBTOOLS,BASEACC"
        mount-point="/baseaccounting" 
        app-bar-display="false"/>
    <webapp name="baseaccountingresources"
        title="BaseAccounting"
        server="default-server"
        location="webapp/baseaccounting/resources"
        base-permission="BASEACC"
        mount-point="/accresources"
        app-bar-display="false"/>
</ofbiz-component>
