<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../../framework/widget/dtd/widget-screen.xsd">
	<screen name="CommonPromotionDecorator">
        <section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
	                <decorator-section name="body">
	                	<decorator-section-include name="body"/>
	                </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
	<screen name="ListPromotionDistributor">
		<section>
			<actions>
				<set field="selectedMenuItem" value="promotionDis"/>
				<set field="selectedSubMenuItem" value="promotionDistributorList"/>
				<set field="titleProperty" value="BSListProductPromotion"/>
			</actions>
			<widgets>
				<decorator-screen name="CommonPromotionDecorator">
					<decorator-section name="body">
						<section>
							<condition>
								<if-olbius-has-permission/>
							</condition>
							<actions>
								<set field="promoForDistributor" value="true" type="Boolean"/>
							</actions>
							<widgets>
								<platform-specific>
									<html><html-template location="component://basesales/webapp/basesales/promotion/promotionList.ftl"/></html>
								</platform-specific>
							</widgets>
							<fail-widgets>
								<container style="alert alert-info">
									<label text="${uiLabelMap.BSYouHavenotViewPermission}"></label>
								</container>
							</fail-widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="ListPromotionRetailOutlet">
		<section>
			<actions>
