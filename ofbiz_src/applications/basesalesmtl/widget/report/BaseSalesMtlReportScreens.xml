<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../framework/widget/dtd/widget-screen.xsd">
	
	<screen name="ReportCommonDecorator">
		<section>
			<widgets>
				<decorator-screen name="main-decorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<include-screen name="lib-report" location="component://bi-x/widget/libReport.xml" />
						<decorator-section-include name="body" />
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="routeHistory">
		<section>
			<actions>
				<set field="headerItem" value="orderentry" />
				<set field="selectedMenuItem" value="salesReportMTLNewVer" />
				<set field="titleProperty" value="BSRouteHistory" global="true" />
				<set field="selectedBizSubMenuItemTitle" value="${groovy:import org.ofbiz.base.util.UtilProperties;
				UtilProperties.getMessage('BaseSalesMtlUiLabels', 'BSRouteHistory', locale)}" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<include-screen name="lib-report" location="component://bi-x/widget/libReport.xml" />
								<container style="screenlet">
									<platform-specific>
										<html>
											<html-template location="component://basesalesmtl/webapp/basesalesmtl/report/route/reportRoute.ftl" />
										</html>
									</platform-specific>
								</container>
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="DistributorFacilityReport">
		<section>
			<actions>
				<set field="selectedMenuItem" value="salesReportMTLNewVer" />
				<set field="selectedSubMenuItem" value="ReportFaciltyDistributor" />
				<set field="titleProperty" value="ReportFacilityDistributor" global="true" />
				<property-map resource="FacilityReportUiLabels" map-name="uiLabelMap" />
				<set field="selectedBizSubMenuItemTitle" value="${groovy:import org.ofbiz.base.util.UtilProperties;
				UtilProperties.getMessage('BaseSalesUiLabels', 'ReportFacilityDistributor', locale)}" />
				<set field="reportType" value="DISTRIBUTOR"/>
				<script location="component://basesalesmtl/script/com/olbius/report/facility/facilityReport.groovy" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<include-screen name="lib-report" location="component://bi-x/widget/libReport.xml" />
						<container style="screenlet">
							<platform-specific>
								<html>
									<html-template location="component://baselogistics/webapp/baselogistics/report/facilityReport.ftl" />
								</html>
							</platform-specific>
						</container>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="ReportExportTotalDistributor">
		<section>
			<actions>
				<set field="selectedMenuItem" value="salesReportMTLNewVer" />
				<set field="titleProperty" value="BLExportedReport" global="true" />
				<property-map resource="FacilityReportUiLabels" map-name="uiLabelMap" />
				<script location="component://baselogistics/script/com/olbius/logistics/report/facility/facilityReport.groovy" />
			</actions>
			<widgets>
				<section>
					<widgets>
						<decorator-screen name="ReportCommonDecorator">
							<decorator-section name="body">
								<platform-specific>
									<html><html-template location="component://baselogistics/webapp/baselogistics/report/export/reportExportedTotal.ftl"/></html>
								</platform-specific>
							</decorator-section>
						</decorator-screen>
					</widgets>
				</section>
			</widgets>
		</section>
	</screen>
	
	<screen name="ReportReceiveTotalDistributor">
		<section>
			<actions>
				<set field="selectedMenuItem" value="salesReportMTLNewVer" />
				<set field="titleProperty" value="BLReceivedReport" global="true" />
				<property-map resource="FacilityReportUiLabels" map-name="uiLabelMap" />
				<script location="component://baselogistics/script/com/olbius/logistics/report/facility/facilityReport.groovy" />
			</actions>
			<widgets>
				<section>
					<widgets>
						<decorator-screen name="ReportCommonDecorator">
							<decorator-section name="body">
								<platform-specific>
									<html><html-template location="component://baselogistics/webapp/baselogistics/report/receive/reportReceivedTotal.ftl"/></html>
								</platform-specific>
							</decorator-section>
						</decorator-screen>
					</widgets>
				</section>
			</widgets>
		</section>
	</screen>
</screens>