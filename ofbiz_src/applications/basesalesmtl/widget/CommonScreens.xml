<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="BaseSalesMtlUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHREmployeeUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHREmploymentUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseHRDirectoryUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="DmsUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="layoutSettings.companyName" from-field="uiLabelMap.BaseSalesMtlCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.BaseSalesMtlCompanySubtitle" global="true"/>

                <set field="activeApp" value="basesalesmtl" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://basesalesmtl/widget/BaseSalesMtlMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.BaseSalesMtlApplication}" global="true"/>
                
                <set field="componentResourceName" value="BaseSalesMtl" global="true"/>
            	<set field="componentNameSc" value="basesalesmtl" global="true"/>
            </actions>
            <widgets>
                <include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="BaseSalesMtlCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="BASESALESMTL" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.BaseSalesMtlViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="basesalesmtl">
		<section>
			<widgets>
				<include-menu location="component://basesalesmtl/widget/BaseSalesMtlMenus.xml" name="MainAppBar"/>
			</widgets>
		</section>
	</screen>
</screens>