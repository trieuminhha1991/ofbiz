			</actions>
            <condition>
                <if-olbius-has-permission/>
            </condition>
	        <widgets>
	            <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <actions>

                            </actions>
                            <widgets>
                                <platform-specific>
                                    <html>
                                        <html-template location="component://basesalesmtl/webapp/basesalesmtl/sup/routeList.ftl"/>
                                    </html>
                                </platform-specific>
                            </widgets>
                          </section>
                    </decorator-section>
		        </decorator-screen>
	        </widgets>
            <fail-widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container style="alert alert-info">
