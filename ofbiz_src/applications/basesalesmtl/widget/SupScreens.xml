                        </container>
                    </decorator-section>
                </decorator-screen>
            </fail-widgets>
	    </section>
    </screen>
    <screen name="routeTitle">
        <section>
            <condition>
                <not><if-empty field="parameters.routeId"/></not>
            </condition>
            <widgets>
                <label style="ibefore-icon-angle-right" text="${uiLabelMap.BSId}: "></label>
                <link url-mode="plain" target="RouteDetail?routeId=${parameters.routeId}" text="${parameters.routeId}"></link>
            </widgets>
        </section>
    </screen>
    <screen name="RouteDetail">
	    <section>
			<actions>
			    <set field="titleProperty" value="BSAssignRoute"/>
			    <set field="selectedMenuItem" value="router" />
				<set field="selectedSubMenuItem" value="ListRoute"/>
				<entity-condition list="Days" entity-name="DayOfWeek"/>
                <set field="titleHeaderValue" value="routeTitle" global="true"/>
                <set field="titleHeaderLocation" value="component://basesalesmtl/widget/SupScreens.xml" global="true"/>
			</actions>
            <condition>
                <if-olbius-has-permission/>
            </condition>
	        <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <actions>
                                <service service-name="loadRouteInfo" result-map="resultValueLoadRoute">
                                    <field-map field-name="routeId" from-field="parameters.routeId"/>
                                </service>
                                <set field="routeInfo" from-field="resultValueLoadRoute.routeInfo"/>
                                <set field="activeTab" from-field="parameters.activeTab" default-value="routeoverview-tab"/>
                            </actions>
                            <widgets>
                                <platform-specific>
                                    <html>
                                        <html-template location="component://basesalesmtl/webapp/basesalesmtl/sup/route/routeDetailViewTotal.ftl"/>
                                    </html>
                                </platform-specific>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
	        </widgets>
            <fail-widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container style="alert alert-info">
                            <label text="${uiLabelMap.BSYouHavenotViewPermission}"/>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </fail-widgets>
	    </section>
	</screen>
