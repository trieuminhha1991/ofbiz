<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../framework/widget/dtd/widget-screen.xsd">

    <screen name="MTListRoute">
        <section>
            <actions>
                <set field="titleProperty" value="BSAssignRoute"/>
                <set field="selectedMenuItem" value="routerMT" />
                <set field="selectedSubMenuItem" value="MTListRoute"/>
                <entity-condition list="Days" entity-name="DayOfWeek"/>
                <set field="layoutSettings.styleSheets[]" value="/salesmtlresources/css/routeList.css" global="true"/>
                <script location="component://basesalesmtl/webapp/basesalesmtl/WEB-INF/actions/sup/checkPermissionEmployee.groovy"></script>
            </actions>
            <condition>
                <if-olbius-has-permission/>
            </condition>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <actions>

                            </actions>
                            <widgets>
                                <platform-specific>
                                    <html>
                                        <html-template location="component://basesalesmtl/webapp/basesalesmtl/sup/route_mt/mtrouteList.ftl"/>
                                    </html>
                                </platform-specific>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
            <fail-widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container style="alert alert-info">
                            <label text="${uiLabelMap.BSYouHavenotViewPermission}"/>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </fail-widgets>
        </section>
    </screen>

