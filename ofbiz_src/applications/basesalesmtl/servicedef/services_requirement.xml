<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>BaseSalesMtl Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service>
    
    <service name="distributorReceiveReturn" engine="java" invoke="distributorReceiveReturn" location="com.olbius.salesmtl.distributor.RequirementServices">
    	<attribute name="destinationFacilityId" mode="IN" type="String"></attribute>
    	<attribute name="returnId" mode="OUT" type="String"></attribute>
    	<attribute name="items" mode="IN" type="String"></attribute>
   </service>
   
   <service name="createReturnItemWithoutOrder" engine="java"
            location="com.olbius.salesmtl.distributor.RequirementServices" invoke="createReturnItemWithoutOrder">
        <auto-attributes entity-name="ReturnItem" include="all" mode="IN" optional="true">
            <exclude field-name="returnItemSeqId"/>
        </auto-attributes>
        <attribute name="returnItemSeqId" type="String" mode="OUT" optional="false"/>
        <override name="returnId" optional="false"/>
        <override name="returnTypeId" optional="false"/>
        <override name="returnItemTypeId" optional="false"/>
        <override name="returnQuantity" optional="false"/>
        <override name="description" allow-html="any"></override>
    </service>
   <service name="createRequirementItem" engine="java" default-entity-name="RequirementItem"
            location="com.olbius.salesmtl.distributor.RequirementServices" invoke="createRequirementItem">
        <auto-attributes mode="IN" optional="true"></auto-attributes>
        <attribute name="reqItemSeqId" mode="OUT" type="String"></attribute>
    </service>
    
    
   	<service name="createReturnRequirementCommitment" engine="java" default-entity-name="ReturnRequirementCommitment"
            location="com.olbius.salesmtl.distributor.RequirementServices" invoke="createReturnRequirementCommitment">
        <auto-attributes mode="INOUT" include="pk" optional="true"></auto-attributes>
        <auto-attributes mode="IN" include="nonpk" optional="true"></auto-attributes>
    </service>
   	<service name="updateReturnRequirementCommitment" engine="java" default-entity-name="ReturnRequirementCommitment"
            location="com.olbius.salesmtl.distributor.RequirementServices" invoke="updateReturnRequirementCommitment">
        <auto-attributes mode="IN" include="pk"></auto-attributes>
        <auto-attributes mode="IN" include="nonpk" optional="true"></auto-attributes>
    </service>
    
   	<service name="createRequirementItemAssoc" engine="java" default-entity-name="RequirementItemAssoc"
            location="com.olbius.salesmtl.distributor.RequirementServices" invoke="createRequirementItemAssoc">
        <auto-attributes mode="INOUT" include="pk" optional="true"></auto-attributes>
        <auto-attributes mode="IN" include="nonpk" optional="true"></auto-attributes>
    </service>
   	<service name="updateRequirementItemAssoc" engine="java" default-entity-name="RequirementItemAssoc"
            location="com.olbius.salesmtl.distributor.RequirementServices" invoke="updateRequirementItemAssoc">
        <auto-attributes mode="IN" include="pk"></auto-attributes>
        <auto-attributes mode="IN" include="nonpk" optional="true"></auto-attributes>
    </service>
    
    <service name="createNotifyBorrowRequirement" engine="java" invoke="createNotifyBorrowRequirement" location="com.olbius.salesmtl.distributor.RequirementServices">
		<attribute name="requirementId" mode="IN" type="String"></attribute>
	</service>
</services>