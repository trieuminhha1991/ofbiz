<?xml version="1.0" encoding="UTF-8"?>
<ofbiz-component name="basesalesmtl"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">
    <!-- define resource loaders; most common is to use the component resource loader -->
    <resource-loader name="main" type="component"/>

    <!-- place the config directory on the classpath to access configuration files -->
    <classpath type="dir" location="config"/>
    <classpath type="dir" location="dtd"/>

    <!-- load single or multiple external libraries -->
    <classpath type="jar" location="build/lib/*"/>
    <classpath type="jar" location="lib/*"/>

    <!-- entity resources: model(s), eca(s), group, and data definitions -->
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_promo.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_view.xml"/>
    
    <!-- <entity-resource type="eca" reader-name="main" loader="main" location="entitydef/eecas.xml"/> -->
    <entity-resource type="data" reader-name="coremtlseed" loader="main" location="data/BaseSalesMtlTypeData.xml"/>
    <entity-resource type="data" reader-name="coremtlseed" loader="main" location="data/BaseSalesMtlRoleTypeSeedData.xml"/>
    <entity-resource type="data" reader-name="coremtlseed" loader="main" location="data/BaseSalesMtlSecurityPermissionSeedData.xml"/>
    <entity-resource type="data" reader-name="coremtlseed" loader="main" location="data/BaseSalesMtlSecurityGroupSeedData.xml"/>
    <entity-resource type="data" reader-name="coremtlseed" loader="main" location="data/BaseSalesMtlSecurityGroupPermissionSeedData.xml"/>
    <entity-resource type="data" reader-name="coremtlseed" loader="main" location="data/BaseSalesMtlSeedData.xml"/>
    <entity-resource type="data" reader-name="coremtlseed" loader="main" location="data/BaseSalesMtlStatusSeedData.xml"/>
    <entity-resource type="data" reader-name="coremtldemo" loader="main" location="data/BaseSalesMtlSecurityGroupDemoData.xml"/>
    <entity-resource type="data" reader-name="coremtldemo" loader="main" location="data/BaseSalesMtlDemoData.xml"/>
    <!-- <entity-resource type="data" reader-name="coremtldemo" loader="main" location="data/BaseSalesMTLPortletDemoData.xml"/> -->
    <!-- service resources: model(s), eca(s) and group definitions -->
    <service-resource type="model" loader="main" location="servicedef/services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_sup.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_distributor.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_supervisor.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_withoutacctrans.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_agreement.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_promo.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_report.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_requirement.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_content.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_route.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_customer.xml"/>
    <!--
    <service-resource type="eca" loader="main" location="servicedef/secas.xml"/>
    <service-resource type="group" loader="main" location="servicedef/groups.xml"/>
    -->
    <service-resource type="eca" loader="main" location="servicedef/secas.xml"/>
    <service-resource type="eca" loader="main" location="servicedef/secas_withoutacctrans.xml"/>

    <test-suite loader="main" location="testdef/BaseSalesMtlTests.xml"/>

    <!-- web applications; will be mounted when using the embedded container -->
    <webapp name="basesalesmtl"
        title="BaseSalesMtl"
        server="default-server"
        location="webapp/basesalesmtl"
        base-permission="BASESALESMTL"
        mount-point="/basesalesmtl" 
        app-bar-display="false"/>
    <webapp name="basesalesmtlresources"
        title="BaseSalesMtl"
        server="default-server"
        location="webapp/basesalesmtl/resources"
        base-permission="BASESALESMTL"
        mount-point="/salesmtlresources"
        app-bar-display="false"/>
</ofbiz-component>
