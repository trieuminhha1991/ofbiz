<?xml version="1.0" encoding="UTF-8"?>

<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
	<description>Search Services</description>
	<vendor></vendor>
	<version>1.0</version>

	<service name="indexProducts" engine="java" location="com.olbius.elasticsearch.services.ProductServices" invoke="indexProducts">
		<attribute name="productStoreId" mode="IN" type="String" optional="false" />
		<attribute name="unCommittedDocsLimit" mode="IN" type="Integer" optional="true" />
	</service>

	<service name="deleteIndexProducts" engine="java" location="com.olbius.elasticsearch.services.ProductServices" invoke="deleteIndexProducts">
		<attribute name="productStoreId" mode="IN" type="String" optional="false" />
	</service>

	<!-- <service name="indexProduct" engine="java" location="com.olbius.elasticsearch.services.ProductServices" invoke="indexProduct"> <attribute name="productId" 
		mode="IN" type="String" optional="false"/> </service> -->

	<service name="searchProducts" engine="java" location="com.olbius.elasticsearch.services.ProductServices" invoke="searchProducts">
		<attribute name="productStoreId" mode="IN" type="String" optional="false" />
		<attribute name="prodCatalog" mode="IN" type="String" optional="true" />
		<attribute name="keyword" mode="IN" type="String" optional="true" />
		<attribute name="start" mode="IN" type="Integer" optional="true" />
		<attribute name="rows" mode="IN" type="Integer" optional="true" />
		<attribute name="result" mode="OUT" type="List" optional="false" />
		<attribute name="count" mode="OUT" type="Long" optional="false" />
	</service>

	<service name="indexPotentialCustomers" engine="java" location="com.olbius.elasticsearch.customer.CustomerServices" invoke="indexPotentialCustomers">
		<attribute name="indexName" mode="IN" type="String"/>
	</service>
	
	<service name="indexCustomers" engine="java" location="com.olbius.elasticsearch.customer.CustomerServices" invoke="indexCustomers">
		<attribute name="indexName" mode="IN" type="String"/>
	</service>
	<service name="indexProducts2" engine="java" location="com.olbius.elasticsearch.product.ProductServices" invoke="indexProducts">
	</service>

	<service name="indexPartyCustomers" engine="java" location="com.olbius.elasticsearch.customer.CustomerServices" 
	invoke="indexPartyCustomers">
		<attribute name="indexName" mode="IN" type="String"/>
	</service>
	<service name="deleteIndex" engine="java" 
	location="com.olbius.elasticsearch.customer.CustomerServices" invoke="deleteIndex">
		<attribute name="indexName" mode="IN" type="String"/>
	</service>
	
	<service name="indexAPartyCustomer" engine="java" location="com.olbius.elasticsearch.customer.CustomerServices" 
	invoke="indexAPartyCustomer">
		<attribute name="indexName" mode="IN" type="String"/>
		<attribute name="partyId" mode="IN" type="String"></attribute>
		<attribute name="latitude" mode="IN" type="Double"></attribute>
		<attribute name="longitude" mode="IN" type="Double"></attribute>
	</service>

	<service name="updateCoordinates" engine="java" location="com.olbius.elasticsearch.customer.CustomerServices" invoke="updateCoordinates" transaction-timeout="7200">
		
	</service>

	<service name="loadOutletAddress2File" engine="java" 
		location="com.olbius.elasticsearch.customer.CustomerServices" invoke="loadOutletAddress2File" transaction-timeout="7200">
		<attribute name="filename" mode="IN" type="String"></attribute>
	</service>

	<service name="updateCoordinateOfACustomer" engine="java" 
	 location="com.olbius.elasticsearch.customer.CustomerServices" invoke="updateCoordinateOfACustomer" transaction-timeout="20">
		<attribute name="partyId" mode="INOUT" type="String"></attribute>
	</service>

	<service name="updateCoordinatesFromExtenalJSON" engine="java" 
	 location="com.olbius.elasticsearch.customer.CustomerServices" invoke="updateCoordinatesFromExtenalJSON" transaction-timeout="2000">
		<attribute name="list" mode="IN" type="String"></attribute>
	</service>

	<service name="queryCoordinates" engine="java"
		 location="com.olbius.elasticsearch.customer.CustomerServices" invoke="queryCoordinates" transaction-timeout="10">
		<attribute name="partyId" mode="IN" type="String"></attribute>
		 <attribute name="latitude" mode="OUT" type="Double"></attribute>
		 <attribute name="longitude" mode="OUT" type="Double"></attribute>

	</service>
</services>
